function ajaxLogins(){
	var email = document.ajaxLoginForms.email.value;
	var password = document.ajaxLoginForms.pwd.value;
	var verify = document.ajaxLoginForms.verify.value;
	var remember = document.ajaxLoginForms.remember.checked;
	if(email=='' || password==''){
		$('.formTitle span').html('邮箱和密码不能为空！').show('fast');
		return false;
	}
	$.post('http://www.lanjingtmt.com/index.php?app=home&mod=Public&act=doAjaxLogin',{email:email,password:password,remember:remember,verify:verify},function(txt){
		json = eval('('+txt+')');
		//登录成功
		if(json.status==1){
			$('.formTitle span').html('登录成功，页面跳转中...').show('fast');
			window.location.reload();
			//window.location.href='http://www.lanjingtmt.com/weibo';
		}else{
			$('.formTitle span').html(json.message).show('fast');
			//alert(json.status +'-'+json.message );
		}
	});
	return false;
}
</script> 
