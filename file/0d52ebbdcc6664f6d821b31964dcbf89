        $("ul.in-new-zhuanji li h3").mouseover(function(){
            var index = ($(this).index("h3"));
            switch(index){
              case 0:
                $("ul.in-new-zhuanji li:eq(0)").animate({top:"0px"},200);
                $("ul.in-new-zhuanji li:eq(1)").animate({top:"0px"},200);
                $("ul.in-new-zhuanji li:eq(2)").animate({top:"0px"},200);
              break;
              case 1:
                $("ul.in-new-zhuanji li:eq(0)").animate({top:"-116px"},200);
                $("ul.in-new-zhuanji li:eq(1)").animate({top:"0px"},200);
              break;
              case 2:
                $("ul.in-new-zhuanji li:lt(2)").animate({top:"-116px"},200);
              break;
            }
        });
    });
</script> 
