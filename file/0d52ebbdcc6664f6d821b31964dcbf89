                    function pub_say(newsid, pid){
                        //2014.12.27 可以发表匿名评论
                		// if(!_MID_){
                		// 	if(confirm("您还未登陆,马上登陆?")){
                		// 		ui.quicklogin();
                		// 		//$(window).scrollTop(0);
                		// 		//$("#loginCont").show();
                		// 		return false;
                		// 	}
                		// }
                        if (pid != 0){
                        var content = $("[data='rep_" + pid + "']").val();
                        } else {
                        var content = $("#content").val();
                        }
                        var news_id = 2547;
                        if (content.length < 5){
                        alert("请输入更多内容哦！");
                                return false;
                        }
                        if ($("#ruid").length > 0){
                        var ruid = $("#ruid").val();
                        } else {
                        var ruid = 0;
                        }
                        $("#content").val("");
                                $("[data='rep_" + pid + "']").val("");
                                $.post("http://www.lanjingtmt.com/index.php?app=news&mod=Index&act=sayDo",
                                {content:content, news_id:news_id, pid:pid, ruid:ruid},
                                        function(text){
                                        if (pid != 0){ //次级回复
                                        var kkkk = $('<li>'
                                                + '<div class="userFace">'
                                                + '<img src="' + text.data.user.face + '" alt="' + text.data.user.uname + '"/>'
                                                + '</div>'
                                                + '<div class="commtCont02">'
                                                + '<p><a href="' + text.data.user.space + '" class="blueName">' + text.data.user.uname + '</a>：' + text.data.content + '</p>'
                                                + '<p>'
                                                + '<span class="greyCo">' + text.data.time + '</span>'
                                                + '<span class="moreLink greyCo replyCommt" onclick="reComment(' + pid + ',1,&#39;' + text.data.user.uname + '&#39;)">回复</span>'
                                                + '</p>'
                                                + '</div>'
                                                + '</li>').parseEmotion();
                                                kkkk.prependTo($("[data='other_" + pid + "']"));
                                        } else { //第一级回复
                                        //2014.12.27匿名用户可以发表评论
                                        //匿名用户没有org
                                        if(text.data.user.org != ''){
                                            text.data.user.org = "("+text.data.user.org+")"; 
                                        }
                                        //匿名用户没有space
                                        if(text.data.user.space != ''){
                                            text.data.user.space = "href=\""+text.data.user.space+"\"";
                                        }
                                        var kkkk = $('<li class="hotCommt" data="' + text.data.id + '">'
                                                + '<div class="userFace">'
                                                + '<img src="' + text.data.user.face + '" alt="' + text.data.user.uname + '"/>'
                                                + '</div>'
                                                + '<div class="commtCont">'
                                                + '<p><a class="blueName"' + text.data.user.space + '>' + text.data.user.uname + '</a><span class="greyCo">' + text.data.user.org + '</span></p>'
                                                + '<p>' + text.data.content + '</p>'
                                                + '<p><span class="greyCo">' + text.data.time + '</span>'
                                                + '<span class="moreLink">'
                                                + '<a href="javascript:void(0);" onclick="setdc(this,' + text.data.id + ',' + text.data.ding + ',&apos;d&apos;)">顶(' + text.data.ding + ')</a><a href="javascript:void(0);" onclick="setdc(this,' + text.data.id + ',' + text.data.cai + ',&apos;c&apos;)">踩(' + text.data.cai + ')</a><a class="hehe" data="dian_' + text.data.id + '" href="javascript:void(0)">点评(' + text.data.countsay + ')</a>'
                                                + '</span>'
                                                + '</p>'
                                                + '<div style="display:none">'
                                                + '<i class="dianp-kuang-sjx"></i>'
                                                + '<div class="moreReply">'
                                                + '<div class="yourReply">'
                                                + '<textarea id="nowCommt" data="rep_' + text.data.id + '" name="nowcomment" title="说点什么吧" placeholder="说点什么吧"></textarea>'
                                                + '</div>'
                                                + '<button class="sbmtBtn" onclick="pub_say(2547,' + text.data.id + ')">回 复</button>'
                                                + '<ul class="otherReply" data="other_' + text.data.id + '">'
                                                + '</ul>'
                                                + '</div>'
                                                + '<i class="closeDiv-btn" title="点击关闭">关 闭</i>'
                                                + '</div>'
                                                + '</div>'
                                                + '</li>').parseEmotion();
                                                kkkk.prependTo($("#comments_list"));
                                        }
                                        },
                                        'json'
                                        );
                        }
                function reComment(pid, ruid, uname){
                $("[data='rep_" + pid + "']").val("").focus().val("回复 @" + uname + " ");
                        $(".yourReply").append('<input type="hidden" id="ruid" value="' + ruid + '" />');
                }

                function getSayPage(pid, o){
                if (!$(o).attr('class') || $(o).attr('class').indexOf('hover') == - 1){
                getSay(pid, $(o).attr('pagenum'));
                }
                }
                //取得评论列表
                function getSay(pid, p){
                var news_id = '2547';
                        $.post("http://www.lanjingtmt.com/index.php?app=news&mod=Index&act=getSays", {news_id:news_id, pid:pid, p:p, listnum:15}, function(txt){
                        var list = '';
                                $.each(txt.comment, function(index, percom){
                                list += getListPart(percom, pid);
                                });
                                if (pid == 0){
                        if (txt.page){
                        $(".page").html(txt.page);
                        }
                        $('#comments_list').html(list).parseEmotion();
                                //设置表情
                                for (i in txt.list){
                        setSinaEmotion('bind_emotion_' + txt.list[i]['id'], 'say_content_' + txt.list[i]['id']);
                        }
                        } else{
                        alert(pid);
                                $('#other_' + pid).html(list);
                        }
                        },
                                'json');
                }
                function getListPart(data, pid){
                if (pid == 0){
                if (data.childCommentsList.length > 0){
                var childcom = ' ';
                        $.each(data.childCommentsList, function(index, child){
                        childcom += '<li>'
                                + '<div class="userFace">'
                                + '<img src="' + child.user.face + '" alt="' + child.user.uname + '"/>'
                                + '</div>'
                                + '<div class="commtCont02">'
                                + '<p><a href="' + child.user.sapce + '" class="blueName">' + child.user.uname + '</a>：' + child.content + '</p>'
                                + '<p>'
                                + '<span class="greyCo">' + child.time + '</span>'
                                + '<span class="moreLink greyCo replyCommt" onclick="reComment(' + pid + ',1,&#39;' + child.user.uname + '&#39;)">回复</span>'
                                + '</p>'
                                + '</div>'
                                + '</li>';
                        });
                }
                var org = ' ';
                        if (data.user.org){
                var org = '<span class="greyCo">(' + data.user.org + ')</span>';
                }
                var html = '<li class="hotCommt" data="' + data.id + '">'
                        + '<div class="userFace">'
                        + '<img src="' + data.user.face + '" alt="' + data.user.uname + '"/>'
                        + '</div>'
                        + '<div class="commtCont">'
                        + '<p><a class="blueName" href="' + data.user.space + '">' + data.user.uname + '</a>' + org + '</p>'
                        + '<p>' + data.content + '</p>'
                        + '<p><span class="greyCo">' + data.time + '</span>'
                        + '<span class="moreLink">'
                        + '<a href="javascript:void(0);" onclick="setdc(this,' + data.id + ',' + data.ding + ',&apos;d&apos;)">顶(' + data.ding + ')</a><a href="javascript:void(0);" onclick="setdc(this,' + data.id + ',' + data.cai + ',&apos;c&apos;)">踩(' + data.cai + ')</a><a class="hehe" data="dian_' + data.id + '" href="javascript:void(0)">点评(' + data.countsay + ')</a>'
                        + '</span>'
                        + '</p>'
                        + '<div style="display:none">'
                        + '<i class="dianp-kuang-sjx"></i>'
                        + '<div class="moreReply">'
                        + '<div class="yourReply">'
                        + '<textarea id="nowCommt" data="rep_' + data.id + '" name="nowcomment" title="说点什么吧" placeholder="说点什么吧"></textarea>'
                        + '</div>'
                        + '<button class="sbmtBtn" onclick="pub_say(2547,' + data.id + ')">回 复</button>'
                        + '<ul class="otherReply" data="other_' + data.id + '">'
                        + childcom
                        + '</ul>'
                        + '</div>'
                        + '<i class="closeDiv-btn" title="点击关闭">关 闭</i>'
                        + '</div>'
                        + '</div>'
                        + '</li>';
                }
                return html;
                }
                function setdc(t, id, num, type){
                if ($(t).attr('disable') == 'yes'){
                alert('您已经' + (type == 'd'?'顶':'踩') + '过该条评论了');
                } else{
                $.post("http://www.lanjingtmt.com/index.php?app=news&mod=Index&act=setdc", {id:id, type:type}, function(data){
                if (data == 'success'){
                $(t).text((type == 'd'?'顶':'踩')
                        + '(' + (parseInt(num) + 1) + ')');
                        $(t).attr('disable', 'yes');
                } else{
                alert("出错了，等会儿再来吧！");
                }
                });
                }
                }
            </script> 
     <!--评论结束--> 
     <!--抓取评论内容--> 
     <ul id="comments_list"> 
     </ul> 
     <!--抓取评论结束--> 
