  <script>
$(function(){

	//右侧快速按钮当页面滚动到底部后向上移动
	$(window).scroll(function(){
       if($(this).scrollTop()>=$(document).height()-$(window).height()){
       	$("#rtFixedBar").animate({marginTop:"-266px"},"fast");
       }else{
       	$("#rtFixedBar").css("margin-top","-222px");
       }
	});
	

	//蓝鲸通道
	$("ul#channel li").click(function(){
		$(this).siblings('li').removeClass();
		$(this).addClass('current');
		return false;
	});
	//专题通道
	$("#in-zjcurrent h2").click(function(){
		$(this).parent('div').addClass('current');
		return false;
	});
	$('body').click(function(){
		$("#in-zjcurrent div").removeClass();
		$("ul#channel li").removeClass();
	});
        
    //    以上为判断右侧fixed定位Bar位置

	$("#loginLink").click(function(){
		$("#loginCont").toggle(200);
	});
	$(".closeXdiv").click(function(){
		$("#loginCont").fadeOut();
	})
	$("#day,#week,#month").mouseover(function(){
		$("#day,#week,#month").removeClass("current");
		$(this).addClass("current");
	});
	$("#day").mouseover(function(){
		$("#hotRank").siblings('ul').css("display","none");
		$("#dayRank").css("display","block");
	});
	$("#week").mouseover(function(){
		$("#hotRank").siblings('ul').css("display","none");
		$("#weekRank").css("display","block");
	});
	$("#month").mouseover(function(){
		$("#hotRank").siblings('ul').css("display","none");
		$("#monthRank").css("display","block");
	});


    //动画轮播
	var bigLi = $('#zh-indxMoveImgs li');
	var smallLi = $('#BnrMoveBtn li');
	var outDiv = $("#moveImgs");
	var nowIndex = 0;
	var nowZ = 1;
	var ulMarginLeft = $("#BnrMoveBtn").width();
	$("#BnrMoveBtn").css("margin-left", -ulMarginLeft / 2);
	smallLi.eq(0).addClass('current');
	bigLi.eq(0).css("z-index","2");
	smallLi.mouseover(function(){
		bigLi.clearQueue();
		nowIndex = $(this).index();
		bigLi.eq(nowIndex).css({
		"opacity":'0',
		"z-index":++nowZ
	}).animate({
		"opacity":"1"
	},700);
	smallLi.removeClass('current');
		$(this).addClass('current');
	});

	function autoMove(){
		if(nowIndex==smallLi.length){
			nowIndex = 0;
		}
		if(nowIndex==-1){
			nowIndex = smallLi.length-1;
		}
		bigLi.eq(nowIndex).css({
			"opacity":'0',
			"z-index":++nowZ
		}).animate({
			"opacity":"1"
		},700);
		smallLi.removeClass('current');
		smallLi.eq(nowIndex).addClass('current');
	}
	var timer = setInterval(function(){nowIndex++;autoMove()},3500);
	outDiv.mouseover(function () {
		clearInterval(timer);
		$("#indxPreBtn,#indxNxtBtn").css("opacity","0.8")
	}).mouseout(function () {
		timer = setInterval(function(){nowIndex++;autoMove()},3500);
		$("#indxPreBtn,#indxNxtBtn").css("opacity","0.2")
	});
	$("#indxNxtBtn").click(function(){
		nowIndex++;autoMove();
	});
	$("#indxPreBtn").click(function(){
		nowIndex--;autoMove();
	});
	});
    //动画轮播结束！
    
    //去掉百度统计图标
    //$("#cnzz").hide();
    //$(".in-footerb a").remove();
	
</script> 
  <script>
            var sina_text = $(".content_p");
            sina_text.parseEmotion();
    $('#beSmall').click(function(){
    var font_size = $('#pageTxt p,#pageTxt span').css('font-size');
            font_size = font_size.substring(0, font_size.toString().length - 2);
            var now = Number(font_size) - 2;
            $('#pageTxt p,#pageTxt span').css("font-size", now + "px");
    });
            $('#beBig').click(function(){
    var font_size = $('#pageTxt p,#pageTxt span').css('font-size');
            font_size = font_size.substring(0, font_size.toString().length - 2);
            var now = Number(font_size) + 2;
            $('#pageTxt p,#pageTxt span').css("font-size", now + "px");
    });
            $('.hehe').live("click", function(e){
				$(e.target).parent().parent().next().toggle();
			});
            $(".closeDiv-btn").live("click", function(e){
    $(e.target).parent().toggle();
    });
            $('.logRegInput,.validate').placeholder();
            $('.biaoqing-sbmtBtn i').mouseover(function(){
    this.style.backgroundPosition = "-108px -212px";
    }).mouseout(function(){
    this.style.backgroundPosition = "-85px -212px";
    });
</script> 
