                        success :   function(msg){
                            
                            if(msg == 'OK'){
                                $.cookie('dz_'+ac+'_'+t+'_'+id, true, {expires: 1} );
                                
                                var oldNum = $this.siblings('.dianzannumber').html();
                                    
                                if(t == 'p'){
                                    $this.siblings('.dianzannumber').html( parseInt(oldNum)+1);
                                }else{
                                    $this.siblings('.dianzannumber').html( parseInt(oldNum)-1);
                                }
                                
                            }else{
                                showError('请刷新页面重试');
                            }   
                        }
                   })     

            });
            

            
            $(document).on('click', '.reply-in-floor', function(){
                location.hash = 'tijiao';
                $('.addComment').focus();
                $('.addComment').val('');
                // 父辈中的同辈元素author-name
                var html = $(this).parent().siblings('.author-name').html();
                // console.log(html);
                // var html = $(this).siblings('.author-name').html();
                html = '回复 '+html+" :\n\r";
                $(document).find('.addComment').attr('placeholder',html);
                $(document).find('.addComment').attr('replyuserid',$(this).attr('userid'));

                // 回复文本框定位
                $("html,body").animate({scrollTop:$(document).find('.commentForm').offset().top},500);

            });
            
            /*楼中楼回复*/
            $('.addCommentSub').click(function(){
                
             
                var comment = $(this).parent().siblings('.comment');
                var html = $(this).siblings('.addComment').val();

                
                var id =  $(this).attr('data-id');
                replyuserid = $(this).siblings('.addComment').attr('replyuserid');


                if(!html.length){
                    showError('请输入评论');
                }else{
                    $.ajax({
                        data  : { pk_LEfvlwC3 : html, id : id, replyuserid : replyuserid},
                        url   :   '/Article/addAnswer',
                        type  : 'POST',
                        dataType : 'json',
                        success :   function(msg){

                            if( msg.status){
                                
                                        var floor='';
                                        floor += '<div class="row lzl text-666" id="'+msg['id']+'">';
                                        floor += '      <div class="col-md-1 text-center" style="width:4%">';
                                        floor += '          <span  class="glyphicon glyphicon-triangle-top dz-t"></span>';
                                        floor += '          0';
                                        floor += '      </div> ';
                                        floor += '      <div class="col-md-11 font-13">';
                                        // floor += '         <p class="mb15"> ';
                                        // floor += '            '+msg.content+'';
                                        
                                        floor += '              <a class="text-main author-name" href="/u/'+msg['from_userid']+'">'+msg['from_username']+'</a>';
                                        if(msg['from_userblog'] == 1){
                                            floor += '<i class="v"></i>';
                                        }
                                        // 是否指定回复人
                                        if(msg['to_userid']!='0'){
                                            floor +='               &nbsp;回复&nbsp;<a href="/u/'+msg['to_userid']+'">'+msg['to_username']+'</a>';
                                        }
                                        if(msg['to_userblog'] == 1){
                                            floor += '<i class="v"></i>';
                                        }
                                        floor += '：';
                                        floor += '              <div>'+msg['content']+'</div>';

                                        // floor += '         </p>';
                                        floor += '         <div>';
                                        floor += '             <span class="mr10">#'+msg.count+'</span>';
                                        // floor += '             <a href="/u/" class="text-main author-name"></a>';
                                        // if(msg['blog'] == 1){
                                        //     floor += '<i class="v"></i>';
                                        // }
                                        floor += '             <div class="dot-sm dot  mr5 ml5"></div>';
                                        floor += '              '+time_trans(msg.created_at)+'';
                                        floor += '             <div class="dot-sm dot mr5 ml5"></div>';
                                        if(msg['from_userid'] == ""){
                                            floor += '            <a href="javascript:void(0);" class="text-main" onclick="del('+msg['id']+')">删除</a>';
                                        }else{
                                            floor += '            <a href="javascript:void(0);" class="text-main reply-in-floor" userid="">回复</a>';
                                        }
                                        floor += '        </div>';
                                        floor += '     </div> ';
                                        floor += '</div>  ';
                                        floor += '<hr>';
                                    
                                    comment.append(floor);
                                    
                            }else if(msg.desc == 'LEN_ERROR'){
                                showError('输入内容长度有误');
                            }else if(msg.desc == 'LOGIN'){
                                if( window.screen.width <  768 ){
                                	showError('请先登陆');
                                    setTimeout( '_redirect( "/User/plogin" )', 2000 );

                                }else{
                                	 $('#login-modal').modal();
                                }
                            }else if(msg.desc == 'ERROR_S'){
                                showError('请刷新页面，勿重复提交');
                            }else if(msg.desc == 'EMAIL_SIGN'){
                                showError('您的邮箱尚未激活，无法进行评论和添加问答文章');
                                setTimeout( '_redirect( "/u/email" )', 2000 );
                            }else if(msg.desc == 'DISABLED'){
                                showError('您的账号被封禁，请联系管理员');
                            }else{
                                showError('请刷新页面重试');
                            }
                            $('.addComment').val('');
                        }
                   })  ;              
                }
            });
        });
        
        // 删除评论
        function del(id){
            if(confirm("你确定删除评论嘛?删除后不能恢复哦!")){
                $.ajax({
                    data: { id : id},
                    url: '/Article/del',
                    type: 'POST',
                    success: function(msg){
                        if(msg=="OK"){
                            $("#"+id+"+hr").remove();
                            $("#"+id).remove();
                        }else if(msg == "REPLY_EXISTS"){
                            alert("评论已删除哦!");
                        }else if(msg == "NOT_ISUSER"){
                            alert("你怎么删人家的呢?");
                        }else{
                            alert("唉啊!出错了哦!");
                        }
                    }
                });
            }
        }
    </script>
 </body>
</html>