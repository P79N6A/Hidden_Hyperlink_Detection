	var pop = {
		layerShow: function(ev, layerName) {
			if($("input:first"))$("input:first").focus().blur();
			var isIE = $.browser.msie && !$.support.opacity,
				isIE6 = isIE && $.browser.version < 7;
			if(!$("#Overlay").length > 0) {
				if(!isIE6) {
					$("body").append("<div id='Overlay' style='background:#000;cursor: pointer;display: block;filter:alpha(opacity=15);opacity: 0.15;height:100%;width:100%; position: fixed; left: 0;top: 0;z-index:9999998'></div>")
				} else {
					$("html").css({
						"height": "100%"
					});
					$("body").css({
						"height": "100%"
					});
					$("body").append("<div class='overlay' id='Overlay'><iframe  frameborder=0 id='frame1' style='filter:alpha(opacity=85);opacity: 0.15;height:100%;width:100%;'></iframe></div>")
				}
			} 
			$("#Overlay").show();
			var od = $("#" + layerName);
			var itop = (document.documentElement.clientHeight - od.height()) / 2;
			var ileft = (document.documentElement.clientWidth - od.width()) / 2;
			if(!isIE6) {
				od.css("top", itop).css("left", ileft).css("position", "fixed").css("z-index", "9999999").show();
				od.addClass("chagetop");
			} else {
				od.css("position", "absolute").css("top", itop).css("left", ileft).show().css("z-index", "9999999");
			}
		},
		closeLayer: function(layerName) {
			$("#" + layerName).hide();
			$("#Overlay").hide();
		}
	}
