<script type="text/javascript">
	$("#head-title").text("欢迎登录");
	$("#head-title").css("color", "#333");

	$(function () {

	    //自动登录
	    $("#autoLoginFlag").bind("click", function () {
	            if(this.checked){
	                $("#autoLoginMode").val("autoLoginWithinOneWeek");
	                 warningTip();
	            }else{
	                $("#autoLoginMode").val("");
	                $("#warningTip").hide();
	            }
	    })
	    $(".loginBoxClose").bind("click",function(){
	            $(".login-box-wrap").remove();
	    })
	    // 同意一账通升级
	    $("#agreeChoose").bind("click", function () {
	            if(this.checked){
	                $("#agreeGomeHide").val(true);
	            }else{
	                $("#agreeGomeHide").val("");
	            }
	    })
	    $(".select-segments").gclickshow({hbox: ".segmentslist"});

	    $("#agreeGome").hide();
	    hideTips();

	    //当前用户没有选择情况下,鼠标在弹出框区域内,显示，区域外消失
	    $("#tip_con").mouseover(function () {
	            clearInterval(hideTimeOut);
	        }).mouseout(function () {
	            hideTips();
	    })
	    //点击icon，弹出框隐藏/显示
	    $("#tip_icon").bind("click", function () {
	        clearInterval(hideTimeOut);
	        $('.clear-btn').hide();
	        if (!hideOp) {
	            hideOp = true;
	            $("#tip_con").stop(false, true).hide();
	            $('.clear-btn').show();
	        } else {
	            hideOp = false;
	            $("#tip_con").stop(false, true).show();
	            $('.clear-btn').hide();
	            hideTips();

	        }
	});

	//点击关闭按钮，弹出框隐藏
	$("#tip_clo").bind("click", function () {
	    $("#tip_con").stop(false, true).hide();
	    hideOp = true;
	});

	//用户做出选择之后，需要调用方法
	$("input[name='gomeOrCoo8']").bind("click", function () {
	    hideOp = true;
	    $("#tip_con").fadeOut(1000);
	    $('.clear-btn').show().fadeIn(1000);
	})

	var gomeOrCoo8LoginValue = '';
	    if ('coo8' == gomeOrCoo8LoginValue) {
	        $("#coo8Radio").attr("checked", "checked");
	    } else {
	        $("#gomeRadio").attr("checked", "checked");
	    }
	});

	var preLogin = '';
	preLogin = function () {
	    return true;
	};
	$("#"+ele_loginName).blur(function () {
	        if($(this).val()!=""){
	                 isShowConflictOrSnsTips();
	        }else{
	                $("#agreeGome").hide();
	                $("#agreeGomeHide").val("");
	        }
	});

	$("#"+ele_loginPassword).focus(function () {  focusPWInput();});
	$("#"+ele_loginPassword).blur(function () {  blurPWInput(); });
	$("#authenticCodeForLogin").focus(function () {  focusCaptchaInput() });


	/* 二维码登录javascript */
	$(document).ready(function () {
	    $('#loginName').keyup(function () {
	        $('#gome-coo8-tips').hide();
	    });
	    $('#loginName').focus(function () {
	        $('#gome-coo8-tips').hide();
	    });
	    moblieBarcode(true);
	    
		$('.loginHead .loginTab').eq(0).find("a").addClass("cur");
		$(".loginBox .login-wrap").eq(0).show();
	    //二维码、pc切换登录
	    $('.loginHead .loginTab').click(function () {
	        var index = $(this).index();
	        var content = $(".loginBox .login-wrap")
	        $('.loginHead .loginTab a').removeClass('cur');
	        $(this).find("a").addClass("cur");
	        content.hide();
	        content.eq(index).show();
	        if (index == 0) {
	            moblieBarcode(true);
	        } else {
	            moblieBarcode(false);
	        }
	    });
	    //第三方登录方式 展开效果
	    $('.play_icon a').each(function () {
	        var i = $(this).index();
	        if (i > 4) {
	            $('.play_icon a').eq(i).addClass("hide");
	        }
	    })
	    hidePlay();

	    $('.more').click(function () {
	        if ($(this).hasClass("active")) {
	            $(this).removeClass("active");
	            hidePlay()
	        } else {
	            $(this).addClass("active");
	            showPlay();
	        }
	    });
	    //input 的默认文字效果
	    $('input.txt').each(function () {
	        defaultVal($(this));
	        $(this).removeClass('txt-focus').removeClass('txt-error');
	    });
	    $('input.txt').keyup(function () {
	        defaultVal($(this));
	    });
	    $('input.txt').focus(function () {
	        allTipHide();
	        $(this).addClass('txt-focus');
	        $('input.txt').each(function () {
	            $(this).removeClass('txt-error').removeClass('txt-focus');
	        });
	        $(this).addClass('txt-focus');
	        defaultVal($(this));
	    });
	    $('input.txt').blur(function () {
	        $(this).removeClass("txt-focus");
	        defaultVal($(this));
	    });

	    clearBtnKeyUp(ele_loginName);
	    clearBtnBind(ele_loginName);
	    clearBtnKeyUp(ele_loginPassword);
	    clearBtnBind(ele_loginPassword);

	});

	timerchange(ele_loginName);
	timerchange(ele_loginPassword);
	$("#"+ele_loginName).focus(function () {  timerchange(ele_loginName);});

	$("#barcodeId .qrcode-Image").on("mouseenter",function () {
	    $(this).stop().animate({left: '0px'},function(){
	        $(".qrcode-help").show();
	    })
	}).off("mouseleave").on("mouseleave",function () {
	    $(this).stop().animate({left: '75px'});
	    $(".qrcode-help").hide();
	});
</script>
