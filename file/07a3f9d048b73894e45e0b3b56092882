//---Begin Add by Meggy for weixin hiding list_block div---
function isWeiXin(){
    var ua = window.navigator.userAgent.toLowerCase();
    if(ua.match(/MicroMessenger/i) == 'micromessenger'){
         $("#list_block").hide();
    }
}
isWeiXin();
//---End Add by Meggy for weixin hiding list_block div---

$(document).ready(function(){
  $(".advbox").show();
  $(".advbox").animate({top:"50%"},1000);
  $(".closebtn").click(function(){
    $(".advbox").fadeOut(500);
  })
  $(".advbox").delay(5000).fadeOut(500);  
})
