<script type="text/javascript" src="./images/boc2013_jquery-min.js"></script>
<script type="text/javascript" src="./images/boc2013_swipe.js"></script>
<script type="text/javascript" src="./images/boc2013_goTop.js"></script>
<script type="text/javascript" src="/head.js" ignoreapd="1"></script>
<script>
$(document).ready(function(){
	$(document).ready(function(){
		var allpici = 5;
		$(".PL_SHOW_CLASS").click(function(){
			var plvalue = $(this).attr("plvalue");
			//得到当前的UL
			var obj = document.getElementById("PL_UL_SHOWHIDE_"+plvalue);
			//得到当前的批次
			var plpici = parseInt($(obj).attr("plpici"));
			var plnum = parseInt($(obj).attr("plnum"));
			//得到数组信息
			var pl_cur_array = null;
			eval("pl_cur_array=pl_ljz_array_"+plvalue);
			//分析当前是否为 第 4 批次，如果是，则返回
			if(plpici == 4)
				return false;
			//分析是否还有足够的信息
			var starti = (plpici-1)*plnum;
			var endi = starti + plnum - 1;
			if(starti >= pl_cur_array.length)
				return false;
			if(endi >= pl_cur_array.length)
				endi = pl_cur_array.length-1;
			//开始初始化信息
			for(var i=starti;i<=endi;i++){
				$(obj).append('<li class="PL_ULLI_CLASS_'+plvalue+'_'+plpici+'"><a href="'+pl_cur_array[i][1]+'">'+pl_cur_array[i][0]+'</a>');
			}
			//修改下一次批次
			$(obj).attr("plpici",(plpici+1));
			//分析是否修改 PL_HIDE_CLASS 的属性
			var hideclassobj = $(".PL_HIDE_CLASS[plvalue='"+plvalue+"']").eq(0);
			if(!hideclassobj.hasClass("hide2"))
				hideclassobj.removeClass("hide").addClass("hide2");

			//分析当前向下箭头是否到底，如果是，修改属性
			var plinit = parseInt($(obj).attr("plinit"));
			var plcurlinum = $(obj).find("li").length;
			var shownum = plcurlinum - plinit;
			var alltotle = pl_cur_array.length;
			if(shownum >= alltotle)
				$(this).removeClass("show").addClass("show2");
		});
		$(".PL_HIDE_CLASS").click(function(){
			var plvalue = $(this).attr("plvalue");
			//得到当前的UL
			var obj = document.getElementById("PL_UL_SHOWHIDE_"+plvalue);
			//得到当前的批次
			var plpici = parseInt($(obj).attr("plpici"));
			var plnum = parseInt($(obj).attr("plnum"));
			//如果当前是第一个批次，直接返回
			if(plpici == 1)
				return false;
			//得到数组信息
			$(".PL_ULLI_CLASS_"+plvalue+"_"+(plpici-1)).remove();
			$(obj).attr("plpici",(plpici - 1));
			//分析是否到顶了
			var plinit = parseInt($(obj).attr("plinit"));
			var plcurlinum = $(obj).find("li").length;
			if(plinit == plcurlinum)
				$(this).removeClass("hide2").addClass("hide");
			var shownum = plcurlinum - plinit;
			//得到数组信息
			var pl_cur_array = null;
			eval("pl_cur_array=pl_ljz_array_"+plvalue)
			var alltotle = pl_cur_array.length;
			if(shownum<alltotle){
				var showclassobj = $(".PL_SHOW_CLASS[plvalue='"+plvalue+"']").eq(0);
				if(!showclassobj.hasClass("show"))
					showclassobj.removeClass("show2").addClass("show");
			}
		});
	});
	/*轮播图*/
	var dotlist = $(".dot");
	var aContent = $('#vTit01 p');
	var currentIndex=0;
	var sliderIndex = new Swipe(document.getElementById('slider_banner'), {
		auto:5000,
		callback:function(e, i){
			setDotIndex(i);
		}
	});
	
	function setDotIndex(i) {
		for(var t=0; t<dotlist.length; t++) {
			dotlist[t].className = "dot";
		}
		dotlist[i].className = "dot current";
		
		for(var j=0; j<dotlist.length; j++) {
			aContent[j].className = "none";
		}
		aContent[i].className = "none normal";
	}
	
	for(var i=0; i<dotlist.length; i++) {
		dotlist[i].onclick=function () {
			var x = parseInt(this.getAttribute("index"), 10);
			setDotIndex(x);
			sliderIndex.slide(x, 300);
		};
	}
	
/*便捷服务*/	
	var sdotlist = $(".sdot");
	var scurrentIndex=0;
	var ssliderIndex = new Swipe(document.getElementById('serves_scroller'), {
		callback:function(e, i){
			setsDotIndex(i);
		}
	});
	
	function setsDotIndex(i) {
		for(var t=0; t<sdotlist.length; t++) {
			sdotlist[t].className = "sdot";
		}
		sdotlist[i].className = "sdot active";
	
	}
	
	for(var i=0; i<sdotlist.length; i++) {
		sdotlist[i].onclick=function () {
			var x = parseInt(this.getAttribute("index"), 10);
			setsDotIndex(x);
			ssliderIndex.slide(x, 1000);
		};
	}
})
//选项卡切换
function tabs(tabId, tabNum){
	$(tabId+' .tab_nav li').removeClass('selected');
	$(tabId+' .tab_nav li').eq(tabNum).addClass('selected');
	$(tabId+' .tab_content').hide();
	$(tabId+' .tab_content').eq(tabNum).show();
}
</script>

