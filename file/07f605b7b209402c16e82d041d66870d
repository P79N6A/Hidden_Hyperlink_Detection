$('#tabs').tabulous({effect: 'scale'});
    $("#divMsg").die().live("keydown", function (event) {
        if (event.keyCode == 13) {
            $("#btn1").trigger("click");
        }
    });
    $("#tou_img_box1").on('mouseover', function () {
        $("#changePicMsg1").css('display', 'block');
        $("#changePicMsg1").html("点击更换头像")
    })
    $("#tou_img_box1").on('mouseout', function () {
        $("#changePicMsg1").css('display', 'none');
    })
    
    $("#VIP_Gn").click(function(){
	if($(this).hasClass("VIP_Gn_a")){
		$(this).removeClass("VIP_Gn_a");
	}else{
		$(this).addClass("VIP_Gn_a");
	};
    });
    
    function openregAUser(value)
    {
        
        //活动报名
        if(value==1||value==2||value==5)
        {
            //C.html
            countCClick();
        }
        
        if(value==5)
        {
            //二维码报名
            $("#divMsgBackf").show();
            $("#div_code").show();
            return;
        }
        
        
        var id=""
        if(document.getElementById("userId"))
        {
            id=$("#userId").val()
        }
        else
        {
            id=""+"";
        }
        
        
        //判断是否登录
        if(id=="")
        {
            alert("请您先登录");
            if(IsPC())
            {
                document.body.id ="msgBody";
            }
            else
            {
                $('#indexmobleLogin').click()
            }
        }
        else
        {
            $("#formflag").val(value);
            
            
            var t=$("#extinfo").val();
            
            if(value==4)
            {
                t="请输入申请理由";
            }
            
            
            if(t==""||typeof(t)=="undefined")
            { 
               $("#form_content1").hide();
            }
            else
            {
               $("#form_content1").show();
               $("#form_content").attr("placeholder",t);
            }
            
            if(value==4)
            {
                $("#getverify").hide();
                $("#verify_text").hide();
                $("#verify_code").hide();
            }
            else
            {
                $("#getverify").show();
                $("#verify_text").show();
                $("#verify_code").show();
            }
            
            
            
            $("#formEnroll").show();
            $("#divMsgBackf").show();
        }
    }
    
    var reg_user_id=0;
    
    //报名
    function nextForm()
    {
        
        reg_user_id=0;
        
        var flag = $("#formflag").val();
        
        var name = $("#form_name").val();
        
        if(name=="")
        {
            alert("请输入您的姓名");
            return false;
        }
        
        var org=$("#form_org").val();
        if(org=="")
        {
            alert("请输入您的公司");
            return false;
        }
        
        var position=$("#form_position").val();
        if(position=="")
        {
            alert("请输入您的职位");
            return false;
        }
        
        var content=$("#form_content").val();
        
        var tt=$("#form_content").attr("placeholder");
        
        //如果有备注提示信息
        if(tt!="")
        {
            if(content=="")
            {
               alert(tt);
               return false;
            }
        }
        
        var mobile=$("#form_mobile").val();
        if(mobile=="")
        {
            alert("请输入您的手机号");
            return false;
        }
        
        if(!/^(13[0-9]|14[0-9]|15[0-9]|18[0-9])\d{8}$/i.test(mobile))
        {
            alert("请输入正确的手机号码");
            return false;
        }
        
        var email=$("#form_email").val();
        if(email=="")
        {
            alert("请输入您的邮箱");
            return false;
        }
        
        
        
        //var verify_code=$("#verify_code").val();
        
        /*if(verify_code=="")
        {
            alert("请输入与验证码");
            return false;
        }
        if(verify_code.length!=6)
        {
            alert("请输入与正确的验证码");
            return false;
        }*/
        
        /*var tttt=$("#VIP_Gn").attr("class");
        if(tttt=="VIP_Gn")
        {
            alert("请阅读并同意相关服务条款和隐私政策");
            return false;
        }*/
        

        
        $.ajax({
            url: "/Api/Campaign/regAUser",
            type: 'post',
            async: false,
            beforeSend:function()
            {
                
            },
            data: {name:name, org: org, content: content, position: position,mobile:mobile,email:email,item_id:$("#itemId").val(),flag:flag},
            dataType: 'json',
            success: function (data) {
                if (data['code'] == '000') {
                    reg_user_id=1;
                    if(flag==4)
                    {
                        alert(data['msg']);
                    }
                    if(flag==1)
                    {
                        alert(data['msg']);
                        window.location.reload(); 
                    }
                    
                } else {
                    alert(data['msg']);
                }
            }     
        });
        closeregAUser();
        
        //需要付费
        if((flag==2||flag==3)&&reg_user_id==1)
        {
            if(flag==3)
            {
                $("#order_price").text(""+"");
            }
            
            $("#formPaySel").show();
            $("#divMsgBackf").show();
        }
    }
    
    //关闭报名窗口
    function closeregAUser()
    {
        $("#formEnroll").hide();
        $("#divMsgBackf").hide(); 
    }

    function closePay()
    {
        $(".VIP_pay").hide();
        $("#divMsgBackf").hide(); 
        $("#formPay").hide();
    }
    function closePayFor()
    {
        $(".VIP_pay").hide();
        $("#divMsgBackf").hide(); 
        $("#formPaySel").hide();
        $(".VIP_wrap").hide();
    }
    var buy_success=0;
    
    //获得支付接口
    function gotoBuy(itemId)
    {
        $("#tItemId").val(0);
        var flag = $("#formflag").val();
        
        if(typeof(itemId)=="undefined")
        {
           itemId= $("#itemId").val();
        }
        else
        {
            $("#tItemId").val(itemId);
        }
        
        if(typeof(itemId)=="undefined")
        {
            itemId=-1;
        }
        $(".VIP_pay").show();
        $.ajax({
            url: "/Api/Order/getCwxpay",
            type: 'post',
            async: false,
            beforeSend:function()
            {
                
            },
            data: {itemId:itemId,flag:flag},
            dataType: 'json',
            success: function (data) {
                if (data['code'] == '200') {
                    $("#pay_image").attr("src",data['url']);
                    $("#a_orderId").val(data['orderId']);
                    $("#formPaySel").hide();
                    $("#formPay").show();
                    
                    buy_success=setInterval("queryOrder(false)",3000);
                    
                } else {
                    alert(data['msg']);
                }
            }     
        });
    }
    
    function con_go_to_buy()
    {
        $("#formflag").val(3);
        $("#order_price").text(""+"");
        $("#divMsgBackf").show();
        $("#formPaySel").show();
    }
    
    
    //查询订单是否成功
    function queryOrder(ifalert)
    {
       if(typeof(ifalert)=="undefined")
       {
           ifalert=true;
       }
        
        
       var id= $("#a_orderId").val();
       var flag = $("#formflag").val();
       var type="";
       if(flag>2)
       {
           type=1;
       }
       
       var itemId=$("#itemId").val();
       if(typeof(itemId)=='undefined')
       {
           itemId=$("#tItemId").val();
       }
       
       
       
       
       
       if(id==0)
       {
           return false;
           //cancelOrder();
       }
       else
       {
            $.ajax({
                url: "/Api/Order/queryCwxpay",
                type: 'post',
                async: false,
                beforeSend:function()
                {

                },
                data: {orderId:id,itemId:itemId,type:type},
                dataType: 'json',
                success: function (data) {
                    console.log(data);
                    if(data['code']=='200')
                    {
                        clearInterval(buy_success);
                        ifalert=true;
                    }
                    if(ifalert)
                    {
                        if (data['code'] == '200') {
                            if(flag>2)
                            {
                                alert("恭喜您成为会员，请退出后重新登录");
                            }
                            else
                            {          
                                window.location.href=updateUrl(window.location.href,"randomid");
                                alert("报名成功，请保持通讯畅通");
                            }
                        } else {
                            if(flag>2)
                            {
                               alert("支付失败，请重新申请。")
                            }
                            else
                            {
                                alert("支付失败，请到‘个人中心’->‘我的活动’继续支付");
                            }
                        }
                    }
                }     
            });
            if(ifalert)
            {
                $("#formPay").hide();
                $("#divMsgBackf").hide();
            }
        }
    }
    
    //支付失败
    function cancelOrder()
    {
        var flag = $("#formflag").val();
        if(flag>2)
        {
            alert("支付失败，请重新支付");
        }
        else
        {
            alert("支付失败，请到‘个人中心’->‘我的活动’继续支付");
        }
        
        $("#formPay").hide();
        $("#divMsgBackf").hide(); 
    }
    
    var clock="";
    //获取手机验证码
    function getVerifyCode(type)
    {
        //倒计时的obj
        var obj={};
        var obj_id="";
        if(type=="login")
        {
            obj=$("#waitSecond1");
            obj_id="waitSecond1";
        }
        else if(type=="update")
        {
            obj=$("#waitSecond2");
            obj_id="waitSecond2";
        }
        else if(type=="mobile_login")
        {
            obj=$("#waitSecond3");
            obj_id="waitSecond3";
        }
        else
        {
            obj=$("#waitSecond");
            obj_id="waitSecond";
        }
        
        
        var text=obj.text();
        var flag = $("#formflag").val();
        
        if(text!="")
        {
            return false;
        }
        else
        {   
            if(type=='login'){
                var form_mobile=$('#phone').val();
                flag=5;
            }
            else if(type=="update")
            {
                var form_mobile=$("#mobileNew").val();
                flag=6;
            }
            else if(type=="mobile_login")
            {
                var form_mobile=$("#MuserMobile").val();
                flag=5;
            }
            else{
                var form_mobile=$("#form_mobile").val();
            }
            if(form_mobile=="")
            {
                alert("请输入手机号码");
                return false;
            }
            
            if(!/^(13[0-9]|14[0-9]|15[0-9]|18[0-9])\d{8}$/i.test(form_mobile))
            {
                alert("请输入正确的手机号码");
                return false;
            }
            
            obj.text(60);
            clock=setInterval("setSecondText(\""+obj_id+"\")",1000);
            
            $.ajax({
                url: "/Api/Campaign/getVerifyCode",
                type: 'post',
                async: false,
                beforeSend:function()
                {
                    
                },
                data: {mobile:form_mobile,itemId:$("#itemId").val(),flag:flag},
                dataType: 'json',
                success: function (data) {
                    if (data['code'] == '200') {
                        alert(data['msg']);
                    } else {
                        alert(data['msg']);
                    }
                }     
            });
            
            
            
            
        }
  
    }
    //手机验证码登录
    function phoneLogin(){
        if($('#phone').val()!=''&&$('#mob_y').val()!=''){
            $.ajax({
                url: "/Api/User/loginByMobile",
                type: 'post',
                async: false,
                beforeSend:function()
                {
                    
                },
                data: {mobile:$('#phone').val(),code : $('#mob_y').val()},
                dataType: 'json',
                success: function (data) {
                    if (data['code'] == '200') {
                       location.reload();
                    } else {
                      alert(data.msg);  
                    }
                }     
            });
        }
    }
    function setSecondText(obj_id)
    {
       var obj=$("#"+obj_id);
       var text=obj.text();
       text=text-1;
       if(text==0)
       {
           obj.text("");
           clearInterval(clock);
       }
       else
       {    
           obj.text(text);
       }  
    }
    
    function updateUrl(url,key){
        var key= (key || 't') +'=';  //默认是"t"
        var reg=new RegExp(key+'\\d+');  //正则：t=1472286066028
        var timestamp=+new Date();
        if(url.indexOf(key)>-1){ //有时间戳，直接更新
            return url.replace(reg,key+timestamp);
        }else{  //没有时间戳，加上时间戳
            if(url.indexOf('\?')>-1){
                var urlArr=url.split('\?');
                if(urlArr[1]){
                    return urlArr[0]+'?'+key+timestamp+'&'+urlArr[1];
                }else{
                    return urlArr[0]+'?'+key+timestamp;
                }
            }else{
                if(url.indexOf('#')>-1){
                    return url.split('#')[0]+'?'+key+timestamp+location.hash;
                }else{
                    return url+'?'+key+timestamp;
                }
            }
        }
    }
    
    
    
