  <script>
        function stat(){
            $.ajax({
                url: "/Api/Stat/stat",
                type: 'post',
                data: {item_type : 'remarkLogin'},
                dataType: 'json',
                success: function (data) {
                    if(data.code=='000'){
                       
                    }
                },
            });
        }
         
         
        var sectionList=$("#div_MainCotent").find("section");
        
        //console.log(sectionList);
        //console.log(sectionList.eq(0).scrollTop());
        var lasttop=0;
        
        $(window).scroll(function ()
        {
            var top = $(document).scrollTop();
            
            var scrollTop = $(this).scrollTop();
            var scrollHeight = $(document).height();
            
            var windowHeight = $(this).height();
            var wer = scrollTop + windowHeight - scrollHeight;
             
            if(!IsPC())
            {
                //往上滑
                if(lasttop>=top)
                {
                   //$(".HEader_Zw").height(117);
                   //$(".indexHead").show();
                   //$(".indexSearch").show();
                   $(".hudong_nav").height(40);
                   $(".hudong_nav>ul>li").show();
                }
                else
                {
                   //$(".HEader_Zw").height(0);
                   //$(".indexHead").hide();
                   //$(".indexSearch").hide();
                   $(".hudong_nav").height(0);
                   $(".hudong_nav>ul>li").hide();
                }
            }
            lasttop=top;
            
            var i=0;
            var length=sectionList.length;
            var height=65;
            for(i=0;i<length;i++)
            {
                var t=sectionList.eq(i).height();
                height=height+t;
                if(top<height)
                {
                    break;
                }
            }
            //console.log(i);
            $(".mainZan").hide();
            $("div.hudong_nav").hide();
            if(IsPC())
            {
                sectionList.eq(i).find("div.mainZan").show();
            }
            else
            {
                sectionList.eq(i).find("div.hudong_nav").show();
            }
            var tItemId=sectionList.eq(i).find("input[name='tItemId']").eq(0).val();
            var tItemName=sectionList.eq(i).find("input[name='tItemName']").eq(0).val();
            var tItemBrief=sectionList.eq(i).find("input[name='tItemBrief']").eq(0).val();
            if(typeof(tItemId)!="undefined")
            {
                $('#itemId').val(tItemId);
                $("#itemName").val(tItemName);
                $("#itemBrief").val(tItemBrief);
                if(!is_phoneSafari())
                {
                    if(i==0)
                    {
                        window.history.replaceState({},0,'//'+window.location.host+selfaddress);
                    }
                    else
                    {
                        window.history.replaceState({},0,'//'+window.location.host+'/N/'+tItemId+'.html');
                    }
                }
                document.title = tItemName+' | 芥末堆';
            }
            
            
            if(wer>-100)
            {
                $(".jiazai").show();
                loadNew();
            }
            else
            {
                $(".jiazai").hide();
            }
        });
        
        function isScrollBottom(obj) 
        {  
            var scrollTop = $(window).scrollTop();
            var scrollHeight = $(document).height();
            var windowHeight = $(window).height();
            var wer = scrollTop + windowHeight - scrollHeight;
            
            //console.log(wer);
            
            if(wer>-1000)
            {
                return true;
            }
            else
            {
                return false;
            }
            /*if ($(document).scrollTop()>=$(document).height()-$(window).height()) 
            {  
                alert("到底部");
                return true;  
            } 
            else 
            {  
               return false;  
            }  */
        }
        
        
        function loadNew()
        {
            if(flag)
            {
                flag=false;
            
                $.ajax({
                    url: "/Api/Index/loadNew",
                    type: 'post',
                    async:false,
                    data: {item_id:oId,now_id_array:now_id_array},
                    dataType: 'json',
                    success: function (data) {
                        if(data.code=='000'){
                           getNAllHtml(data.item,data.comment,data.topic,data.advert);
                           sectionList=$("#div_MainCotent").find("section");
                           flag=true;
                        }
                    },
                });
            }
        }
        
        function getNAllHtml(item,comment,topic,advert)
        {
            now_id_array.push(item['item']['id']);
            
            var str="";
            str='<section class="detailsMain center">';
            str+='<div class="CSDMain">';
            str+='<div class="tyui">';
            str+='<div class="newContent newContent1">';
            str+='<h1 name="name">'+item['item']['name']+'</h1>';
            str+='<p>';
            if(item['item']['writer'])
            {
                str+='作者：'+item['item']['writer'];
            }
            else
            {
                 str+='&nbsp;';
            }
            str+='<span style="display:block"><span class="faTime">发布时间：</span>';
            str+='<time datetime="'+item['item']['ptime']+'">'+item['item']['ptime']+'</time>';
            str+='</span>';
            str+='</p>';
            str+='</div>';
            str+='<div class="overlay" style=""></div>';/*background-image: url('+item['item']['picture']+')*/
            str+='<div class="overlay1"></div>';
            str+='</div>';
            
            str+='<input type="hidden" name="tItemId" value="'+item['item']['id']+'"/>';
            str+='<input type="hidden" name="tItemName" value="'+item['item']['name']+'"/>';
            str+='<input type="hidden" name="tItemBrief" value="'+item['item']['brief']+'"/>';
            str+='<div class="newContent">';
            str+='<h1 name="name">'+item['item']['name']+'</h1>';
            str+='<p>'
            
            if(item['item']['writer'])
            {
                str+="作者："+item['item']['writer'];
            }
            str+='<span style="float:right"><span class="faTime">发布时间：</span>';
            str+='<time datetime="'+item['item']['ptime']+'">'+item['item']['ptime']+'</time>';
            str+='</span>';
            str+='</p>';
            str+='</div>';
            str+='<div class="newNote">';
            str+='<p>摘要：'+item['item']['brief']+'</p>';
            str+='</div>';
            str+='<article class="content">';
            str+=item['item']['content'];
            if(item['item']['is_project']==1)
            {
                str+='<div style="color: #666;    font-size: 14px;    line-height: 25px;letter-spacing: 1px;">芥末堆注：如需联系该作者／创业者，欢迎发送需求到service@jmdedu.com，芥末堆帮你牵线搭桥。</div>';
            }
            
            if(item['item']['source']&&item['item']['source']!="")
            {
                 str+=' <div class="laiyuan" style="word-break:break-all">';
                 str+='1、本文是<a href="//www.jiemodui.com" target="_blank">芥末堆网</a>转载文章，原文：';
                 str+='<font rel="nofollow">'+item['item']['source']+'</font><br/> 2、芥末堆不接受任何软文投放以及公关费、车马费，只呈现有价值的内容给读者。';
                 str+='<br/> 3、如果你也从事教育，并希望被芥末堆报道，请发邮件到 <a href="mailto:tianyi.mei@jmdedu.com">tianyi.mei@jmdedu.com</a>告诉我们。<br/>';
