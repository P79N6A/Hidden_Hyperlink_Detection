                    function login() {
                        //if($("#MuserName").val()==''||$("#MuserPwd").val()==''){
                        //    alert('请用力填写^_^');
                       //     return false;
                      //  }
                       redictUrl= window.location.href;
                        $.ajax({
                            url: "/Api/User/loginByEmail",
                            type: 'get',
                            async: false,
                            data: {email: $("#MuserName").val(), password: $.md5($("#MuserPwd").val())},
                            dataType: 'json',
                            success: function (data) {
                                if (data['code'] === '000') {
                                    
                                    if(is_weixn())
                                    {
                                        window.location.href=updateUrl(window.location.href,"randomid");
                                    }
                                    else
                                    {
                                        location.reload();
                                    }
                                    /*setTimeout(function () {
                                       window.location=redictUrl;
                                       history.go('-1');
                                    }, 500)*/
                                } else {
                                    $("#wrong").attr('style','color: #c40;display:block');
                                     setTimeout(function(){
                                        $("#wrong").hide();
                                    },1000)
                                }
                            }
                        });
                    }
                    
                    function loginByMobile()
                    {
                        
                        redictUrl= window.location.href;
                        var mobile=$("#MuserMobile").val();
                        var code=$("#MuserCode").val();
                        
                        if(mobile=="")
                        {
                            alert("请输入手机号");
                            return ;
                        }
                        if(code=="")
                        {
                            alert("请输入验证码")
                            return;
                        }
                        $.ajax({
                            url: "/Api/User/loginByMobile",
                            type: 'post',
                            async: false,
                            data: {mobile:mobile,code : code},
                            dataType: 'json',
                            success: function (data) {
                                if (data['code'] === '200') {
                                    if(is_weixn())
                                    {
                                        window.location.href=updateUrl(window.location.href,"randomid");
                                    }
                                    else
                                    {
                                        location.reload();
                                    }
                                    /*setTimeout(function () {
                                      window.location=redictUrl;
                                      history.go('-1');
                                    }, 500)*/
                                } else {
                                    $("#wrong1").attr('style','color: #c40;display:block');
                                     setTimeout(function(){
                                        $("#wrong1").hide();
                                    },1000)
                                }
                            }     
                        });
                    }
                    
          
        </script> 
