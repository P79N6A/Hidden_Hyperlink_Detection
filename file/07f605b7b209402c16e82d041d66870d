  <script>
            
            $("#indexmobleLogin").click(function () {
                        $("#indexLogin").animate({top: "0%"}, 500);

                    })
                    $("#closeLogin").click(function () {
                        $("#indexLogin").animate({top: "100%"}, 500);

                        $("#indexS").on('click', function () {
                            $("#searchtext").slideToggle("normal");
                        })
