            str+='</div>';
            
            str+='<div class="publishSend">';
            str+=' <a class="sendBtn" onclick="subComment('+item['item']['id']+')" id="btnComment'+item['item']['id']+'">发布</a>';
            str+='</div>';
            str+='</div>';

            
            var l=comment.length;

            str+='<div class="allDiscuss">';
            str+='<h3 id="dissaussAll"';
            
            if(l==0)
            {
                str+='style="display:none"';
            }
            str+='> 全部讨论</h3>';
            
            str+='<ul class="minuteDiscuss clearfix" id="discusslist'+item['item']['id']+'">'
            
            
            for(var i=0;i<l;i++)
            {
                str+='<li style="margin-top:50px;">';
                str+='<dl>';
                str+='<dt>';
                if(comment[i]['picture']&&comment[i]['islogin']==1)
                {
                   str+='<img src="'+comment[i]['picture']+'" alt="头像">';
                }
                else if(comment[i]['islogin']==1)
                {
                   str+='<img src="/Static/HomeV2/images/remark_loginned.jpg" alt="红脸蛋">'
                }
                else if(!iflogin)
                {
                    str+='<img src="/Static/HomeV2/images/remark_unlogin.jpg" alt="灰脸蛋">'
                }
                else
                {
                    str+='<span class="YK_pic"  onclick="checkLogin()"><p>登录找回红脸蛋</p><i></i></span>';
                }
                str+='</dt>';
                str+='<dd>';
                str+='<p><b style="float:left">';
                str+=comment[i]['name'];
                if(comment[i]['parent_id']!=0)
                {
                    str+='回复'+comment[i]['parentName']
                }
                str+='</b>';
                str+='&nbsp;<span class="time">'+comment[i]['ctime']+'</span></p>';
                
                str+='<p class="xiangxi">'+comment[i]['content']+'</p>';
                str+='<div class="reSend">';
