                {
                    str+='<p id="like'+comment[i]['id']+'" onclick="like('+comment[i]['id']+',1,\'com\')" > <span id="zanstyle">赞</span>(<span id="likeCot'+comment[i]['id']+'">'+comment[i]['count_fav']+'</span>)</p>';
                }
                else
                {
                    str+='<p id="like'+comment[i]['id']+'" onclick="like('+comment[i]['id']+',2,\'com\')" ><span id="zanstyle">已赞</span>(<span id="likeCot'+comment[i]['id']+'">'+comment[i]['count_fav']+'</span>)</p>';
                }
                str+='<p onclick="reply('+comment[i]['id']+',\''+comment[i]['name']+'\',\''+item['item']['id']+'\')" id="rediscussd">回复('+comment[i]['count_comm']+')</p>'
                str+='</div>';
                str+='</dd>';
                str+='</dl>';
                str+='<div style="width:80%;height:160px;margin-left:20%; display:none;margin-top:30px;" id="'+comment[i]['id']+'">';
