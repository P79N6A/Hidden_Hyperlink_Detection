                str+='<a class="sendBtn" onclick="reply('+comment[i]['id']+',\''+comment[i]['name']+'\',\''+item['item']['id']+'\')">发布</a>';
                str+='</div>';
                str+='</div>';
                str+='</li>';
            }
            

            str+='</ul>';
            str+='</div>';
            
            if(l==page_limit)
            {
                str+='<div class="more" onclick="comMore('+item['item']['id']+')" id="comMore'+item['item']['id']+'">加载更多</div>';
            }
            
            str+='</div>';
            str+='</div>';
            str+='</div>';
            
            str+='<div class="mainZan" rel="nofollow">';
            str+='<ul>';
            str+='<li id="exchangeZan'+item['item']['id']+'" onclick="like('+item['item']['id']+','+item['item']['liked']+',\'N\')"';
            if(item['item']['liked']==2)
            {
                str+='style="background-position:0 0"';
            }
            str+='></li>';
            str+='<li>';
            str+='<a href="#ping_'+item['item']['id']+'"></a>';
            str+='</li>';
            str+='<li onclick="shareWeibo(\'【'+item['item']['name']+'】@芥末堆看教育\',\'https://www.jiemodui.com/N/'+item['item']['id']+'.html\',\''+item['item']['picture']+'\')"></li>'
            str+='<li>';
            str+='<div id="wenzCode" class="wenzCode"> <img src="'+host_name+'/Home/Qrcode/index.html?url=https://www.jiemodui.com/N/'+item['item']['id']+'.html" alt="'+item['item']['name']+'分享二维码"></div>'
            str+='</li>';
            str+='</ul>';
            str+='</div>';
            
            str+='<div class="hudong_nav">';
            str+='<ul>';
            str+='<li id="exchangeZan'+item['item']['id']+'_mobile" onclick="like('+item['item']['id']+','+item['item']['liked']+',\'N\')"';
            if(item['item']['liked']==2)
            {
                str+='class="on"';
            }
            str+='><a><i></i></a></li>';
            str+='<li><a href="#ping_'+item['item']['id']+'"><i>';
