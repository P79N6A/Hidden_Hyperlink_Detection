    	function att(id)
    	{
    		 var c = new Object();
    		 c["news_id"] = id;
    		 $.ajax({
    	        type: "post",
    	        url: "/articaPro/add_attention",
    	        data: c,
    	        dataType: "json",
    	        success: function (xhr) {
    	            if(xhr.ret == true){
    	            	$("#attention i").addClass("active");
    		            $("#attention label").html(xhr.info.attention);
    	            }else{
    	            	if(xhr.code=='410300')
    	            		{
    	            			window.location.href = (xhr.info);
    	            		}
    	            	else
    	            		{
    	            		$("#attention i").addClass("active");
    	            		return  false;
    	            		}
    	            }
    	        }
    	    });
    	}
    	//点赞
    	function up(id)
    	{
    		 var c = new Object();
    		 c["news_id"] = id;
    		 c["action"] = 'up';
