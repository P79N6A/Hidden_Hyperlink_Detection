                            document.write(html);
                        } else {
                            var html = '<div id="gt-one"><script type="text/javascript" src="http://script.vccoo.com/qd3a1ecf93f0cff030db14798aafed22e01bf4de0734ed7fe1103c.js"><\/script></div>';
