  <script>
    $(function () {
        getcoscollect('36');
    });
    //做收藏
    function docollect(id) {
        $.ajax({
            type: 'post',
            datatype: 'text',
            url: "/EnterSpace/EnterSpace.ashx?action=docoscollect&modelid=-13&id=" + id + "",
            success: function (msg) {
                var jifen = msg.split('@');
                if (jifen[0]== "0") {
                  //  KesionJS.Alert('您未登录，请登录！', 'showuserlogin();');
                    alert("您未登录，请登录");
                    showuserlogin();
                }


                if (jifen[0] == "-1") {
                    alert('取消收藏成功！');
                    $("#collect_course").html("<img src=\"/TemplateSchool/style02/images/heart.png\">收藏");
                    $("#CollectCount").html(parseInt($("#CollectCount").html()) - 1);
                    $("#CreditScore").html(parseInt($("#CreditScore").html()) - parseInt(jifen[1]));
                }
                else if (jifen[0] == "+1") {
                    alert('添加收藏成功！');
                    $("#collect_course").html("<img src=\"/TemplateSchool/style02/images/heart.png\">取消");
                    $("#CollectCount").html(parseInt($("#CollectCount").html()) + 1);
                    $("#CreditScore").html(parseInt($("#CreditScore").html()) + parseInt(jifen[1]));
                }

            }
        });
    }
    //判断是否收藏   
    function getcoscollect(id) {

        $.ajax({
            type: 'post',
            datatype: 'text',
            url: "/EnterSpace/EnterSpace.ashx?action=getcoscollect&modelid=-13&id=" + id + "",
            success: function (msg) {


                if (msg <= 0) {


                    $("#collect_course").html("<img src=\"/TemplateSchool/style02/images/heart.png\">收藏");
                }
                else {

                    $("#collect_course").html("<img src=\"/TemplateSchool/style02/images/heart.png\">取消");
                }

            }
        });
    }

</script> 
