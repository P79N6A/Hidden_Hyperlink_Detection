$(document).ready(function() {
    $(window).scroll(function(){
        if ($(window).scrollTop()>100){
            $(".gotop").fadeIn(1500);
        }else{
            $(".gotop").fadeOut(1500);
        }
    });

    $(".gotop").click(function() {
        var targetOffset = 0;
        $('body, html').animate({scrollTop: targetOffset}, 1000);
        return false;
    });
});
</script> 
