    function update_article_state() {
        _host_name = "www.vsread.com";
    Transport.call("http://" + _host_name + "/jswg/index.php?act=get_article_info", "aid=" + _article_id, update_article_state_response, "POST", "JSON"); }
        function update_article_state_response(result) 
        {
			
            if (result && result.err == 0) {
	if (result.defense == 0) {
		result.defense = '无';
	}
	if (result.curse == 0) {
		result.curse = '无';
	}
           // document.getElementById('article_integral').innerHTML = result.integral;
            document.getElementById('article_integral2').innerHTML = "游戏积分："+result.integral;
            document.getElementById('article_defense_state').innerHTML = result.defense;
            document.getElementById('article_curse_state').innerHTML = result.curse;
        }
    }

    update_article_state();

    function get_user_login()
    {
        Ajax.call("http://www.vsread.com/jswg/index.php?act=get_user_login", "id=" + _article_id, get_user_login_response, "GET", "TEXT");
    }

