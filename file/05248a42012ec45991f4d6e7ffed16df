		$(document).ready(function(){
			var digg_id=$("#digg_id").val();
			$('.digg').like({
				article_id: digg_id, // 文章id
				ding_class: 'support', // 顶的class
				cai_class: 'oppose', // 踩的class
        domain: 'news.csdn.net',
				callback: function(data) //处理数据方法
				{
          if(data.succ == 1)
          {
            $('.support dd').text(data.info.ding);
            $('.oppose dd').text(data.info.ding);
          }
					if(data.succ == -2)
					{
						if(confirm(data.msg)){
							window.location.href = "https://passport.csdn.net/UserLogin.aspx?from=http://news.csdn.net%2Farticle%2F1970-01-01%2F279966";
							return false;
						}
					}
					if(data.succ == -1)
					{
						alert(data.msg);
					}
				}
			});
		});
