<script type="text/javascript">
//<![CDATA[

  function GetClientId(clientId)
  {
     var l = document.forms[0].length;
     var id;
     
     for(var i = 0; i < l; i++)
     {
       id = document.forms[0].elements[i].id;
       if(id.endsWith('_' + clientId)) break;
     }

     return id;
  }
  
  function GetRadioValue(radioName)
  {
    var l = document.forms[0].elements.length;
    var radioButtons = [];
    
    for(var i = 0; i < l; i++)
    {
      var elem = document.forms[0].elements[i];
      var n = elem.name;
      
      if(n.endsWith('$' + radioName))
      {
        radioButtons.push(elem);
      }
    }
    
    l = radioButtons.length;
    
    for(var i = 0; i < l; i++)
    {
      if(radioButtons[i].checked)
      {
        return radioButtons[i].value;
      }
    }
  }

  function InitRequestContactModal()
  {
    // Clear button events.
    Sys.UI.DomEvent.clearHandlers($get('btnRequestContactCancel'));
    Sys.UI.DomEvent.clearHandlers($get('btnRequestContact'));
    Sys.UI.DomEvent.clearHandlers($get('btnRequestContactClose'));
    
    // Wire up button events.
    Sys.UI.DomEvent.addHandler($get('btnRequestContactCancel'), 'click', btnRequestContactCancel_Click);
    Sys.UI.DomEvent.addHandler($get('btnRequestContact'), 'click', btnRequestContact_Click);
    Sys.UI.DomEvent.addHandler($get('btnRequestContact'), 'click', GoogleTrackEvent);
    Sys.UI.DomEvent.addHandler($get('btnRequestContactClose'), 'click', btnRequestContactClose_Click);
    
    // Set view.
    $get('requestContactModalForm').style.display = 'block';
    $get('requestContactModalLoadingAnim').style.display = 'none';
    $get('requestContactModalMsg').style.display = 'none';
    
    // Show modal window.
    $find('mpeRequestContactBehaviourId').show();
  }
  
  // Button event handlers
  function btnRequestContactCancel_Click()
  {
    CloseRequestContactModal();
  }
  
  function btnRequestContact_Click()
  {
    if(Page_ClientValidate('RequestContactValGroup'))
    {
      // Show loading anim.
      $get('requestContactModalForm').style.display = 'none';
      $get('requestContactModalLoadingAnim').style.display = 'block';
    
      // Call web service method.
      var name = '';
      var email = '';
      var tel = '';
      var bestTime = '';
      var message = '';
      var optIn = '';
      
      name = $get(GetClientId('txtName')).value;
      email = $get(GetClientId('txtEmail')).value;
      tel = $get(GetClientId('txtTel')).value;
      bestTime = GetRadioValue('rblBestTime');
      message = $get(GetClientId('txtMessage')).value;
      optIn = GetRadioValue('rblOptIn');
      
      RequestContactWebService.SendRequest(name, email, tel, bestTime, message, optIn, CompletedSendRequest);
    }
  }
  
  function btnRequestContactClose_Click()
  {
    CloseRequestContactModal();
  }
    
  function GoogleTrackEvent()
  {
    _gaq.push(['_trackEvent', 'Contact Interest', 'Contact Request Sent']);
  }
  
  // Proxy callback handlers.
  function CompletedSendRequest(result)
  {
    $get('requestContactModalLoadingAnim').style.display = 'none';
    $get('requestContactModalMsg').style.display = 'block';
  }
  
  // Utils.
  function CloseRequestContactModal()
  {
    $find('mpeRequestContactBehaviourId').hide();
  }
  
//]]>
</script>
