       <script type="text/javascript">
	(function() {
		window.tmpData = window.tmpData || {};
		window.tmpData.hasmun = 0;
		window.tmpData.totalnum = 0;
		if(window.tmpData.totalnum > 0){
			$("#comment_list_h").html( window.tmpData.totalnum + "条评论");
			$("#commentTotal").html( window.tmpData.totalnum);
		}
	})();
	var firstleaveUrl = "/do.php?g=Wap&m=Index&a=firstLeaveAjax&wecha_id=o2tDDv1zvTsiFl_bTfWGtk5jxj74&token=qzbpvz1460339646";
	$(document).ready(function(){
		$.ajax({
			type: "get",
			url: firstleaveUrl + "&img_id=" + '1180',
			success: function(result) {
				//alert(result);exit;
				if (result) {
					result = jQuery.parseJSON(result);
					var rplres = result["leave_list"];
					window.tmpData.firstTime = result["firstRequestTime"];
					window.tmpData.totalnum = result["leave_list_count"];
					$("#load_leave_tip").css('display', 'none');
					if (window.tmpData.totalnum > 0) {
						$("#no_leave_tip").css('display', 'none');
					}else{
						$("#no_leave_tip").css('display', 'block');
					}
					if (window.tmpData.totalnum > 10) {
						$("#more_leave").css('display', 'block');
					}else{
						$("#more_leave").css('display', 'none');
					}
					for (var i = 0; i < rplres.length; i++) {
						var doc = rplres[i];
						
						var html = "";
						html += "<li class='media'><aside class='media-img'><p class='avatar'>";
						html += "<img src=\""+ doc.portrait +"\"/></p></aside>";
						html += "<section class='media-content'><div class='meta'>";
						html += "<p>" + doc.name + "<span class='pull-right' name='timespan' id=\'leave_time" + doc.id + "\'>" + doc.time + "</span></p></div>";
						html += "<article>" + doc.message + "</article>";
						html += "<input id=\'leave_time_copy" +  doc.id + "\' style='display:none' value = \'" + doc.time + "\'></input>";
						html += "</section></li>";

						$(html).appendTo("#comment_list");
						window.tmpData.hasmun++;
						$("#comment_list_h").html( window.tmpData.totalnum + "条评论");
						$("#commentTotal").html( window.tmpData.totalnum);
					}
					$("#more_leave").appendTo("#comment_list");
					refreshLeaveTimes();
				} else {
					return;
				}
			}
			});
	});
	var moreleaveUrl = "/do.php?g=Wap&m=Index&a=moreLeaveAjax&wecha_id=o2tDDv1zvTsiFl_bTfWGtk5jxj74&token=qzbpvz1460339646";
	$(document).on("click", "#more_leave", function() {
		$.ajax({
			type: "get",
			url: moreleaveUrl + "&firstTime=" + window.tmpData.firstTime + "&img_id=" + '1180' + "&hasmun=" + window.tmpData.hasmun,
			success: function(result) {
				//alert(result);exit;
				if (result) {
					result = jQuery.parseJSON(result);
					var rplres = result["rplres"];
					var hasmore = result["hasmore"];
					if (hasmore == 0) {
						$("#more_leave").css('display', 'none');
					}
					for (var i = 0; i < rplres.length; i++) {
						var doc = rplres[i];
						
						var html = "";
						html += "<li class='media'><aside class='media-img'><p class='avatar'>";
						html += "<img src=\""+ doc.portrait +"\"/></p></aside>";
						html += "<section class='media-content'><div class='meta'>";
						html += "<p>" + doc.name + "<span class='pull-right' name='timespan' id=\'leave_time" + doc.id + "\'>" + doc.time + "</span></p></div>";
						html += "<article>" + doc.message + "</article>";
						html += "<input id=\'leave_time_copy" +  doc.id + "\' style='display:none' value = \'" + doc.time + "\'></input>";
						html += "</section></li>";

						$(html).appendTo("#comment_list");
						window.tmpData.hasmun++;
					}
					$("#more_leave").appendTo("#comment_list");
					refreshLeaveTimes();
				} else {
					return;
				}
			}
		});
	});
function commentdo(){
		var text = $("#comment_text").val();
		$("#comment_text").val('');
		
		var boxModel = $('#commentBox').modal();
		boxModel.toggle();
		commentLeave(text);
}
	var leaveUrl = "/do.php?g=Wap&m=Reply&a=leave&wecha_id=o2tDDv1zvTsiFl_bTfWGtk5jxj74&token=qzbpvz1460339646";
	function commentLeave(txt) {
		if (txt.length > 0) {
			var check = 1;
			var token = $("#token").val();
			var btn = $(this);
			var wxname = '游客';
			var info = txt;
			$.ajax({
				type: "post",
				url:leaveUrl + "&check=" + check + "&name=" + wxname  + "&img_id=" + '1180',
				data:"message=" + info,
				dateType: "json",
				success: function(res) {
					var res = eval("(" + res + ")");
					var data = res['data'];
					//留言失败
					if (res['status'] == 0) {
						alert(res['info']);
						return;
					} else if (res['status'] == 1) {
						$("#no_leave_tip").css("display","none");
						
						var html = "";
						html += "<li class='media'><aside class='media-img'><p class='avatar'>";
						html += "<img src=\""+ data.portrait +"\"/></p></aside>";
						html += "<section class='media-content'><div class='meta'>";
						html += "<p>" + data.name + "<span class='pull-right' name='timespan' id=\'leave_time" + data.id + "\'>" + data.time + "</span></p></div>";
						html += "<article>" + data.message + "</article>";
						html += "<input id=\'leave_time_copy" +  data.id + "\' style='display:none' value = \'" + data.time + "\'></input>";
						html += "</section></li>";

						$(html).prependTo("#comment_list");
						refreshLeaveTimes();
						window.tmpData.totalnum++;
						$("#comment_list_h").html( window.tmpData.totalnum + "条评论");
						$("#commentTotal").html( window.tmpData.totalnum);
						
						alert(res['info']);
						
						 window.location.hash = "#comment_list_h";
						return;
					} else {
						alert(res['info']);
						return;
					}
				}
			});
		}
	}

	function refreshLeaveTimes() {
		$("#comment_list li").each(function(index, element) {
			var span = $(element).find("span[name='timespan']");
			var input = $(element).find("input");
			var tsm = input[0].value;
			var str = timeconvert(tsm);
			span[0].innerText = str;
		});
	};
	refreshLeaveTimes();

	function timeconvert(tsm) {
		var dtsm = ((new Date()).getTime()) / 1000 - tsm;
		if (dtsm < 180) {
			return "最新";
		} else if (dtsm < 60 * 60) {
			return Math.ceil(dtsm / 60) + "分钟前";
		} else if (dtsm < 3600 * 24) {
			return Math.ceil(dtsm / 3600) + "小时前";
		} else if (dtsm < 3600 * 24 * 30) {
			return Math.ceil(dtsm / (3600 * 24 * 30)) + "天前";
		} else {
			var dd = new Date(tsm * 1000);
			var m = dd.getMonth() + 1;
			if (m < 10) {
				m = "0" + m;
			}
			var day = dd.getDate();
			if (day < 10) {
				day = "0" + day;
			}
			var hour = dd.getHours();
			if (hour < 10) {
				hour = "0" + hour;
			}
			var min = dd.getMinutes();
			if (min < 10) {
				min = "0" + min;
			}
			return m + "-" + day + " " + hour + ":" + min;
		}
	};
</script> 
