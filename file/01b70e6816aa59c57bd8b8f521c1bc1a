  <script>
 var hasRequest = false;
 var staticUrl = "/content/classid_02/article_01.html";
	function EnterPress(node,e) { //传入 event 
		var e = e || window.event;
		if (e.keyCode == 13) {
			var keyStr = $(node).find("[name = 'search']").val();
			if (keyStr&&keyStr != '' ) {
				if(hasRequest){
					return;
				}
				hasRequest= true;

				var aj_data = "search="+keyStr;
				if($(node).find("[name = 'sort']").prop("checked")){
                	aj_data = aj_data + "&sort=1";
            	}
		$.ajax({
			type: "post",
			url: "/do.php?g=Wap&m=Index&a=imgSearch&token=qzbpvz1460339646",
			data:aj_data,
			success: function(result) {
				//alert(result);exit;
				hasRequest= false; 
				if (result) {
					result = jQuery.parseJSON(result);
					f_idx = 0;
					// f_idx = result['count'];
					searchKey = result['search'];
					
					data = result['res'];
					var p= $("#search_panel");
					$("#search_panel").css('display',"none");
					$('#search').find("[name = 'search']").each(function(index, element) {
						$(element).val(searchKey);
					});
					$('#search_result').find("[name = 'sort']").each(function(index, element) {
						if($(node).find("[name = 'sort']").prop("checked")){
                			$(element).prop('checked', true);
            			}else{
            				$(element).prop('checked', false);
            			}
					});
					if(data&&data.length >0){
						$("#search_result").css('display',"inline");
						$("#search_empty_result").css('display',"none");
					}else{
						$("#search_result").css('display',"none");
						$("#search_empty_result").css('display',"inline");
						return;
					}
				
					$("#containerList").find("[name = 'listli']").remove();
					var html = "";
					for (i in data) {
						var sub_data = data[i];
						var contentlink = "";
						if ( true) {
							// var surl = staticUrl.replace('01',sub_data['id']).replace('02',sub_data['classid']);
							// contentlink = surl;
							contentlink = sub_data['url'];
						} else {
							contentlink = "/do.php?g=Wap&m=Index&a=content&token=qzbpvz1460339646" + "&id=" + sub_data['id'] + '&classid=' + sub_data['classid'];
						}
						var key = searchKey;
						var reg = new RegExp(key, "gi");
						var tostr = "<span style='color: red;'>"+searchKey+"</span>";
						var str = sub_data['title'];
						var newTitle = str.replace(reg, tostr);
						
						html += "<li name='listli'" + (sub_data['isvideo'] == 1 ? "class='ui-video'" : "") + "><a href='" + contentlink + "'><div class='cover'><img src='" + sub_data['pic'] + "' /></div><div class='content'><div class='title'>" + newTitle + "</div><div class='meta'><span class='tags'><span class='"+sub_data['classstyle'] +"'>"+sub_data['classname']+"</span></span><span class='time'>" + sub_data['date'] + "</span><span class='comment pull-right'>" + (sub_data['commentnum'] > 0 ? ("<i class='icon icon-comment'></i> " + sub_data['commentnum']) : "<i class='icon icon-comment-empty'></i>") + "</span></div></div></a></li>";
						
					}
					if (data.length <= 0) {
							$('#nomorelist').show();
						} else {
							$('#nomorelist').hide();
						}
						
						var $newElems = $(html).appendTo('#containerList');
						$("#nomorelist").appendTo('#containerList');
					f_idx = f_idx + data.length;
					
				} else {
					return;
				}
			}
		});
			}
		}
	}

