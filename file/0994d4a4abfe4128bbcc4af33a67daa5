<script>
	var intervalId = 0;
	function sendShow(){
		$('.re_yzm').hide();
		$('.send_mes').show();
	}
	function sendHide(){
		$('.re_yzm').show();
		$('.send_mes').hide();
	}
	function reloadcode(obj){
		obj.src = 'http://www.tieyou.com/index.php?param=validateimage/home.html&' + Math.random();
	}
	function countdown(index){
		if(downTime == 0){
			sendShow();
			clearInterval(intervalId);
		}else{
			$('.re_yzm').eq(index).html(downTime+'秒后可重新获取');
			$('.send_mes').eq(index).hide();
			$('.re_yzm').eq(index).show();
			downTime--;
		}
	}
	function _countdown(index){
		$('.re_yzm').eq(index).show();
		return function(){
			countdown(index);
		}
	}
$(function(){
	var sendTime = parseInt(getCookie('orderSendTime'));
	sendTime = sendTime ? sendTime : 0;
	nowTime = 130;
	sendTime = 1;
	var nowTime = Date.parse(new Date())/1000;
	if((nowTime - sendTime) > 120){
		sendShow();
	}else{
		downTime = 120-(nowTime-sendTime);
		intervalId = setInterval(_countdown(),1000);
	}
	
		$('.send_mes').live('click',function(){
			
			var phone = $('.phone').val();
			var index = $('.send_mes').index($(this));
			var phone = $('.phone').eq(index).val();
			if(!chuck_phone(phone)){
				show_mes($('.sel_none').eq(index),'请填写正确的手机号');
				return false;
			}
            
            var checkCode = $('.check_code').eq(index).val();
            if(checkCode.length != 6){
				show_mes($('.sel_none').eq(index),'请输入正确的图片验证码');
				return false;
            }
            
			$('.sel_none').hide();
			$('.sendImg').eq(index).show();
			$('.send_mes').eq(index).hide();
            
			var href = 'https://u.tieyou.com/index.php?param=/passport/checkYanzhengma.html&yanzhengma=' + $('#yanzhengma').val();
		    $.get(href, function (data, status) {
			    $('.sendImg').hide();
		        data = eval("(" + data + ")");
		        if (data.r == 0) {
		        	  show_mes($('.sel_none').eq(index),'图片验证码错误！');
					  $('.send_mes').show();
					  return false;
		        }else if(data.r == 1){
		        	downTime = 120;
					intervalId = setInterval(_countdown(index),1000);
		        }else{
		        	show_mes($('.sel_none').eq(index),data.mess);
					$('.send_mes').show();
		        }
		        //$("#form1").attr("action", "/passport/login");
		        //$("#form1").submit();
		    });
			
		})
})
