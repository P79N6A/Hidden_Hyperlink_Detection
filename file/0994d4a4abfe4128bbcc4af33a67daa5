<script>
	var countdownTimer = null;
	
	function showCountdown() {
		$('#getCheckCode').hide();
		$('#yzm_time').html('60秒后重新获取').show();
		var num = 60;
		var countdownTimer = setInterval(function() {
			num --;
			if (num <= 0) {
				$('#yzm_time').hide();
				$('#getCheckCode').show();
				clearInterval(countdownTimer);
			} else {
				$('#yzm_time').html(num + '秒后重新获取');
			}
		}, 1000);
	}

    function refreshCode(){
        $('.check_img_code').val('');
        $('.yzm').attr('src', 'http://www.tieyou.com/index.php?param=/yanzhengma/getYanzhengmaPic.html&channel=utieyou&t=' + new Date().getTime());
    }

	//获取参数
	function $G(){
		var Url=document.URL;
		var u,g,StrBack='';
		if(Url.indexOf("#")!=-1)
			u=Url.split("#");
		else
			u=Url.split("?");
		if (u.length==1) g='';
		else g=u[1];
		if(g!=''){
			gg=g.split("&");
			var MaxI=gg.length;
			str = arguments[0]+"=";
			for(i=0;i<MaxI;i++){
				if(gg[i].indexOf(str)==0) {
					StrBack=gg[i].replace(str,"");
					break;
				}
			}
		}
		return StrBack;
	}
	
	$(function() {
		$('#utm_source').val($G('utm_source'));
		$('#source').val($G('source'));

		$('#getCheckCode').click(function() {
            $('#login_note2').hide().html('');
			var mobile = $('#mobile');
			var code = $('#check_mobile_code');

			if (!mobile.val().length || mobile.val() == '手机号码') {
				$('#login_note2').html('<div class="login_ts">请输入手机号码</div>').show();
				mobile.focus();
				return;				
			}
			
			if (!/^1[345678]\d{9}$/.test(mobile.val())) {
				$('#login_note2').html('<div class="login_ts">手机号码格式不正确</div>').show();
				mobile.focus();
				return;	
			}

            if(!code.val().length){
                $('#login_note2').html('<div class="login_ts">请输入验证码</div>').show();
                code.focus();
                return;
            }

            //判断验证码是否正确
            var ImageCodeCheck = {
                checkCode: '',
                checkUrl: '/index.php?param=/ajax/checkImgCodeSM',//'/ajax/checkImgVerifyCode.html',
                status: 0,
                validate: function() {
                    $.ajax({
                        url: this.checkUrl,
                        type: 'get',
                        data: {checkCode: this.checkCode, mobile:mobile.val(), s:'c'},
                        dataType: 'json',
                        success: function(data) {
                            if (data) {
                                if (!isNaN(parseInt(data.success))) {
                                    ImageCodeCheck.validateCallback(data);
                                }
                            }
                        }
                    })
                },
                validateCallback: function(data) {

                }
            };
            ImageCodeCheck.checkCode = code.val();
            ImageCodeCheck.validate();
            ImageCodeCheck.validateCallback = function(data) {
                if (data.success < 0) {
                    refreshCode();
                    //loginTs.html('验证码不正确').parent().show();
                    $('#login_note2').html('<div class="login_ts">验证码不正确</div>').show();
                    code.focus();
                    return;
                }else if(data.success == 0){
                    refreshCode();
                    $('#yzm_time').hide().html('');
                    $('#getCheckCode').show();
                    $('#login_note2').html('<div class="login_ts">' + data.message + '</div>').show();
                }else{
                    $('#message').val(data.info);
                    $('#login_note2').hide().html('');
                    showCountdown();
                }
            }


        });
		
		$('.select_login_tab').click(function() {
			$('.login_ts').parent().hide();
			$('.login_ts').html('');
			if ($(this).attr('id') == 'account_login_tab') {
				$('#account_login_tab').addClass('now');
				$('#dynamic_password_login_tab').removeClass('now');
				$('#dynamic_password_login').hide();
				$('#account_login').show();
				$('#login_type').val('');
			} else {
				$('#dynamic_password_login_tab').addClass('now');
				$('#account_login_tab').removeClass('now');
				$('#account_login').hide();
				$('#dynamic_password_login').show();
				$('#login_type').val('mobile_login');
			}
		});
		
		$('#dynamic_login_form_submit').click(function() {
			var mobile = $('#mobile');
            var code = $('#check_mobile_code');
			var checkCode = $('#checkCode');

			if (!mobile.val().length || mobile.val() == '手机号码') {
				$('#login_note2').html('<div class="login_ts">请输入手机号码</div>').show();
				mobile.focus();
				return;				
			}
			
			if (!/^1[345678]\d{9}$/.test(mobile.val())) {
				$('#login_note2').html('<div class="login_ts">手机号码格式不正确</div>').show();
				mobile.focus();
				return;	
			}

            if(!code.val().length){
                $('#login_note2').html('<div class="login_ts">请输入验证码</div>').show();
                code.focus();
                return;
            }
			
			if (!checkCode.val().length) {
				$('#login_note2').html('<div class="login_ts">请输入验证码</div>').show();
				checkCode.focus();
				return;				
			}
			
			if (!/^[0-9]{6}$/.test(checkCode.val())) {
				$('#login_note2').html('<div class="login_ts">验证码格式不正确</div>').show();
				checkCode.focus();
				return;		
			}
			
			$('#login_type').val('mobile_login');
			$('#login_note2').hide().html('');
			
			$('#login_form').submit();
		});
	});
