<script type="text/javascript"> 
var g_index;
function chuck_phone(){
	var mobile = arguments[0];
	var pattern = /^0{0,1}(13[0-9]|14[0-9]|15[0-9]|18[0-9])[0-9]{8}$/;
	if (!pattern.exec(mobile)) {
		return false;
	}else{
		return true;
	}
}
function chuck_order_number(){
	var number = arguments[0];
	var pattern = /^201[0-9]{16}$/;
	if (!pattern.exec(number)){
		return false;
	}else{
		return true;
	}
}
function chuck_validate(){
	var validate = arguments[0];
	var pattern = /^[0-9a-zA-Z]{6}$/;
	if (!pattern.exec(validate)){
		return false;
	}else{
		return true;
	}
}
function show_mes(obj,mes){
	obj.html(mes);
	obj.show();
}

$(function(){
	$('.oh_btn').each(function(index){
		$(this).click(function(){
			var phone = $('.phone').eq(index).val();            
			var validate = $('.validate').eq(index).val();
			if(chuck_phone(phone) == false){
				show_mes($('.sel_none').eq(index),'请填写正确的手机号');
				return false;
			}
            
            /*var checkCode = $('#check_mobile_code2').val();
            if(checkCode.length != 4){
				show_mes($('.sel_none').eq(index),'请输入正确的图片验证码');
				$('#yzmimage1').trigger('click');
				return false;
            }*/
            
			if(chuck_validate(validate) == false){
				show_mes($('.sel_none').eq(index),'请输入正确的验证码');
				$('#yzmimage1').trigger('click');
				return false;
			}
			$('.load_img').eq(index).show();
			var mobile = phone.length == 11 ? 'mobile' : 'order_number';

            $.getJSON('https://u.tieyou.com/index.php?param=/ajax/kefu.html&'+mobile+'='+phone+'&validate='+validate+'&type=auto&s=order&callback=?&'+Math.round(new Date().getTime()), function(data){
				var returnState = typeof data;

				if(returnState != 'number'){
                    $("#report_head").show();
                    $("#report_body").show();
					$('#search_order').hide();
					$('#search_order_result').show();
					g_index = 'jieguo';
					$('.oh_info ul').html('');
					if(mobile == 'order_number'){
						$('.dlzk').html('<dt>铁友订单号：<strong>' + data.order_number + '23423</strong></dt>');
						add_message(data,'block');
					}else{
						var count = data.length;
						$('.dlzk').html('<dt>手机号：<strong>' + phone + '</strong></dt><dd>最近30天内' + count + '笔订单信息如下</dd>');
						for(var i=0;i<count;i++){
							if(i == 0){
								add_message(data[i],'block',i);
							}else{
								add_message(data[i],'',i);
							}
						}
					}
					$('.sel_none').hide();
					clearInterval(intervalId);
					sendShow();
				}else{
                    $("#report_head").hide();
                    $("#report_body").hide();
						$('.sel_none').eq(index).attr('value','');
						if(data == 1){
							show_mes($('.sel_none').eq(index),'验证码错误！');
						}else if(data == -1){
                            show_mes($('.sel_none').eq(index),'图片验证码错误！');
                        }else{
							show_mes($('.sel_none').eq(index),'对不起，找不到相应订单，请确认手机号是否正确。');
							clearInterval(intervalId);
							sendShow();
						}
				} 
				if(index == 0 && returnState == 'number'){
					$('#yzmimage1').trigger('click');
				}else{
					$('.validate').attr('value','');
					$('#yzmimage2').trigger('click');
				}
				
				if(index == 0 && returnState != 'number'){
					$("#sear").hide();
					$("#content").show();
				}
				$('.load_img').eq(index).hide();
				
			})
		})
	})
	
	function add_message(data,state_mes,i){
		var xiangqing;
		var year = data.ticket_ymd.substring(0,4);
		var month = data.ticket_ymd.substring(4,6);
		var day = data.ticket_ymd.substring(6,8);
		var objDate = new Date(year,month-1,day); 
		var arrWeek = Array('星期天','星期一','星期二','星期三','星期四','星期五','星期六');
		var strWeek = arrWeek[objDate.getDay()];
		
		if (data.seat_name.indexOf('硬卧') > -1) {
			data.seat_name = '硬卧';
		}
		
		if (data.seat_name.indexOf('软卧') > -1) {
			data.seat_name = '软卧';
		}

		i = i ? i : 0;
		if (i%2 == 0) {
			var li = $('<li></li>');
		} else {
			var li = $('<li class="over"></li>');
		}
		var strOrderNumber = '<a href="https://u.tieyou.com/order/trainOrderDetail.html?visitDetail='+data.visitDetail+'&mobile='+data.u_mobile+'&order_number='+ data.order_number + '" target="_blank">' + data.order_number + '</a>';
		var detailDisplay = i == 0 ? 'block' : 'none';		
		var tmp = $('#order_detail_info_tmp').html();
			tmp = tmp.replace('{$stateTitel}', data.stateTitel);
			tmp = tmp.replace('{$order_number}', strOrderNumber).replace('{$id}', data.order_number  + data.train_number).replace('{$id}', data.order_number  + data.train_number);
			tmp = tmp.replace('{$train_number}', data.train_number);
			tmp = tmp.replace('{$from_station_name}', data.from_station_name);
			tmp = tmp.replace('{$from_station_time}', data.from_station_time);
			tmp = tmp.replace('{$to_station_name}', data.to_station_name);
			tmp = tmp.replace('{$to_station_time}', data.to_station_time);
			tmp = tmp.replace('{$ticket_time}', year + '-' + month + '-' + day + '(' + strWeek + ')');
			tmp = tmp.replace('{$seat_name}', data.seat_name);
			tmp = tmp.replace('{$detail}', '<dt>' + data.stateTerm + '</dt><dd>' + data.statePs + '</dd>');
			tmp = tmp.replace('{$display}', detailDisplay);
			tmp = tmp.replace('{$detailAct}', detailDisplay == 'block' ? '收起' : '详情');
			tmp = tmp.replace('{$detailActClass}', detailDisplay == 'block' ? 'up' : 'down');
		li.html(tmp);
		$('.oh_info ul').append(li);
	}
	
	$(".smtxt_ids").live('click', function() {
		var id = 'xsTxtBox' + $(this).attr('id');
		var element = $('#' + id);
		var detail = $('#' + $(this).attr('id'));
		if (typeof element != undefined) {
			var display = element.css('display');
			if (display == 'none') {
				detail.removeClass("down").addClass("up").html('收起');
				element.show();
			} else {
				detail.removeClass("up").addClass("down").html('详情');
				element.hide();
			}
		}
	});
})
</script>
