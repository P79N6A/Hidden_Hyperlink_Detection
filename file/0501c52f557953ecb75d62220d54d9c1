   <script>
		$("#reward_button").click(function () {
			var book_id = '10857';
			var bonus = $('#reward_money_div .current').attr('data-nums');
			var comment = $('#rdesc').val();
			var num = $('#rcount').val();
			if(num<1){
				alert('打赏数目必须大于1');
				return false;
			}
			var itemid =$('#reward_money_div .current').attr('data-id');
			$.ajax({
				url: "http://dynamic.anyew.com/reward-reward_money",
				data:{ articleid:book_id,bonus:bonus, comment:comment,num:num,itemid:itemid},
				dataType:"jsonp",
				success: function(e){
					alert(e.msg);
					$('#hide_dialog_div').click();
				}
			});
		});

		function tool_menu_check(show_elem, hide_elem){
			$(show_elem).show();
			$(hide_elem).hide();
		}

		function favorite_ajax(articleid){
			var url = '/book-favorite_ajax?articleid='+articleid;
			$.get( url, function(data){
				if(data == '1'){
					$(".read_tishi_nav p").html("恭喜加入书架成功！");
					$(".fav_book p").html("已加入");
					tool_menu_check('.read_tishi,.mask', '.chapters_list,.read_set');
				}else if(data == '3'){
					$(".read_tishi_nav p").html("已经加入过书架");
					tool_menu_check('.read_tishi,.mask', '.chapters_list,.read_set');
				}else if(data == '6'){
					$(".read_tishi_nav p").html("登录之后才可以加入书架哦");
					tool_menu_check('.read_tishi,.mask', '.chapters_list,.read_set');
				}else{
					$(".read_tishi_nav p").html("加入书架失败");
					tool_menu_check('.read_tishi,.mask', '.chapters_list,.read_set');
				}
			});
		}


		var nextPage = 16;
		var articleid = 10857;
		var pageMax = '60';

		var pageNextStatus = 1;
		function load_fine_book(page){
			if( !is_numeric(page) || empty(page)){
				return false;
			}
			if(page > pageMax){
				return false;
			}
			str ='<div id="bar" style=" position:fixed; left:5%; right:5%; bottom:120px; text-align:center;"><span style="color:#fff; font-size:12px; border-radius:5px;-webkit-border-radius:5px;-moz-border-radius:5px; background:#000; opacity:0.7; display:inline-block; padding:10px 12px ;">';
			str += '<img src="http://wwwcdn.anyew.com/images/speed.gif" alt="2cloo" /></span></div>';
			$('#article').after(str);
			$.ajax({
				type:"get",
				url:"/book-chapter&is_ajax=1&articleid="+articleid+"&pagenum="+page,
				timeout:10000,
				success:function(data,statu){
					$('#bar').remove();
					$('#article').append(data);
					ss = data.substring(0, 21);
					if(ss != '<div class="flag_ajax'){
						window.location.href="/chapter/"+articleid+"/"+page+".html";
						return;
					}
					var next_page = page + 1;
					var prev_page = page - 1;
					$("#linext a").attr("href", "/chapter/"+articleid+"/"+next_page+".html");
					$("#liprev a").attr("href", "/chapter/"+articleid+"/"+prev_page+".html");

					nextPage = Number(page)+1;
					pageNextStatus = 1;
					if( nextPage > pageMax){
						pageNextStatus = 0;
					}
				},
				error:function(e,status){
					$('#bar').remove();
				}
			})



		}
		$(window).scroll(function () {
			//$(window).scrollTop()这个方法是当前滚动条滚动的距离
			//$(window).height()获取当前窗体的高度
			//$(document).height()获取当前文档的高度
			if (($(window).scrollTop()) >= 100) {
				$(".left_list").removeClass("left_float_nav_top_45");
				$(".left_list").addClass("left_float_nav_top_0");
			}else{
				$(".left_list").removeClass("left_float_nav_top_0");
				$(".left_list").addClass("left_float_nav_top_45");
			}
			var bot = 200; //bot是底部距离的高度
			if ((bot + $(window).scrollTop()) >= ($(document).height() - $(window).height())) {
				//当底部基本距离+滚动的高度〉=文档的高度-窗体的高度时；
				//我们需要去异步加载数据了
				if( pageNextStatus == 1 ){
					pageNextStatus = 0;
					load_fine_book(nextPage);
				}
			}
		});


		//setup_font_size

		//setup_size_max

		//setup_size_minus


		var Reader = {
			contentId : '.zhangjie p',
			contentText : '#setup_font_size',
			//字体大小相关参数
			sizePId : '#setup_size_max',
			sizeMId : '#setup_size_minus',
			sizeMax : 32,
			sizeMin : 14,
			sizeNum : 2,

			//字体大小设置
			sizeP : function(){
				var size = parseInt( $(Reader.contentId).css("font-size") );
				size = size + Reader.sizeNum;
				Reader.sizeSet(size);
			},
			sizeM : function(){
				var size = parseInt( $(Reader.contentId).css("font-size") );
				size = size - Reader.sizeNum;
				Reader.sizeSet(size);
			},
			sizeSet : function(size){
				if( size < Reader.sizeMin ){
					return ;
				}
				if( size > Reader.sizeMax ){
					return ;
				}
				$(Reader.contentId).css("font-size", size + "px");
				$(Reader.contentText).html(size);
				Reader.set('size', size);
			},


			//其他
			get : function(key){
				return getCookie(key);
			},
			set : function(key, val){
				setCookie(key, val, 30);
			},

			init : function(){
				//判断文本字体大小设置 cookie是否保存 如果存在恢复设置
				Reader.sizeSet(Reader.get('size'));
				$(Reader.sizePId).click(Reader.sizeP);
				$(Reader.sizeMId).click(Reader.sizeM);
			}
		}

		$(function(){
			$(".left_list").addClass("left_float_nav_top_45");
			Reader.init();
		})

	</script> 
