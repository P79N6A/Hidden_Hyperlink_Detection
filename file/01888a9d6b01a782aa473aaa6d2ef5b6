.stop{width:50px;position:fixed;bottom:44px;display:none}
.stop img{width:50px;height:50px;display:block;margin-top:10px;cursor:pointer;}
.stop .zoom{width:50px;position:relative}
.wxzo{position:absolute;bottom:0;right:50px;width:138px;height:136px;display:none;}
.wxzo img{width:138px;height:136px;}
</style> 
  <script src="http://code.jquery.com/jquery-latest.js"></script> 
  <script language="javascript">

$(function(){		




	function stop(){
		var $stop = $('#stop');
			$(window).scroll(function(){
				var $scroll = $(this).scrollTop();
				if ( $scroll > 200 )
				{
					$stop.fadeIn();
				}else{
					$stop.fadeOut();
				}
			});

			$("#toTop").click(function(){
				$("body,html").animate({scrollTop:0},500); 
			});
			$("#zoom").click(function(){
				$('#wxzo').toggle();
			});
			
			load();
			$(window).resize(load);
			function load(){
				var $wS = $(document.body).width();
				var $rW = parseInt(($wS-1200)/2)-52;
				if ( $wS < 1200)
				{
					$stop.css({
						'position':'fixed',
						'bottom':'44px',
						'right':'0px'
						});
				}else{
					$stop.css({
						'position':'fixed',
						'bottom':'44px',
						'right': $rW +'px'
						});
				}	
			};

	};
	stop();
});
</script>  
