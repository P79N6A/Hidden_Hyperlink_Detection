<script>
	if (form1.deal.value == "initdatabase") {
		//数据库初始化
		form1.usercode.disabled = true;
		form1.password.disabled = true;
		form1.Submit.value = "初始化";
		alert("数据库为空，请初始化!");
	}else if (form1.deal.value == "initok") {
		//登录
		form1.Submit.value = "登  录";
		//提示
		alert("数据库初始化完成，请重新打开网页");
		form1.deal.value == "";
		form1.usercode.focus();
	}else {
		//登录
		form1.Submit.value = "登  录";
		form1.usercode.focus();
	}
	//Enter键=TAB键
	addEnterKey(form1);
</script>
  
