<script>
	$('#reg').click(function(){
		$.post("./php/register.php",$('#form').serialize(),function(data){
			if(data==="1"){
				layer.msg('报名成功',function(){
					location.reload();
				});
			} else {
				layer.msg(data);
			}
		});
	});
	
</script>
