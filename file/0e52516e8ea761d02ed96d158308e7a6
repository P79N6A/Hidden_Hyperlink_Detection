        function closeList() {
            $(".show-all-listcon").slideUp();
            $(".all-list-mask").hide();
            if ($('body').hasClass('noslide')) $('body').removeClass('noslide');
        }
        $(".all-list-mask").click(function() {
            closeList();
        });
        $(".show-all-listcon").find("li").click(function() {
            closeList();
        });
    });
    //点击按钮，消息框弹出
    $("#btn").bind("click", function () {
        $("div.slide_wrap").addClass("show");
