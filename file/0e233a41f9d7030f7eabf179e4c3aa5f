                                                function(data)
                                                {
                                                    alert(data);
                                                }
                                            )
                                    }


                                    function checkIfCheck()
                                    {
                                        var ifcheck = "0";
                                        if(ifcheck == 'no')
                                        {
                                            alert('未审核文章不许操作！');
                                            return false;
                                        }
                                    }

                                    function operateArticle(type,aid)
                                    {
                                        var ifcheck = "0";
                                        if(ifcheck == 'no')
                                        {
                                            alert('未审核文章不许操作！');
                                            return false;
                                        }
                                        var uid = "";
                                        $.post(
                                            "/detail/operate",
                                            {
                                                type:type,
                                                aid:aid,
                                                table:"article"
                                            },
                                            function(data)
                                            {
                                                data = eval('('+data+')');
                                                alert(data['msg']);
                                                $("#d"+type).html(data['totalNum']);
                                            }
                                            )
                                    }

                                    function colloctArticle(title,aid,id)
                                    {
                                        var ifcheck = "0";
                                        if(ifcheck == 'no')
                                        {
                                            alert('未审核文章不许操作！');
                                            return false;
                                        }
                                        var uid = "";
                                        if(!uid)
                                        {
                                            alert("您尚未登录请登录之后再操作！");
                                            return false;
                                        }
                                        $.post(
                                                "/detail/colloctArticle",
                                                {
                                                    title:title,
                                                    aid:aid
                                                },
                                                function(data)
                                                {
                                                    data = eval('('+data+')');
                                                    
                                                    if(data['status'] == 1)
                                                    {
                                                        alert(data['msg']);
                                                        $("#"+id).removeClass('pos-btn');
                                                        $("#"+id).addClass('pos-btn-collect');
                                                    }
                                                    else
                                                    {
                                                        alert(data['msg']);
                                                        $("#"+id).removeClass('pos-btn-collect');
                                                        $("#"+id).addClass('pos-btn');
                                                    }
                                                }
                                            )                                        
                                    }

                                    function replay(obj)
                                    {
                                        $("#"+obj).stop().slideToggle();
                                    }

                                </script> 
