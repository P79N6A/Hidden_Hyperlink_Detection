  <script type="text/javascript">
$(".more").click(function(){
var page=$(".pagenum").val();		
thread_json(page);
});
function thread_json(page){
if(page){
var newpage = parseInt(page) + parseInt(1);
$(".pagenum").val(newpage);

$.ajax({
url:'ajax.php?mobile=2&p=' + page + '&inajax=1',
type:'GET', 
async:true,    
timeout:5000,   
dataType:'json',    
beforeSend:function(xhr){
$('.actionloding').attr("class","blockloding");
},
success:function(data){
$('.blockloding').attr("class","actionloding");
for(var i=0;i<data.length;i++){
if(data.code != 2){
for(var i=0;i<data.length;i++){
var shtml = data[i].html;												
var fhtml = $(shtml);
$(".search-list").append(fhtml);												
fhtml.fadeIn(1800);					

}
}else{
$(".more").html("宸茬板浜锛浜诧锛锛");
}					

}

}
})				
}			
}
$(".navbnt").click(function(){
       if($('.typediv').css("display") == 'none'){
          $('.typediv').fadeIn(800);
  $(this).html('<i class="am-icon-angle-up"></i>');
   }else{
  $('.typediv').fadeOut(800);
  $(this).html('<i class="am-icon-angle-down"></i>');
   }
});
$(window).load(function(){
var page=$(".pagenum").val(); 
thread_json(page);
});	

