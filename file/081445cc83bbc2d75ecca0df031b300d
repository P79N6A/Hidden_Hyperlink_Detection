   <script language="javascript" type="text/javascript" src="/skin/default/js/foot.js"></script> 
   <script type="text/javascript">
var preview_page = document.getElementById('prev').getAttribute('href') ? document.getElementById('prev').getAttribute('href') : '' ;
var next_page = document.getElementById('next').getAttribute('href') ? document.getElementById('next').getAttribute('href') : '' ;
var index_page = document.getElementById('book').getAttribute('href') ? document.getElementById('book').getAttribute('href') : '' ;
function jumpPage() {
  var event = document.all ? window.event : arguments[0];
  if (event.keyCode == 37) document.location = preview_page;
  if (event.keyCode == 39) document.location = next_page;
  if (event.keyCode == 13) document.location = index_page;
}
document.onkeydown=jumpPage;


</script>  
  </div>
 </body>
</html>