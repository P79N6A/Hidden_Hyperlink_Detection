  <script>
$(function(){
	$(window).on('scroll',function(){
		var st = $(document).scrollTop();
		if( st>0 ){
			if( $('#main-container').length != 0  ){
				var w = $(window).width(),mw = $('#main-container').width();
				if( (w-mw)/2 > 70 )
					$('#go-top').css({'left':(w-mw)/2+mw+20});
				else{
					$('#go-top').css({'left':'auto'});
				}
			}
			$('#go-top').fadeIn(function(){
				$(this).removeClass('dn');
			});
		}else{
			$('#go-top').fadeOut(function(){
				$(this).addClass('dn');
			});
		}	
	});
	$('#go-top .go').on('click',function(){
		$('html,body').animate({'scrollTop':0},500);
	});
	
});
</script> 
  <script type="text/javascript">
$(function(){	
	$("#getcode").click(function(){
		$(this).attr("src",'/code/code.php?' + Math.random());
	});
	$("#chk").click(function(){
		var code = $("#code").val();
		var mailbox = $("#mailbox").val();
		var pnum = $("#pnum").val();
		var page_id = $("#page_id").val();
		var cmsg = $("#cmsg").val();
		$.post("/code/chk_code.php?",{code:code, mailbox:mailbox, page_id:page_id, cmsg:cmsg, pnum:pnum},function(msg){
			if(msg==1){
				report.close();
			}else{
				$("#error_alert").show();
			}
		});
	});
	
});
</script> 
  <script type="text/javascript">
        window.onload = function() {
            var report = new RModal(document.getElementById('report'), {
                   beforeOpen: function(next) {
                    console.log('beforeOpen');
                    next();
                }
                , afterOpen: function() {
                    console.log('opened');
                }

                , beforeClose: function(next) {
                    console.log('beforeClose');
                    next();
                }
                , afterClose: function() {
                    console.log('closed');
                }
            });

            document.addEventListener('keydown', function(ev) {
                report.keydown(ev);
            }, false);

            document.getElementById('showformside').addEventListener("click", function(ev) {
                ev.preventDefault();
				$('#getcode').attr("src",'/code/code.php?' + Math.random());
				$("#error_alert").hide();
                report.open();				
            }, false);
              document.getElementById('showformbottom').addEventListener("click", function(ev) {
                ev.preventDefault();
				$('#getcode').attr("src",'/code/code.php?' + Math.random());
				$("#error_alert").hide();
                report.open();				
            }, false);
            window.report = report;
        }
</script> 
