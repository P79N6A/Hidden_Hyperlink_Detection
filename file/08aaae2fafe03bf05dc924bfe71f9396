function checkForm(){
var test = document.poll_form.elements["poll_choice"];
var checkExist = false;	
    for( e =0 ; e < test.length; e++ )
    {
    if(test[e].checked)
    {
     checkExist = true;
     } }
	if(checkExist)
    {
    return true;
    }
    else
   {
    alert("Please select an option to vote.");
	return false;
   }   
} 
