function CheckRating()
{
	var test = document.form4.elements["rating"];
	var checkExist = false;	
    for( e =0 ; e < test.length; e++ )
    {
		if(test[e].checked)
		{
		 checkExist = true;
		} 
	}
	
	if(checkExist)
    {
		return true;
    }
    else
	{
    	alert("请选分数");
		return false;
	}   
}

