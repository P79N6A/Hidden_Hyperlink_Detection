  <script>
function CheckForm()
{
	
	if(document.form3.commentor_name.value == "")
	{ 
		alert("请输入姓名.");
	  	return false;
	}
	
	
	if(document.form3.email.value == "")
	{ 
		alert("请输入电邮.");
	  	return false;
	}
	else
	{
		var myString = document.form3.email.value;
	
		if ( (myString.indexOf("@") < 0) || (myString.lastIndexOf(".") < myString.indexOf("@") ) )
		{
			alert("电邮不正确");
			return false;
		}
	}

	if(document.form3.location.value == "")
	{ 
		alert("请输入地点.");
	  	return false;
	}
		
	if(document.form3.message.value == "")
	{ 
		alert("请输入评论.");
	  	return false;
	}

	if ( document.form3.verify_code.value == "" )
	{
		alert("请输入密码");
		return false;
	}
	else
	{
		//alert("6VGO3");
		if ( document.form3.verify_code.value != "6VGO3" )
		{
			alert("您输入非正确密码");
			return false;
		}
	}
	
	return true;
} // Check Form

</script> 
  <script>
	function scrollerLoop() {
		myScroller.scrollForward();
		setTimeout("scrollerLoop()", 5000);
	}
</script>
 </body>
</html>