  <script language="JavaScript" src="http://code.54kefu.net/kefu/js/149/685149.js" type="text/javascript" charset="utf-8"></script> 
  <script src="/JS/jquery-1.11.0.min.js" type="text/javascript"></script> 
  <script src="/JS/bootstrap.min.js" type="text/javascript"></script> 
  <script type="text/javascript" src="/ajax/common.ashx"></script>
  <script type="text/javascript" src="/ajax/ThemeMuseum.TM_ArticleDetail,ThemeMuseum.ashx"></script> 
  <script type="text/javascript">
    var CommentCount=0;
    var nickName="0";
    var MuseumID=364;
    var myCommentType=3;
    var CreaterID=48643;
    var Prayflag=0;//记录是否已经提交评论

    $("#divSearch").show();//显示搜索框

    $("#list_titleHidden1").val(CommentCount);
    function add_div(id, replyTxt) {
        var o = document.createElement("div");
        o.className = "wc_list_nod clearfix";
        document.getElementById("feedList").insertBefore(o, document.getElementById("feedList").childNodes[3]);
        var strHTML = TM_ArticleDetail.GetUserComment(id, replyTxt,nickName).value;
        o.innerHTML = strHTML;
        //评论次数增加

        document.getElementById("list_titleHidden1").value = parseInt(document.getElementById("list_titleHidden1").value) + 1;
        document.getElementById("idlist_title").innerHTML = document.getElementById("list_titleHidden1").value.toString() + "条评论";
    }
    function showCommet(id, cNickName) {
        hideCommet();
        document.getElementById("txtReply" + id).style.display = '';
        document.getElementById("txtReplyContent" + id).value = "@" + cNickName.replace(/[ ]/g, "") + "：";
        $("#replyerror" + id).hide();

        //如果已经评论过显示验证码
        if(Prayflag >0)
        {
            $("#iVerCode" + id).show();
            $("#iVerify" + id).show();
        }

        //将光标移至文档末尾
        var objRCon = document.getElementById("txtReplyContent" + id);
        var len = objRCon.value.length;
        objRCon.focus();
        if (document.selection) {
            var sel = objRCon.createTextRange();
            sel.moveStart('character', len);
            sel.collapse();
            sel.select();
        } else if (typeof objRCon.selectionStart == 'number' && typeof objRCon.selectionEnd == 'number') {
            objRCon.selectionStart = objRCon.selectionEnd = len;
        }
    }
    function hideCommet() {
        $("blockquote[id^='txtReply']").hide();
    }
    function checkLen(obj, i) {

        var maxChars = 500; //最多字符数  

        if (obj.value.length > maxChars) obj.value = obj.value.substring(0, maxChars);

        var curr = maxChars - obj.value.length;

        document.getElementById("count" + i).innerHTML = curr.toString();

    }

    function CheckVerify(inputid,errMeg){
        $("#" + errMeg).hide();
        if ($("#" + inputid).val() != "") {
            if ($("#" + inputid).val().replace(/[ ]/g, "").length != 6) {
                $("#" + errMeg).html("您输入的验证码有误");
                $("#" + errMeg).show();
                return 1;
            }
            else {
                if (TM_ArticleDetail.checkCode($("#" + inputid).val()).value == "err") {
                    $("#" + errMeg).html("您输入的验证码有误");
                    $("#" + errMeg).show();
                    return 1;
                }
                else {
                    $("#" + errMeg).hide();
                    return 0;
                }
            }
        }
        else {
            $("#" + errMeg).html("请输入验证码");
            $("#" + errMeg).show();
            return 1;
        }
    }

    function clicksubmit(id, NickName) {
        //如果已经评论过显示验证码
        if(Prayflag >0)
        {
            var verifyFlag = CheckVerify("iVerCode" + id,"replyerror" + id);
            if(verifyFlag != 0)
            {
                return;
            }
        }
        

        var replyTxt = $("#txtReplyContent" + id).val().toString();
        replyTxt = ModifyContent(replyTxt, NickName);

        if (replyTxt == "") {
            $("#replyerror" + id).html("请输入回复内容");
            $("#replyerror" + i).show();
            return;
        }
        var str = 5782;
        var result = TM_ArticleDetail.AddReply(str,id, replyTxt, MuseumID,nickName,myCommentType,CreaterID).value;
        var dt = new Date();
        var year = dt.getFullYear();
        var month = dt.getMonth() + 1;
        var day = dt.getDate();
        var hours = dt.getHours();
        var minutes = dt.getMinutes();
        if (month.toString().length < 2) {
            month = "0" + month;
        }
        if (day.toString().length < 2) {
            day = "0" + day;
        }
        if (hours.toString().length < 2) {
            hours = "0" + hours;
        }
        if (minutes.toString().length < 2) {
            minutes = "0" + minutes;
        }
        var replyTime = year + "-" + month + "-" + day + " " + hours + ":" + minutes;
        if (result != "failure") {

            $("#content_txt_" + id).append("<div class='content_txt'><a href='javascript:void(0);' style='color: #ff4f00;'>" + result + ":" + replyTxt + "</a><span class='pub_time'>今天 " + hours + ":" + minutes + "</span></div>");
            $("#txtReplyContent" + id).val("");
            hideCommet();

            Prayflag++;
        }
    }
    $("#txtcontent").focus(function () {
        $("#errorDetail").hide();
    });

    $("#inputVerCode").blur(function () {
        $("#errorDetail").hide();
        if ($("#inputVerCode").val() != "") {
            if ($("#inputVerCode").val().replace(/[ ]/g, "").length != 6) {
                $("#errorDetail").html("您输入的验证码有误");
                $("#errorDetail").show();
                return;
            }
            else {
                if (TM_ArticleDetail.checkCode($("#inputVerCode").val()).value == "err") {
                    $("#errorDetail").html("您输入的验证码有误");
                    $("#errorDetail").show();
                    return;
                }
                else {
                    $("#errorDetail").hide();
                }
            }
        }
        else {
            $("#errorDetail").html("请输入验证码");
            $("#errorDetail").show();
            return;
        }

    });

    //添加评论
    $("#comment").click(function () {
        //如果已经评论过显示验证码
        if(Prayflag >0)
        {
            $("#errorDetail").hide();
            if ($("#inputVerCode").val() != "") {
                if ($("#inputVerCode").val().replace(/[ ]/g, "").length != 6) {
                    $("#errorDetail").html("您输入的验证码有误");
                    $("#errorDetail").show();
                    return;
                }
                else {
                    if (TM_ArticleDetail.checkCode($("#inputVerCode").val()).value == "err") {
                        $("#errorDetail").html("您输入的验证码有误");
                        $("#errorDetail").show();
                        return;
                    }
                    else {
                        $("#errorDetail").hide();
                    }
                }
            }
            else {
                $("#errorDetail").html("请输入验证码");
                $("#errorDetail").show();
                return;
            }
        }

        if ($("#txtcontent").val() == "") {
            $("#errorDetail").text("请输入评论内容").show();
            return;
        }
        var content=$("#txtcontent").val().toString();
        var str = 5782;
        var result = TM_ArticleDetail.AddComment(str,content,MuseumID,nickName,myCommentType,CreaterID).value;
        if (result != "failure") {
            add_div(result, $("#txtcontent").val());
            document.getElementById("txtcontent").value = "";
            //location.reload();
            $("#inputVerCode").show();
            $("#icommentVerify").show();
            Prayflag++;
        }
    });


    $("#idcomment").click(function () {
        $("#txtcontent").focus();
    });

    //文章字体设置
    function checkFontSize(size) {
        var divBody = document.getElementById("core-info");
        var divBody2 = document.getElementById("idcomment");
        if (!divBody) {
            return;
        }
        divBody.style.fontsize = size + "PX";
        var divChildBody = divBody.childNodes;
        for (var i = 0; i < divChildBody.length; i++) {
            if (divChildBody[i].nodeType == 1) {
                divChildBody[i].style.fontSize = size + "PX";
            }
        }
    }

    function ModifyContent(strContent, NickName) {
        NickName = "@" + NickName.replace(/[ ]/g, "") + "：";
        if (strContent.indexOf(NickName) == -1) {
            return strContent;
        }
        else {
            return strContent.substr(strContent.indexOf(NickName) + NickName.length);
        }
    }
</script> 
  <!--js部分--> 
  <script type="text/javascript">
    if (navigator.userAgent.match(/mobile/i)) {
        $(".botbox").hide();
    }
    var pmh = $(window).height();
    if (!window.XMLHttpRequest && document.all) {
        $(window).scroll(function () {
            var srh = $(window).scrollTop();
            $(".botbox").css("top", pmh + srh - 130 + "px");
        })
    }
    $(".closex").click(function () {
        $(".botbox").fadeOut(200);
    })
</script> 
