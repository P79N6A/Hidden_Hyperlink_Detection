function ContinueSearch(){
    if(document.getElementById("TopSearchTextBox").value==""){
        return false;
    }else{
        if(document.getElementById("QuestionTypeList").value=="0"){
            location="../Question/Search.aspx?Key="+escape(document.getElementById("TopSearchTextBox").value);
        }else{
            location="../Question/Search.aspx?Key="+escape(document.getElementById("TopSearchTextBox").value)+"&QuestionTypeID="+document.getElementById("QuestionTypeList").value; 
        }
    }
}

