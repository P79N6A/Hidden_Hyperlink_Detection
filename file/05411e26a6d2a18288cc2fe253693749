    function Vote(id) {
        $.ajax({
            type: "GET",
            url: "../WebInterFace/AddOpinion.ashx",
            data: "BestAnswerID=" + id + "&rnd=" + Math.random(),
            success: function(bb) {
                if (bb > 0) {
                    if (document.getElementById("GoodNumber").innerHTML == bb) {
                        document.getElementById("voteResult").innerHTML = "<span style='color:#ff6600'>您已评价！</span>";
                    }
                    else {
                        document.getElementById("GoodNumber").innerHTML = bb;
                        document.getElementById("voteResult").innerHTML = "<span style='color:#ff6600'>评价成功！</span>";
                    }
                } else {
                    switch (bb) {
                        case '-1':
                            {
                                document.getElementById("voteResult").innerHTML = "<span style='color:#ff6600'>您已评价！</span>";
                            } break;
                        case '-9999': alert("系统繁忙，请稍后再试!"); break;
                    }
                }
                intervalID = setInterval(function() { clearVoteResult(); }, 1000);
            }
        });
    }
</script>

