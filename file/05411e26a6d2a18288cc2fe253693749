//搜索框js
//
//函数生成下拉列表

var array=new Array(); //要SUGGEST的内容

var zz=-1; //此为指针

function buildList(){
zz=-1;
//document.getElementById("search_suggest").innerHTML="";
document.getElementById("search_suggest").innerHTML="";
for(var i=0;i<array.length;i++){
		if(array[i]!=""){
		document.getElementById("search_suggest").innerHTML+="<div id='item" + i + "' class='item_normal' onmouseover='beMouseOver(" + i +")' onmouseout='beMouseOut(" + i + ")' onclick='beClick(" + i + ")'>" + array[i] + "</div>";
		}
	}//for循环
	
	//添加薪图层
    var newDiv = document.createElement("div"); 
    newDiv.id="close";
    newDiv.style.width = "100%"; 
    newDiv.style.margin="0px";
    newDiv.style.pading="0px";
    newDiv.style.height="20px";

    newDiv.innerHTML = "<div id=closeme onclick='javascript:closeSuggest();' style='float:right;cursor:pointer;color:#383838;margin:0px;padding:0px'>[关闭]</div>";  
    //newDiv.appendChild(newA); 
    document.getElementById("search_suggest").appendChild(newDiv);

	$("#search_suggest").show();

}//函数

//函数鼠标经过效果
function beMouseOverEFF(i){
if ((i>=0)&(i<=array.length-1)){
document.getElementById("item" + i).className="item_high";
}
}

//函数鼠标移开效果
function beMouseOutEFF(i){
if ((i>=0)&(i<=array.length-1)){
document.getElementById("item" + i).className="item_normal";
}
}

//函数鼠标经过
function beMouseOver(i){
document.getElementById("ctl00_TopQuestionSearch1_tbSearch").focus();
beMouseOutEFF(zz);
zz=i;
beMouseOverEFF(zz);
}

//函数鼠标移开
function beMouseOut(i){

}

//函数单击
function beClick(i){
document.getElementById("ctl00_TopQuestionSearch1_tbSearch").value=array[i];
closeSuggest();
document.getElementById("ctl00_TopQuestionSearch1_tbSearch").focus();
//zz=-1;
}

function closeSuggest()
{
    document.getElementById("search_suggest").style.display="none";
}

//方向键接收函数
function beKeyDown(event){
	event = window.event?window.event:event;
	//往下按
	if (event.keyCode==40){
	if(zz<array.length-1){beMouseOutEFF(zz++);}
	if(zz<array.length){beMouseOverEFF(zz);}
	//if(zz==array.length-1)
//	{
//		beMouseOutEFF(zz+1);
//	    beMouseOverEFF(0);
//		zz=-1;
//		}
}

//往上按
if (event.keyCode==38){
	
	if(zz<=0)
	{
		 if(zz==0) //最顶上一个元素时跳到最底下元素
		{
			beMouseOutEFF(0);
			//beMouseOverEFF(zz);
		}
		zz=array.length; 
	}
 if(zz<0){zz=array.length;} // 选择一条
if (zz>0){beMouseOutEFF(zz--);}
if (zz>=0){beMouseOverEFF(zz);}

}
//按回车或者TAB
if (event.keyCode==13||event.keyCode==9){
if (zz!=-1){
beClick(zz);}
else
{
//document.getElementById("search_button").focus();

}
}
}

//beKeyUp事件。与服务器通信
function beKeyUp(event){
	event = window.event?window.event:event;
//	alert(document.getElementById("ctl00_TopQuestionSearch1_tbSearch").width);
	document.getElementById("search_suggest").width = document.getElementById("ctl00_TopQuestionSearch1_tbSearch").width;
//	$("#search_suggest").width($("#questiontext").width()); 

if(event.keyCode!=13&event.keyCode!=9&event.keyCode!=38&event.keyCode!=40)
	{
		if (document.getElementById("ctl00_TopQuestionSearch1_tbSearch").value.length>0)
				{
					PinYinKeySearch(document.getElementById("ctl00_TopQuestionSearch1_tbSearch").value, "164");
				}
				else
				{
					$("#search_suggest").hide();
				}
	}
}

    function PinYinKeySearch(key, questionTypeID) {
        $.ajax({
            type: "GET",
            url: "http://iq.sdo.com/WebInterface/SearchKeyService.ashx",
            data: "key=" + escape(key) + "&questiontypeid=" + questionTypeID,
            success: function(bb)
            {
//                    var htmls= result.responseText.substring(result.responseText.indexOf("<script"),result.responseText.length);
//                    $("#search_suggest").html(htmls);

                result = bb.split("|");
                for(i=0;i<array.length;i++){array[i]="";}
                if (result.length > 0)
                {                	
                    if (result[0]== "error")
                    {
	                    $("#search_suggest").hide();
	                    return;
                    }
                    else if (result[0]== "succ")
                    {
	                    array.length=result.length - 1;
	                    for(i=1;i<result.length;i++){array[i - 1]=result[i];}	
	                    buildList();
                    }
                }
            }
        });
}



