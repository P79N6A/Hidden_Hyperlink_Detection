function ContinueAsk(){
    if(document.getElementById("TopAskTextBox").value==""){
        return false;
    } else {
        
        location = "../Question/Ask.aspx?Key=" + escape(document.getElementById("TopAskTextBox").value) + '&QuestionTypeid=164';
        
    }
}


