<iframe src="" id="downloadframe" style="display: none;"></iframe>

<script type="text/javascript">
    var custom = "chinaunicom://";
    var alt = "http://wap.10010.com/t/wap/upload/khd.jsp";
    var timer;
    var heartbeat;
    var iframe_timer;

    function clearTimers() {
        clearTimeout(timer);
        clearTimeout(heartbeat);
        clearTimeout(iframe_timer);
    }
    ;

    function intervalHeartbeat() {
        if (document.webkitHidden || document.hidden) {
            clearTimers();
        }
    }
    ;

    function tryIframeApproach() {
        $("#downloadframe").attr("src", custom);
        window.location.href = alt;
    }
    ;

    function tryWebkitApproach() {
        document.location = custom;
        timer = setTimeout(function () {
            document.location = alt;
        }, 2500);
    }
    ;

    function subForm() {
        var phonenum = $('.phonenum').val();
        var code = $('.code').val();
        var flagPhone = validatePhone();
        if (!flagPhone) {
            return;
        }

        var flagCode = validateCode();
        if (!flagCode) {
            return;
        }
        $('#randomInfo').html('<img src="http://img.client.10010.com/mobileService/view/client/images/loading.gif" width="16">');
        $.post('/mobileService/tuiguang/saveTuiGuangInfo.htm?mobileNumber=' + phonenum + '&randomVal=' + code + '&province_code=51&eparchy_code=540&channel_id=5151b0gv8&developer_id=5105328010&channel_from=msg_tg'
                , function (msg) {
                    if (msg == 'NOTGET') {
                        $('#randomInfo').html('请先获取验证码!');
                        $('#randomInfo').css('display', 'block');
                    } else if (msg == 'ERROR') {
                        $('#randomInfo').html('已超过当天 最大发送次数!');
                        $('#randomInfo').css('display', 'block');
                    } else if (msg == 'TIMEOUT') {
                        $('#randomInfo').html('非常抱歉，您的验证码已失效，请重新获取短信验证码。');
                        $('#randomInfo').css('display', 'block');
                    } else if (msg == 'FAIL') {//FAIL
                        $('#randomInfo').html('您输入的验证码有误，请重新输入。');
                        //$('#randomCode').css('border','1px solid #f00');
                        $('#randomInfo').css('display', 'block');
                    } else if (msg == 'SUCCESS') {
                        // 拉起客户端或者到下载页面
                        callClient();
                    } else if (msg == 'USED') {
                        $('#randomInfo').html('验证码已使用，请重新获取！');
                        $('#randomInfo').css('display', 'block');
                    } else if (msg == 'HASDATE') {
                        $('#randomInfo').html('亲，您已经被推荐过，不能重复被推荐，感谢您的参与！');
                        $('#randomInfo').css('display', 'block');
                    } else {
                        $('#randomInfo').html('系统忙，请稍后再试！');
                        $('#randomInfo').css('display', 'block');
                    }
                }, 'text').error(function () {
            $('#randomInfo').html('系统忙，请稍后再试！');
            $('#randomInfo').css('display', 'block');
        });

//     	$('#download_open_khd').submit();
    }

    function callClient() {
        //登录端类型
        var type = clientType();
        if ("other" == type) {
            window.location = alt;
            //如果是wap浏览器执行......
        } else {
            if ("android" == type) {
                launch_app_or_alt_url($(this));
                event.preventDefault();
            } else {
                var loadDateTime = new Date();
                window.setTimeout(
                        function () {
                            var timeOutDateTime = new Date();
                            if (timeOutDateTime - loadDateTime < 1000) {
                                window.location = alt;
                            } else {
                                window.close();
                            }
                        }, 500);
                // 程序路径
                try {
                    window.location.href = custom;
                } catch (e) {
                }
            }
        }
    }

    function launch_app_or_alt_url(el) {
        var url = navigator.userAgent.toLowerCase().replace(/\ +/g, "");
        heartbeat = setInterval(intervalHeartbeat, 200);
        if (navigator.userAgent.match(/Chrome/)) {
            window.location = alt;
        } else if (navigator.userAgent.match(/Firefox/)) {
            tryWebkitApproach();
            iframe_timer = setTimeout(function () {
                tryIframeApproach();
            }, 1500);
        } else if (navigator.userAgent.toLowerCase().match(/mqqbrowser/)) {
            window.location = alt;
        } else if (url.indexOf("360aphone") > -1) {
            window.location = alt;
        } else {
            tryIframeApproach();
        }
    }

    function clientType() {
        var browser = {
            versions: function () {
                var u = navigator.userAgent, app = navigator.appVersion;
                return {         //移动终端浏览器版本信息
                    trident: u.indexOf('Trident') > -1, //IE内核
                    presto: u.indexOf('Presto') > -1, //opera内核
                    webKit: u.indexOf('AppleWebKit') > -1, //苹果、谷歌内核
                    gecko: u.indexOf('Gecko') > -1 && u.indexOf('KHTML') == -1, //火狐内核
                    mobile: !!u.match(/AppleWebKit.*Mobile.*/), //是否为移动终端
                    ios: !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/), //ios终端
                    android: u.indexOf('Android') > -1 || u.indexOf('Linux') > -1, //android终端或uc浏览器
                    iPhone: u.indexOf('iPhone') > -1, //是否为iPhone或者QQHD浏览器
                    iPad: u.indexOf('iPad') > -1, //是否iPad
                    webApp: u.indexOf('Safari') == -1 //是否web应该程序，没有头部与底部
                };
            }(),
            language: (navigator.browserLanguage || navigator.language).toLowerCase()
        };
        if (browser.versions.android) {
            return "android";
        } else if (browser.versions.iPhone || browser.versions.ios || browser.versions.iPad) {
            return "ios";
        } else {
            return "other";
        }
    }

    function validatePhone() {
        $('#randomInfo').html('');
        var phonenum = $('.phonenum').val();
        var reg1 = /^1[0-9]{10}$/;
        var reg2 = /^(130|131|132|155|156|176|185|186)[0-9]{8}$/;
        if ('' == phonenum) {
            $('#randomInfo').html('请输入手机号码');
// 			$('#randomInfo').css('display','block');
            return false;
        } else if (!reg1.test(phonenum)) {
            $('#randomInfo').html('非常抱歉，您的号码非联通手机号，请重新输入。');
// 			$('#randomInfo').css('display','block');
            return false;
        } else if (!reg2.test(phonenum)) {
           if( !validateOtherPhone(phonenum)){
                $('#randomInfo').html('非常抱歉，您的号码非联通手机号，请重新输入。');
                return false;
            }

        }
        return true;
    }

//    验证是否是携号转网用户
        function validateOtherPhone(phone) {
            var url =  '/mobileService/tuiguang/valuatePhone.htm';
            var result= true;
            $.ajax({
                dataType : 'json',
                data:{ mobileNumber:phone },
                url : url,
                async:false,
                type : 'POST',
                success : function (data) {
                    if (data.result == 'FAIL') {
                        result = false;
                    }
                }
            });
            return result;
}
    function validateCode() {
        $('#randomInfo').html('');
        var code = $('.code').val();
        var reg1 = /^[0-9]{6}$/;
        if ('' == code) {
            $('#randomInfo').html('请输入验证码');
            $('#randomInfo').css('display', 'block');
            return false;
        } else if (!reg1.test(code)) {
            $('#randomInfo').html('您输入的验证码有误，请重新输入。');
            $('#randomInfo').css('display', 'block');
            return false;
        }
        return true;
    }

    //获取短信验证码
    var t;
    var validCode = true;
    $(".yzm").click(function () {
        var phonenum = $('.phonenum').val();
        var flag = validatePhone();
        if (!flag) {
            return;
        }
        $.post('/mobileService/tuiguang/sendMsg.htm?mobileNumber=' + phonenum
                , function (data) {
                    if (data == 'FAIL') {
                        $('#randomInfo').html('已超过当天 最大发送次数');
                        $('#randomInfo').css('display', 'block');
                    }
                }, 'text');
        var time = 60;
        var code = $(this);
        if (validCode) {
            validCode = false;
            code.addClass("msgs1");
            code.html(60 + "秒后重新发送");
            t = setInterval(function () {
                time--;
                code.html(time + "秒后重新发送");
                if (time == 0) {
                    clearInterval(t);
                    code.html("重新获取验证码");
                    validCode = true;
                    code.removeClass("msgs1");

                }
            }, 1000)
        }
    });


</script>














 
    
    
    
    
    

