     <div class="thname" id="myshares">
      <a href="forum.php?mod=viewthread&amp;tid=201151&amp;extra=page%3D4&amp;mobile=2">单车编队骑行手势图解</a>
     </div> 
     <!-- more pagelist start --> 
     <div class="plc cl" id="pid683689"> 
      <div class="display pi"> 
       <div class="authi"> 
        <img class="avatar" src="http://www.xya8.com/uc_server/avatar.php?uid=1&amp;size=small" /> 
        <p> <em class="views vn-bt">3219</em> <span class="vn-bt"> <a href="home.php?mod=space&amp;uid=1&amp;do=profile&amp;mobile=2">admin</a> </span> <i class="mod">管理组</i> </p> 
        <em class="datelinetimes">2012-7-21 20:29</em> 
       </div> 
       <script type="text/javascript">
