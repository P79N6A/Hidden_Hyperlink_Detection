  <script type="text/javascript">
        var merId = "1368";
        function paySubmit() {
            var obj = document.getElementById("txtGameUser");
            if (obj.value == "") {
                alert("请输入充值账号");
                obj.focus();
                return false;
            }
            var obj2 = document.getElementById("txtGameUser2");
            if (obj.value != obj2.value) {
                alert("两次输入的账号不一致");
                obj2.focus();
                return false;
            }
            if (obj.value.length > 10 || obj.value.length < 4) {
                alert("账号长度必须在4-10位之间");
                obj2.focus();
                return false;
            }
            var accountRegex = new RegExp("^[A-Za-z0-9]+$");
            if (!accountRegex.test(obj.value)) {
                alert("游戏账号必须为字母或数字！");
                obj.focus();
                return false;
            }
            var selectedPayType = "";
            var radios = document.getElementsByName("PayMethod");
            var tag = false;
            var val;
            for (var i = 0; i < radios.length; i++) {
                if (radios[i].checked) {
                    tag = true;
                    selectedPayType = radios[i].getAttribute("data-paytype");
                    break;
                }
            }
            if (!tag && selectedPayType == "") {
                alert("请选择支付方式");
            }

            document.getElementById("txtPayType").value = selectedPayType;
            document.getElementById("form_paymain").submit();
        }
        function radiocheck() {
            var rds = document.getElementsByName("PayMethod").elements;
            for (var i = 0; i < rds.length; i++) {
                if (rds[i].checked) {
                    if (i != rds.length - 1) {
                        rds[i + 1].checked = true;
                    }
                    return;
                }
            }
            alert("请选择");
        }
    </script>  
