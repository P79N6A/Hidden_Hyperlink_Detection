var nextpage="/mag/4/3/1048_32.html";

function nextpage(event) 
{
   event = event ? event : (window.event ? window.event : null); 
   if (event.keyCode==39) 
   {
      if (nextpage==">")
      {
     alert("已经是最后一页了！")
      }
      else
      {
     location=nextpage
      }
   }
  if (event.keyCode==37) 
  {
    //alert("Prevpage Page!");
