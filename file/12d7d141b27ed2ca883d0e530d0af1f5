    function initReadTool() {
    	// 更新工具栏左边和目录高度
    	function updateReadTool() {
            $(".catalogue_headcon").css("left", $(".catalogue_mid .catalogue_mid_top").offset().left);
            $(".catalogue_left_mid").css("height", $(window).height() - $(".catalogue_headcon").height() - 50);
            $(".catalogue_left").css("top", $(".catalogue_headcon").offset().top);
            $(".t2 a").click(function() {
            	return false;
            });
            $(".t3 a").click(function() {
            	return false;
            });
        }
    	
    	$(window).scroll(updateReadTool);
    	$(window).resize(updateReadTool);
    	updateReadTool();
    	$('.scroll-pane').jScrollPane();
    	$(".catalogue_left").hide();
    	
    	// 左侧栏按钮
    	$("#top_read_t1").click(function() {
            $("#catalogue_left").toggle();
            if($("#catalogue_left").is(":hidden")){
                $("#top_read_t1a").removeClass("selected");
                $(".content_catalogue").removeClass("L");
            }else{
                $("#top_read_t1a").addClass("selected");
                $(".content_catalogue").addClass("L");
            }
            updateReadTool();
        });
    	
    	// 右侧栏按钮
    	$("#top_read_t6").click(function() {
            $("#catalogue_right").toggle();
            if($("#catalogue_right").is(":hidden")){
                $("#top_read_t6a").removeClass("selected");
                //$(".content_catalogue").removeClass("R");
            }else{
                $("#top_read_t6a").addClass("selected");
                //$(".content_catalogue").addClass("R");
            }
            updateReadTool();
        });
    	
    	// 加载右侧栏内容
    	$("#catalogue_right .catalogue_right_mid").load("/ajax/pageright.jsp?book=15461&page=5&type=all");
    }
    
    // 返回顶部按钮
    function initTopButton() {
        var btn = "a.tool1";
        $(window).scroll(function(){
            var scrollTopNum = $(document).scrollTop();
            (scrollTopNum > 0) ? $(btn).fadeIn() : $(btn).fadeOut();
        });
        
        $(btn).hide().click(function() {
            $.scrollTo('0px', 800);
        });
    }
    
    // 笔记发布对话框
    function showPubAnnotationBox(bookID, pageNum) {
        $("#msgBox").bPopup({
            follow: [false, false],
            closeClass: "msgShut",
            contentContainer: ".msgDetail",
            loadUrl: "/ajax/pubannotation.jsp?book=" + bookID + "&page=" + pageNum
        });
    }
    
    // 初始化笔记发布框
    function initPubAnnotationBox() {
    	var txt = ann.getSelectedText();
    	if (txt.length > 140) {
    		txt = txt.substring(0, 140) + "...";
    	}
    	$(".ref_content").replaceWith(txt);
    	// 提交笔记
        $("a.submit_btn").click(function(){
        	ann.onEditorSubmit();
        	$("#msgBox").bPopup().close();
        	return false;
        });
    }
 
    // 用户鼠标划词事件
    function onSelect(sel) {
    	// enable annotation and excerpt button
    	if (sel && sel.length > 0) {
    		$(".t2").toggleClass("NotAvailable", false);
    		$(".t2 a").click(function(){
    			showPubAnnotationBox(15461, 5);
    		});
    		$(".t3").toggleClass("NotAvailable", false);
    		$(".t3 a").click(function(){
    			showPubExcerptBox(sel, 15461);
    		});
    	} else {
    		$(".t2").toggleClass("NotAvailable", true);
    		$(".t2 a").unbind();
    		$(".t3").toggleClass("NotAvailable", true);
    		$(".t3 a").unbind();
    	}
    }
</script>   
 </body>
</html>