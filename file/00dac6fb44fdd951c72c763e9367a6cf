     <script type="text/javascript">
		// cookies
		var div1=document.getElementById("cookies");
		var b=document.getElementById("b");
		var arr = document.cookie.split(';');
		var  flag=true ;
		for(var i=0;i<arr.length;i++){
			arr[i]=arr[i].trim();
			if(arr[i]=='NoneDisplay=true'){
				div1.style.display='none';
				b.style.background='transparent';
				flag=false;
				checkToggle();
				break;
			}
		};

		// toggle
		$(".checktoggle").on("touchstart",function(){
			if(flag==true){
				var d = new Date();
				d.setHours(d.getHours()+3);
				document.cookie="NoneDisplay=true;expires="+d.toUTCString()+";path=/";
				flag=false
				$(".bottom-nav").css({
					"background":" transparent"
				})
				checkToggle()
				$("#cookies").animate({
					"width":"0",
				},300,function(){
					$("#cookies").hide()
				})
				flag=false
			}
			else {
				$("#cookies").show()
				checkToggle1();
				$(".bottom-nav").css({
					"background":"#f0f8ff "
				})
				$("#cookies").animate({
					"width":"83%"
				})
				flag=true
			}
		})

		function checkToggle(){
			$(".checktoggle").attr("src","http://www.nbd.com.cn/corp/2016app/images/exit.jpg")
		}
		function checkToggle1(){
			$(".checktoggle").attr("src","http://www.nbd.com.cn/corp/2016app/images/shou.png")
		}
		var imgs = $(".article-ul a img");
		for(var i=0;i<imgs.length;i++){
			//imgs[i].attr('src',this.attr('data-aload'));
			var url = imgs[i].getAttribute('data-aload');
			if( url != null && url.length > 0){
				imgs[i].setAttribute('src',url);
			}
		}
</script> 
