  <script type="text/javascript">
jQuery(document).ready(function(){

	var bodyHeight = document.body.clientHeight;
	var leftPanelHeight = 145;//左浮动高度
	var rightPanelHeight = jQuery("#sidemenu").height(); /* 354 415 */
	if(isNaN(rightPanelHeight) || rightPanelHeight < 200){rightPanelHeight = 415;}//右浮动高度
	var readTop = jQuery(".middle").position().top;	//内容区顶距


	//点击顶部用户条开关时重新获取内容区顶距，重设左右浮动位置
	$(window).scroll(function(){
		setposition();
	});
	//滚动时set定位
	function setposition(){

		var readHeight = jQuery(".middle").height();	//内容区高度
		var lefttop = readHeight + readTop - leftPanelHeight;//左侧定位事件边界
		var righttop = readHeight + readTop - rightPanelHeight;//右侧定位事件边界
		var scrollTop=$(document).scrollTop();
		var windowHeight = $(window).height();
			if ($.support.msie && ($.support.version == "6.0") && !$.support.style){}else{
				$("#rightheight").val(righttop);
				if(scrollTop>readTop && scrollTop<(lefttop)){
					jQuery("#leftmenu").css({"position":"fixed","top":"0px"});
					jQuery("#uiDirectorPanel").css({"position":"fixed","top":+59+"px"});//章节目录比浮动按钮+59
				}else if(scrollTop>(lefttop)){
					//jQuery("#leftmenu").css({"position":"absolute","top":lefttop+"px",bottom:"auto"});
					jQuery("#leftmenu").css({"position":"absolute","top":righttop+"px",bottom:"auto"});
					jQuery("#uiDirectorPanel").css({"position":"absolute","top":lefttop+59+"px",bottom:"auto"});
				}else{
					jQuery("#leftmenu").css({"position":"absolute","top":readTop});
					jQuery("#uiDirectorPanel").css({"position":"absolute","top":readTop+59+"px"});
				};
				//左
				if(scrollTop>(readHeight + readTop - windowHeight)){
					jQuery("#sidemenu").css({"position":"absolute","top":righttop+"px",bottom:"auto"});
				}else{
					jQuery("#sidemenu").css({"position":"fixed","bottom":"0px","top":"auto"});
				}
				//右
			}
	}

	setposition();
});


$(function() {

	if($.cookie("BgWidth") != null){
		$(".chapter").width($.cookie("BgWidth")+"px");

		$('#leftmenu').css("marginLeft",-$.cookie("BgWidth")/2-50+"px");
		$('#sidemenu').css("marginLeft",$.cookie("BgWidth")/2+"px");
	};

	if($.cookie("Bgcolor") != null){
		$(".chapter").css("background",$.cookie("Bgcolor"));
	};

	if($.cookie("FtColor") != null){
		$("#content").css("color",$.cookie("FtColor"));
	};

	if($.cookie("FtSize") != null){
		$("#content").css("fontSize",$.cookie("FtSize"));
	};


	$(".menu ul li a").click(function(){
		//$(this).siblings("div").toggle();
		$(".menu ul li a").siblings("div").css('display','none');
		$(this).siblings("div").css('display','block');

	});

	$(".close").click(function(){
		$(this).parent("div").toggle();
	});

	/*阅读页面设置*/
	$("#BgColorPanel .setting-bg-color").click(function(){

		$("#BgColorPanel .setting-bg-color").removeClass("current"),
		$(this).addClass("current"),

		$.cookie('Bgcolor', $(this).attr("data-bind")); 
		$(".chapter").css("background",$(this).attr("data-bind"));
	}),

	//字体颜色
	$("#FtColorPanel .setting-font-color").click(function(){

		$("#FtColorPanel .setting-font-size").removeClass("current"),
		$(this).addClass("current"),

		$.cookie('FtColor', $(this).attr("data-bind"));
		$("#content").css("color",$(this).attr("data-bind"));
	}),

	//字体大小
	$("#FtSizePanel .setting-font-size").click(function(){
		$("#FtSizePanel .setting-font-size").removeClass("current"),
		$(this).addClass("current"),

		$.cookie('FtSize', $(this).attr("data-bind")); 
		$("#content").css("fontSize",$(this).attr("data-bind"));
	}),

	//页面宽度
	$("#FtSizePansssel .setting-width").click(function(){
		$("#FtSizssssePanel .ui-setting-width").removeClass("current"),
		$(this).addClass("current"),
		$.cookie('BgWidth', $(this).attr("data-bind"));
		$(".chapter").width(""+$(this).attr("data-bind")+"px");

		$('#leftmenu').css("marginLeft",-$(this).attr("data-bind")/2-50+"px");
		$('#sidemenu').css("marginLeft",$(this).attr("data-bind")/2+"px");
		//ReadConfig.setValue("viewWidth", $(this).attr("data-bind"))
	});
});


//购买章节
function BuyChapter(cid){
	$.ajax({url:'/Ajax/BuyChapter',data:{'cid':cid},dataType:'json',
		success:function(res){
			if(res.status==1){
				layer.msg(res.info);
				setTimeout(function(){
					window.location.reload();
				},2000);
			}else{
				layer.alert(res.info);
			}
		},
		error:function(){layer.alert('订阅失败！，请联系站长！')}
	})
	return false;
}


//购买全部章节
