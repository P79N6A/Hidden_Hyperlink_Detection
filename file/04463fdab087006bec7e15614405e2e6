  <script type="text/javascript">
$(function(){
	//发布评论
	$('#plform').on('submit',function(){
		var frm = formtojson('#plform');
		if(frm.title.length<3){layer.alert('评论标题必需3个字以上！');return false;}
		if(frm.content.length<5){layer.alert('评论内容必需5个字以上！');return false;}

		$.ajax({url:'/ajax/AddComment',data:frm,dataType:'json',
			success:function(res){
				if(res.code==1){
					layer.msg(res.info);
				}else{
					layer.alert(res.info);
				}
			},
			error:function(){layer.alert('评论发布失败，请联系站长！')}
		})
		return false;
	});

	//打赏
	$('#play li').on('click',function(){
		var bid = $(':input[name=bid]').val();
		var title = $('h1').text();
		var money = $(this).attr('dovalue');
		//询问框
		layer.confirm('是否确定给《'+title+'》捧场'+money+'阅创币吗？', {
			btn: ['确认','取消'] //按钮
		}, function(){
			$.ajax({url:'/ajax/rewards',data:{'money':money, 'bid':bid},dataType:'json',
				success:function(res){
					if(res.code==1){
						layer.msg(res.info);
					}else if(res.code==0){
						layer.alert(res.info, {
							btn: ['去充值', '想得美']
							,yes: function(index){
								window.open("http://www.yczw.cc/member/payment.html");
							}
						});
					}else{
						layer.msg(res.info, {icon: 1});
					}
				},
				error:function(){layer.alert('评论发布失败，请联系站长！')}
			})
			{icon: 1};
		});
	});
});

//添加阅读记录
$(document).ready(function() {
	$(window).scroll(function() {
		if ($(document).scrollTop() <= 0) {
			//alert("滚动条已经到达顶部为0");
		}


		if ($(document).scrollTop() >= $(document).height() - $(window).height()) {
			// alert("滚动条已经到达底部为" + $(document).scrollTop());

			var bid = $(':input[name=bid]').val();
			var cid = $(':input[name=cid]').val();
			$.ajax({url:'/ajax/AddReading',data:{'bid':bid, 'cid':cid},dataType:'json',
				success:function(res){
					if(res.code==1){
						//layer.msg(res.info);
					}else{
						//layer.alert(res.info);
					}
				},
				//error:function(){layer.alert('评论发布失败，请联系站长！')}
			})
		}
	});
});
