//    $(".liuxue360 a").click(function () { Report(1, 28, 0, "c"); })


    function isSearch() {
        var keys =$("#sousuo").val();
        if (keys == "" || keys == "请输入关键词" || trim(keys).length == 0) {
            alert("请输入关键词！");
        }
        else if (keys.length > 24) {
            alert("关键字长度过长，限制24个字符");
        }
        else{
            //window.location.href = "/news/new--0-1-" + keys + ".html";
            window.location.href = "new-USA-" + "0-1-" + keys + ".html";
        }
    }
</script>
