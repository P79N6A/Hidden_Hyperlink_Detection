  <script type="text/javascript">
    document.onkeydown = function (event) {
        var e = event || window.event || arguments.callee.caller.arguments[0];
        if (e && e.keyCode == 13) {
            var keys = ($("#sousuo").val()).toLowerCase();
            if (keys == "" || keys == "请输入关键词" || trim(keys).length == 0) {
            }
            else
                isSearch();
        }
    }

    function isMin(obj) {

        $.ajax({
            type: "POST",
            url: "web/ashx/validateDJ.ashx",
            data: "curId=4781&pid=" + obj + "",
            success: function (msg) {
                if (msg == "0")//未曾点击
                {
                    addHits(obj);
                }
                else if (msg == "1")//已经点击
                {
                    alert("已经投过票了，半小时内不许对同一文章多次表态");
                }
            }
        });
        return false;
    }
    function addHits(obj) {
        var pid = obj;
        $.ajax({
            type: "POST",
            url: "web/ashx/updateBq.ashx",
            data: "curId=4781&pid=" + pid + "",
            success: function (msg) {
                $("#newBQ").html(msg);

                //更改总的投票数
                updateTotalPiao(pid);
            }
        });
    }
    //更改总的投票数
    function updateTotalPiao(obj) {
        $.ajax({
            type: "POST",
            url: "web/ashx/updateTotalPerson.ashx",
            data: "curId=4781&pid=" + obj + "",
            success: function (msg) {
                $("#totalPerson").html(msg);
            }
        });
    }
    function EncodeUtf8(s1) {
        var s = escape(s1);
        var sa = s.split("%");
        var retV = "";
        if (sa[0] != "") {
            retV = sa[0];
        }
        for (var i = 1; i < sa.length; i++) {
            if (sa[i].substring(0, 1) == "u") {
                retV += Hex2Utf8(Str2Hex(sa[i].substring(1, 5)));
            }
            else retV += "%" + sa[i];
        }
        return s;
    } 
</script> 
