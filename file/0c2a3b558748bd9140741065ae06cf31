            return false;
        } else if (word.search(/^[\w \-]+$/) == 0) {
            top.location.href = '/ciyuan/s/' + encodeURIComponent(word.replace(/ /g, '_'));
            return false;
        } else {
            this.wd.value = word.replace(/[\uff01-\uffe1]/g, function(match) {
                var char_code = match.charCodeAt(0) - 0xfee0;
                return String.fromCharCode(char_code);
            });
        }
    }
    document.getElementById('wd').focus();
</script> 
  <script src="/lib/jquery/jquery-2.1.4.min.js"></script> 
  <script src="/ciyuan/prompt.js"></script> 
  <script>
    $('#article > p').html(function() {
        var str_text = $(this).text().trim();
        if (str_text.search('优词词源') == -1) {
            if (str_text.search(/^[a-z \-]+：/i) == 0) {
                return str_text.replace(/[a-z \-]+/i, function(match) {
                    match = match.trim();
                    var match_url = match.replace(/ /g, '_');
                    return '<a target="_blank" href="/etym/s/' + match_url + '">' + match + '</a>';
                }).replace(/[a-z]+\./g, ' <strong>$&</strong> ');
            } else {
                return str_text.replace(/([^a-z\u0080-\u03ff\[\'\,\:]|^)([a-z \-\.\'\,\:]+)(?![a-z\u0080-\u03ff\]\'\,\:])/ig, '$1 <strong>$2</strong> ');
            }
        }
    }).html(function(index, str_html) {
        return str_html.replace(/^(发音释义|结构分析|词源解释|同源词|背景知识|助记窍门|衍生词|常见搭配|趣味记忆|词根分析)：/, '【$1】：');
    });
</script> 
