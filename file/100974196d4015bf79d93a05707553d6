/* O定u字迪拗崎_始 */
function set_comments_length($commentdata) {
	$minCommentlength = 3;		//最少字迪拗
	$maxCommentlength = 1000;	//最多字迪拗
	$pointCommentlength = mb_strlen($commentdata['comment_content'],'UTF8');	//mb_strlen 1中文字符作1L度
	if ($pointCommentlength &lt; $minCommentlength){
		err('抱歉，您的u字颠^少，至少入' . $minCommentlength .'字（目前字担'. $pointCommentlength .'字）');
		exit;
	}
	if ($pointCommentlength &gt; $maxCommentlength){
		err('Σ黄穑您的u字颠^多，少於' . $maxCommentlength .'字（目前字担'. $pointCommentlength .'字）');
		exit;
	}
	return $commentdata;
}
add_filter('preprocess_comment', 'set_comments_length');
