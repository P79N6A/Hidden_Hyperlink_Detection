         <div class="crayon-info" style="min-height: 16.8px !important; line-height: 16.8px !important;"></div> 
         <div class="crayon-plain-wrap">
          <textarea wrap="soft" class="crayon-plain print-no" data-settings="dblclick" readonly="" style="-moz-tab-size:4; -o-tab-size:4; -webkit-tab-size:4; tab-size:4; font-size: 12px !important; line-height: 15px !important;">
/* O定u字迪拗崎_始 */
function set_comments_length($commentdata) {
	$minCommentlength = 3;		//最少字迪拗
	$maxCommentlength = 1000;	//最多字迪拗
	$pointCommentlength = mb_strlen($commentdata['comment_content'],'UTF8');	//mb_strlen 1中文字符作1L度
	if ($pointCommentlength &lt; $minCommentlength){
		header(&quot;Content-type: text/html; charset=utf-8&quot;);
		wp_die('抱歉，您的u字颠^少，至少入' . $minCommentlength .'字（目前字担'. $pointCommentlength .'字）');
		exit;
	}
	if ($pointCommentlength &gt; $maxCommentlength){
		header(&quot;Content-type: text/html; charset=utf-8&quot;);
		wp_die('Σ黄穑您的u字颠^多，少於' . $maxCommentlength .'字（目前字担'. $pointCommentlength .'字）');
		exit;
	}
	return $commentdata;
}
add_filter('preprocess_comment', 'set_comments_length');
/* O定u字迪拗平Y束 */</textarea>
