                //$("#footerbanner").css('display', 'none');
                if (!navigator.userAgent.match(/(iPhone|iPod|iPad|Android|ios|Windows Phone)/i)) {
                } else {
                    //location.href = "http://fusion.qq.com/app_download?appid=1105025140&platform=qzone&via=QZ.MOBILEDETAIL.QRCODE&u=262966824";
                }
            }
        });

        $(document).click(function () {
            if ($("#topbanner").css("display") == "block") {
                $("#topbanner").css('display', 'none');
            }
        });
