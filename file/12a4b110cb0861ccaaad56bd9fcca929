var headnavint;
for(var id=1;id<=3;id++) 
	bindtab(id);
function bindtab(id){
	$("#headnav"+id).mouseover(
			function(){
				clearTimeout(headnavint);
				$(".poem_type a").removeClass("on");
				$(".nav_div p").hide();
				$("#headnav"+id).addClass('on');
				$("#headcon"+id).show();
				$(".nav_div").show();
			}
		).mouseleave(
			function(){
				headnavint=setTimeout(
						function(){
							$("#headcon"+id).hide();
							$(".nav_div").hide();
							$("#headnav"+id).removeClass('on');
						},300);
			}
		);
	$("#headcon"+id).mouseover(
			function(){
				clearTimeout(headnavint);
			}
	).mouseleave(
			function(){
				headnavint=setTimeout(
						function(){
							$("#headcon"+id).hide();
							$(".nav_div").hide();
							$("#headnav"+id).removeClass('on');
						},300
				);
			}
	);
}
$(document).ready(function(){
	$(".search_text").bind({
