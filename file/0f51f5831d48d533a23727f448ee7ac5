  <script>
function checkInput(){
	if($('.search .keyword input').val()==''){
		alert('关键字不能为空!');
		return false;
	}
}
$('.Logo_Search .search .types li').click(function(){
	$('.Logo_Search .search .types li').removeClass('ck');
	$(this).addClass('ck');
	var searchurl='';
	var selectname=$(this).html();
	if(selectname=='资讯') searchurl='http://pingliang.mhcm.net/news/search.php';
	else if(selectname=='分类') searchurl='http://pingliang.mhcm.net/f/search.php';
	else if(selectname=='商品') searchurl='http://pingliang.mhcm.net/shop/search.php';
	else if(selectname=='商家') searchurl='http://pingliang.mhcm.net/hy/search.php';
	else if(selectname=='活动') searchurl='http://pingliang.mhcm.net/tg/search.php';
	else if(selectname=='促销') searchurl='http://pingliang.mhcm.net/coupon/search.php';
	else if(selectname=='招聘') searchurl='http://pingliang.mhcm.net/hr/search.php';
	else if(selectname=='论坛') searchurl='http://pingliang.mhcm.net/bbs/search.php';
	else if(selectname=='上门服务') searchurl='http://pingliang.mhcm.net/fuwu/search.php';
	else if(selectname=='外卖') searchurl='http://pingliang.mhcm.net/waimai/search.php';
	$(".Logo_Search form").attr("action",searchurl);
});
</script> 
