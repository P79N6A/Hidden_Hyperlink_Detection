   <script>
$(document).ready(function () {
	$(window).scroll(function () {
		if ($(window).scrollTop() > 100) {
			$(".topUpCont").show();
		} else {
			$(".topUpCont").hide();
		}
	});
	$(".topBack").click(function () {
		$("html,body").animate({scrollTop: 0},500);
	});
});
