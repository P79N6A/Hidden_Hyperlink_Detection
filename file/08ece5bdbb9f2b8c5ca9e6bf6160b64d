function setContentTab(name,curr,n){for(i=1;i<=n;i++){var menu=document.getElementById(name+i);var cont=document.getElementById("c_"+name+"_"+i);if(i==curr){cont.style.display=cont.style.display=="block"?"none":"block";menu.className=menu.className=="a"?"":"a";}else{cont.style.display="none";menu.className="";}}}


$(document).ready(function(){$(window).scroll(function(){if($(window).scrollTop()>300){$(".footer_float").show()}else{$(".footer_float").hide()}})});
