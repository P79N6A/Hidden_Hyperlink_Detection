    	<li id="m5_li"><em></em><div class="mood_bar"><div class="mood_bar_in" id="m5_bar"></div></div></li>\
    	<li id="m6_li"><em></em><div class="mood_bar"><div class="mood_bar_in" id="m6_bar"></div></div></li>\
