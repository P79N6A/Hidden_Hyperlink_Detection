function managepost(pid){

var popupobj = $('#moption_' + pid);
var left = (window.innerWidth - popupobj.width()) / 2;
var top = (document.documentElement.clientHeight - popupobj.height()) / 2;
popupobj.css({'display':'block','left':left,'top':top});
$('#showmanage').css({'display':'block','width':'100%','height':'100%','position':'fixed','top':'0','left':'0','background':'black','opacity':'0.4','z-index':'100'});
$('#showmanage').attr({'title':pid});

}

function hidemanage(){

var popupobj = $('#moption_' + $('#showmanage').attr('title'));
popupobj.css({'display':'none'});
$('#showmanage').css({'display':'none'});
}
</script> 
