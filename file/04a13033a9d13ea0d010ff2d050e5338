        <script type="text/javascript">
            $(window).load(function () {
                var url = window.location.search;
                if (url.indexOf("isSignIn=true") > -1) {
                    if (typeof Om_SignUp == 'function') {
                        Om_SignUp('Returning User Login');
                    }
                }
            });
        </script>
