    <!-- SiteCatalyst code version: H.25.2.Copyright 1996-2012 Adobe, Inc. All Rights Reserved More info available at http://www.omniture.com -->
    <script type="text/javascript">

        var curPageName = 'classroom';
        var dl = new Object;

        if (curPageName == 'Search') {
            if (typeof om_SearchResults == 'function') {
                om_SearchResults();
            }
        }
        else if (curPageName == 'Product Detail Page') {
            if (typeof Om_ProductDetailViewed == 'function') {
                Om_ProductDetailViewed(jQuery(".addToCartButton").attr("data-productid"));
            }
        }
        else if (curPageName == 'ComponentBrowse') {
            if (typeof om_ComponentBrowse == 'function') {
                om_ComponentBrowse();
            }
        }
        else if (curPageName == "SignIn") {
            if (typeof Om_SignIn == 'function') {
                Om_SignIn();
            }
        }
        else if (curPageName == "CreateInstitutional") {
            if (typeof Om_CreateInstitutional == 'function') {
                Om_CreateInstitutional();
            }
        }
        else if (curPageName == 'NoSearch') {
            if (typeof Om_NoSearchResults == 'function') {
                Om_NoSearchResults();
            }
        }
        else if (curPageName == 'Asset') {
            if (typeof Om_AssetLibrary == 'function') {
                Om_AssetLibrary();
            }
        }
        else if (curPageName == 'AssetLibrarySearch') {
            if (typeof Om_AssetLibrarySearch == 'function') {
                Om_AssetLibrarySearch();
            }
        }
        else if (curPageName == 'Migrate') {
            if (typeof Om_MigrateAccount == 'function') {
                Om_MigrateAccount();
            }
        }
        else {
            if (typeof Om_InitialSetup == 'function') {
                Om_InitialSetup();
            }
        }


        var DEBUG_CLICK = false;

        

       
    </script>

