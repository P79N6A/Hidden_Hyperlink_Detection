dl.contentcategory = "Landing Page";
dl.pageName = "Classroom";
dl.membershiptype = "Unregistered";


        //Derived fields
        dl.membershiptypepathing = dl.membershiptype + ':' + dl.pageName;
        if (DEBUG_CLICK)
            alert('Default tracking complete');
    }

