            var item = 	$(this);
            Om_ItemClick(item);
        });
       
        if($('#sortSelect').length!==0){
            $(".chosen-select").chosen();

            $('#sortSelect').change(function () {
                var sortby = $(this).val();
                window.location.href = sortby
                return false;
            });
        }
		
		 if($('#sortMobileSelect').length!==0){
            $(".chosen-select").chosen();

            $('#sortMobileSelect').change(function () {
                var sortby = $(this).val();
                window.location.href = sortby
                return false;
            });
        }

        if ($('#enjoySlider').length) 
        {
            $('#enjoySlider').flexslider({
                animation: "slide",
                easing: "swing",
                direction: "horizontal",
                animationLoop: false,
                itemWidth: 160,
                itemMargin: 21,
                minItems: 1,
                prevText: "",
                nextText: "",
                touch: true,
                slideshow: false,
                video: true,
                startAt: 0,
                move: 5,
                start: function (slider) {
                    adjustEnjoySlider();
                }
            });
        }
        RemoveEmptyElements();

   
    });
    function RemoveEmptyElements()
    {
        var paragraphs = document.getElementsByTagName("p");
        for (var i = 0, len = paragraphs.length; i < len; i++) {
            var elem = paragraphs[i];
            if (elem.childElementCount == 0 && elem.textContent.trim() == '') {
                elem.parentNode.removeChild(elem);
                i--;
                len--;
            }
        }
    }
    

    $(window).load(function () {
        adjustEnjoySlider();
       
    });
   
    function adjustEnjoySlider() {
        var totalColumns = $('#enjoySlider ul.slides li').size();
        var maxHeight = 0;
        var currentHeight = 0;
        var paddingTop = 0;
        for (x = 0; x < totalColumns; x++) {
            currentHeight = $('#enjoySlider ul.slides li:eq(' + x + ') a div.image_container img').height();
            //alert('currentHeight (' + x + '/' + ( totalColumns - 1 ) + ') = ' + currentHeight);
            if (currentHeight > maxHeight) {
                maxHeight = currentHeight;
            }
        }
        //alert('maxHeight = ' + maxHeight);
        for (x = 0; x < totalColumns; x++) {
            currentHeight = $('#enjoySlider ul.slides li:eq(' + x + ') a div.image_container img').height();
            paddingTop = parseInt(maxHeight - currentHeight);
            $('#enjoySlider ul.slides li:eq(' + x + ') a div.image_container').css('min-height', maxHeight + 'px');
            $('#enjoySlider ul.slides li:eq(' + x + ') a div.image_container img').css('padding-top', paddingTop + 'px');
        }
    }
    /*Removed hover effect for product dosent have addtocart, buynow, shopnow buttons*/
    $("div.product-item div:not(:has(p))").hide().parent().addClass('productitemoff');
    
</script>


  

