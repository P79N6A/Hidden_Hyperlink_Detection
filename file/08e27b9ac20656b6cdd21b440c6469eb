             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;&lt;br /&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;&lt;a href=&quot;javascript:void(0);&quot; onclick=&quot;postinfo('./admin/comment.php?action=doreply&amp;cid=&lt;?php echo $value['cid']; ?&gt;&amp;flg=1','reply&lt;?php echo $value['cid']; ?&gt;','replycomm&lt;?php echo $value['cid']; ?&gt;');&quot;&gt;提交&lt;/a&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;&lt;a href=&quot;javascript:void(0);&quot; onclick=&quot;showhidediv('replybox&lt;?php echo $value['cid']; ?&gt;')&quot;&gt;取消&lt;/a&gt;<br style="word-wrap:break-word;" /> </li> 
