             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;&lt;?php wp_list_pages('title_li=&amp;depth=1&amp;sort_column=menu_order'); ?&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp;&nbsp;&lt;/ul&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp;&nbsp;*/ ?&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> </li> 
