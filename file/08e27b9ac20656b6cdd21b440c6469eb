             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;if (empty($val['url'])){$val['url'] = './?post='.$key;}<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;?&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;&lt;li class=&quot;menus2&quot;&gt;&lt;a href=&quot;&lt;?php echo $val['url']; ?&gt;&quot; target=&quot;&lt;?php echo $val['is_blank']; ?&gt;&quot;&gt;&lt;?php echo $val['title']; ?&gt;&lt;/a&gt;&lt;/li&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;&lt;?php endforeach;?&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &nbsp; &nbsp;&lt;?php doAction('navbar', '&lt;li class=&quot;menus2&quot;&gt;', '&lt;/li&gt;'); ?&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> </li> 
