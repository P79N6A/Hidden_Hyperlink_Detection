             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &lt;title&gt;&lt;?php if( is_search() ) { $ser = $_GET['s']; ?&gt;&lt;?php _e('Search'); ?&gt;&lt;?php echo &quot; &quot;&quot; . wp_specialchars($ser, 1) . &quot;&quot;&quot;; } ?&gt;&lt;?php wp_title(''); ?&gt;&lt;?php if( ! is_home() ) { ?&gt; | &lt;?php } ?&gt;&lt;?php echo strip_tags(html_entity_decode(get_option('blogname'),ENT_NOQUOTES,'UTF-8')); ?&gt;&lt;/title&gt;<br style="word-wrap:break-word;" /> </li> 
             <li style="word-wrap:break-word;margin:0px 0px 0px 2em;padding:0px 0px 0px 10px;list-style-type:decimal-leading-zero;font-family:Monaco, Consolas, 'Lucida Console', 'Courier New', serif;font-size:12px;line-height:1.8em;"> &lt;meta http-equiv=&quot;imagetoolbar&quot; content=&quot;no&quot; /&gt;<br style="word-wrap:break-word;" /> </li> 
