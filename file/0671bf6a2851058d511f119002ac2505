  <script type="text/javascript">
        jQuery(document).ready(function() {
            var s = jQuery(".pinned");
            var pos = s.position();
            jQuery(window).scroll(function() {
                var windowpos = jQuery(window).scrollTop();
                if (windowpos >= pos.top) {
                    s.addClass("stick");
                } else {
                    s.removeClass("stick");
                }
            });
        });
    </script> 
