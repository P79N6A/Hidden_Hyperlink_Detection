      <script>
				(function($,undefined){
					$.fn.zyComment = function(options,param){
						var otherArgs = Array.prototype.slice.call(arguments, 1);
						if (typeof options == 'string') {
							var fn = this[0][options];
							if($.isFunction(fn)){
								return fn.apply(this, otherArgs);
							}else{
								throw ("zyComment - No such method: " + options);
							}
						}
	
						return this.each(function(){
							var para = {};    // 保留参数
							var self = this;  // 保存组件对象
							var fCode = 0;
	
							var defaults = {
									"width":"355",
									"height":"33",
									"agoComment":[],  // 以往评论内容
									"callback":function(comment){
										console.info("返回评论数据");
										console.info(comment);
									}
							};
	
							para = $.extend(defaults,options);
	
							this.init = function(){
								this.createAgoCommentHtml();  // 创建以往评论的html
							};
							/**
							 * 功能：创建以往评论的html
							 * 参数: 无
							 * 返回: 无
							 */
							this.createAgoCommentHtml = function(){
								var html = '';
								html += '<div id="commentItems" class="ui threaded comments" style="margin-bottom:20px;">';
								html += '</div>';
	
								$(self).append(html);
	
								$.each(para.agoComment, function(k, v){
									var topStyle = "";
									if(k>0){
										topStyle = "topStyle";
									}
								
									var item = '';
									var item2 = '';
									var item3 = '';
									var image=v.image;
									if(image!=''){
										var cimage="http://www.cheshizh.com/"+image;
									}else{
										var cimage="/i/web/images/default1.png";}
									if (!v.zname && typeof(v.zname)!="undefined" && v.zname!=0){
										if(v.nickname!=''){
											var username1=v.nickname;
										}else{
											var username1=(v.username).substr(0,6)+'...';
										}
									}else{
											var username1=v.zname;
									}
									var cmt_sum = parseInt(document.getElementById('cmt_sum').value);
									if(v.datasources=='m'){
										var datasources='来自车市纵横手机版';
									}else{
										var datasources='';
									}
									item += '<div id="comment'+v.id+'" class="comment">';
									item += '	<a class="avatar">';
									item += '		<img src="'+cimage+'">';
									item += '	</a>';
									item += '	<div class="content1 '+topStyle+'">';
									item += '		<a class="author"> '+username1+' </a>';
									item += '		<div class="metadata">';
									item += '			<span class="date"> '+v.cmt_time+' </span>';
									item += '		</div>';
									item += '		<a style="color:#999;">'+datasources+'</a>';
									item += '		<div class="lou" id="lou'+cmt_sum+'">[<span style="color:#d60000;">'+cmt_sum+'楼</span>]</div>';
									if(v.cmt_id!=0){item += '		<div id="pinglunold'+cmt_sum+'" class="pinglun"></div>';}
									item += '		<div class="text"> '+v.cmt_content+' </div>';
									item += '		<div class="actions">';
									item += '			<a class="reply" href="javascript:void(0)" selfID="'+v.id+'" >回复</a>';
									item += '		</div>';
									item += '	</div>';
									item += '</div>';
	
									document.getElementById('cmt_sum').value= cmt_sum - 1;
									
									// 判断此条评论是不是子级评论
									//if(v.cmt_id==0){  // 不是
									if(v.cmt_top==1){  // 不是
										if(cmt_sum > 0){
											$("#commentItems").append(item);
										}
							
										// 判断父级评论下是不是已经有了子级评论
										var aa=0;
										$.each(para.agoComment, function(k2, v2){
											if($("#pinglun"+v2.id).find(".comment1").length==0){  // 没有 
												if(parseInt(v2.id)==parseInt(v.cmt_id) && aa==0){
													aa=1;
													if (!v2.zname && typeof(v2.zname)!="undefined" && v2.zname!=0){
														if(v2.nickname!=''){
															var username2=v2.nickname;
														}else{
															var username2=(v2.username).substr(0,6)+'...';
														}
													}else{
															var username2=v2.zname;
													}
													item2 += '		<div id="pinglun'+v2.id+'" class="comment1">';
													item2 += '			<div class="grey">原评论';
													item2 += '				<a class="author1">'+username2+' </a>';
													item2 += '		  </div>';
													item2 += '			<div class="cont1">发表于</div>';
													item2 += '			<div class="metadata1">';
													item2 += '				<span class="date1"> '+v2.cmt_time+' </span>';
													item2 += '			</div>';
													item2 += '		</div>';
													item2 += '		<div class="text1"> '+v2.cmt_content+' </div>';
													
													var comments = '';
													comments += '<div id="pinglun'+v2.id+'" class="comment1">';
													comments += 	item2;
													comments += '</div>';
			
													$("#pinglunold"+cmt_sum).append(item2);
													
												}else{
													var comments = '';
													comments += '<div id="pinglun'+v2.id+'" class="comment1">';
													comments += '';
													comments += '</div>';
												}
											}else{  // 有
											}										
										});
									}else{  // 否
	
										// 判断父级评论下是不是已经有了子级评论
										if($("#comment"+v.cmt_id).find(".comments").length==0){  // 没有
											var comments = '';
											comments += '<div id="comments'+v.cmt_id+'" class="comments  comtest3">';
											comments += 	item;
											comments += '</div>';
	
											$("#comment"+v.cmt_id).append(comments);
										}else{  // 有
											$("#comments"+v.cmt_id).append(item);
										}
									}								
								});
	
								this.createFormCommentHtml();  // 创建发表评论的html
							};
	
							/**
							 * 功能：创建评论form的html
							 * 参数: 无
							 * 返回: 无
							 */
							this.createFormCommentHtml = function(){
								// 先添加父容器
								$(self).prepend('<div id="commentFrom" style="top:30px;margin-bottom:20px;"></div>');
	
								// 组织发表评论的form html代码
								var boxHtml = '';
							 	boxHtml += '<form id="replyBoxAri" class="ui reply form">';
								boxHtml += '	<div class="ui large form ">';
								boxHtml += '		<div class="contentField field" >';
								boxHtml += '			<textarea id="commentContent" class="commentContent" name="commentContent"  maxlength="200" onkeyup="javascript:setShowLength1(this, 200, '+"'cost_tpl_title_length1'"+', 1);"></textarea>';
								boxHtml += '			<label class="commentContentLabel" for="commentContent">提醒您：请勿输入恶意词语...</label>';
								boxHtml += '		</div>';
								boxHtml += '		<span id="cost_tpl_title_length1"> 已输入0/200个字</span>';
								boxHtml += '		<div id="submitComment" class="ui button teal submit labeled icon">';
								boxHtml += '			提交评论';
								boxHtml += '		</div>';
								boxHtml += '	</div>';
								boxHtml += '</form>';
	
								$("#commentFrom").prepend(boxHtml);
	
				        // 初始化html之后绑定点击事件
				        this.addEvent();
							};
	
							/**
							 * 功能：绑定事件
							 * 参数: 无
							 * 返回: 无
							 */
							this.addEvent = function(){
								// 绑定item上的回复事件
								this.replyClickEvent();
	
								// 绑定item上的取消回复事件
								this.cancelReplyClickEvent();
	
								// 绑定回复框的事件
								this.addFormEvent();
							};
	
							/**
							 * 功能: 绑定item上的回复事件
							 * 参数: 无
							 * 返回: 无
							 */
							this.replyClickEvent = function(){
								// 绑定回复按钮点击事件
								$(self).find(".actions .reply").live("click", function(){
									// 设置当前回复的评论的id
									fCode = $(this).attr("selfid");
	
									// 1.移除之前的取消回复按钮
									$(self).find(".cancel").remove();
	
									// 2.移除所有回复框
									self.removeAllCommentFrom();
	
									// 3.添加取消回复按钮
									$(this).parent(".actions").append('<a class="cancel" href="javascript:void(0)">取消回复</a>');
	
									// 4.添加回复下的回复框
									self.addReplyCommentFrom($(this).attr("selfID"));
	
									// 绑定提交事件
									$("#publicComment").die("click");
									$("#publicComment").live("click",function(){
										var wz_id=document.getElementById('hd_id').value;
										var lg_id=document.getElementById('hd_lg_id').value;
										var commentContent = document.getElementById("commentContent").value;
										
										if(lg_id=='')
										{
											alert("请先登录，再点评！");
											return false;
										}
										else
										{
											if(commentContent=='' || commentContent=="提醒您：请勿输入恶意词语...")
											{
												alert("提示: 留言内容不能为空！");
												return;
											}
	
											// 防注入攻击
											var re= /select|delete|insert|into|drop|creat|exec|and|or|count|insertinto|deletefrom|altertable|update|createtable|createview|dropview|createindex|dropindex|createprocedure|dropprocedure|createtrigger|droptrigger|createschema|dropschema|createdomain|alterdomain|dropdomain|script|alert|'|"|=|;|>|<|%/i;
									   	if (re.test(commentContent))
									   	{
										  	alert("提示: 含有特殊字符或关键字！"); //注意中文乱码
										  	return false;
									   	}
											// 非法内容检测
											if(/(草|妈|娘|爹|逼|国家|共产党|法轮功|狗日的|人民币|毛泽东|毛主席|邓小平|江泽民|朱F基|胡锦涛|温家保|习近平|李克强|薄熙来|台湾|台独|香港|港独|西藏|藏独|白粉|冰毒|大麻|可卡因|海洛因|http|www|com|vip|cn|top|net)/.test(commentContent))
											{
												alert("提示: 含有非法词语！");
												return false;
											}
										}
										var username="..";
										var result = {
												"username":username,
												"cmt_content":$("#commentContent").val()
										};
										para.callback(result);
										fCode = 0;
									});
	
								});
	
							};
	
							/**
							 * 功能: 绑定item上的取消回复事件
							 * 参数: 无
							 * 返回: 无
							 */
							this.cancelReplyClickEvent = function(){
								$(self).find(".actions .cancel").die("click");
								$(self).find(".actions .cancel").live("click", function(){
									// 1.移除之前的取消回复按钮
									$(self).find(".cancel").remove();
	
									// 2.移除所有回复框
									self.removeAllCommentFrom();
	
									// 3.添加根下的回复框
									self.addRootCommentFrom();
									fCode = 0;
								});
							};
	
							/**
							 * 功能: 绑定回复框的事件
							 * 参数: 无
							 * 返回: 无
							 */
							this.addFormEvent = function(){
								// 先解除绑定
								$("textarea,input").die("focus");
								$("textarea,input").die("blur");
								// 绑定回复框效果
								$("textarea,input").live("focus",function(){
									// 移除 失去焦点class样式，添加获取焦点样式
									//$(this).next("label").removeClass("blur-foucs").addClass("foucs");
									$(this).next("label").hide();
								}).live("blur",function(){
									// 如果文本框没有值
									if($(this).val()==''){
										// 移除获取焦点样式添加原生样式
										if($(this).attr("id")=="commentContent"){
											//$(this).next("label").removeClass("foucs").addClass("areadefault");
										}else{
											//$(this).next("label").removeClass("foucs").addClass("inputdefault");
										}
									}else{  // 有值 添加失去焦点class样式
										//$(this).next("label").addClass("blur-foucs");
									}
								});
	
								// 绑定提交事件
								$("#submitComment").die("click");
								$("#submitComment").live("click",function(){
									var wz_id=document.getElementById('hd_id').value;
									var lg_id=document.getElementById('hd_lg_id').value;
									var commentContent = document.getElementById("commentContent").value;
	
									if(lg_id=='')
									{
										alert("先登录，再点评！");
										return false;
									}
									else
									{
										if(commentContent=='' || commentContent=="提醒您：请勿输入恶意词语...")
										{
											alert("提示: 留言内容不能为空！");
											return;
										}
	
										// 防注入攻击
										var re= /select|delete|insert|into|drop|creat|exec|and|or|count|insertinto|deletefrom|altertable|update|createtable|createview|dropview|createindex|dropindex|createprocedure|dropprocedure|createtrigger|droptrigger|createschema|dropschema|createdomain|alterdomain|dropdomain|script|alert|'|"|=|;|>|<|%/i;
								   	if (re.test(commentContent))
								   	{
									  	alert("提示: 含有特殊字符或关键字！"); //注意中文乱码
									  	return false;
								   	}
	
										// 非法内容检测
										if(/(草|妈|娘|爹|逼|国家|共产党|法轮功|狗日的|人民币|毛泽东|毛主席|邓小平|江泽民|朱F基|胡锦涛|温家保|习近平|李克强|薄熙来|台湾|台独|香港|港独|西藏|藏独|白粉|冰毒|大麻|可卡因|海洛因|http|www|com|vip|cn|top|net)/.test(commentContent))
										{
											alert("提示: 含有非法词语！");
											return false;
										}
									}
						      var username="..";
									var result = {
											"username":username,
											"cmt_content":$("#commentContent").val()
									};
									para.callback(result);
								});
	
							};
	
							// 移除所有回复框
							this.removeAllCommentFrom = function(){
								// 移除评论下的回复框
								if($(self).find("#replyBox")[0]){
									// 删除评论回复框
									$(self).find("#replyBox").remove();
								}
	
								// 删除文章回复框
								if($(self).find("#replyBoxAri")[0]){
									$(self).find("#replyBoxAri").remove();
								}
							};
	
							// 添加回复下的回复框
							this.addReplyCommentFrom = function(id){
								var boxHtml = '';
								boxHtml += '<form id="replyBox" class="ui reply form">';
								boxHtml += '	<div class="ui  form ">';
								boxHtml += '		<div class="contentField field" >';
								boxHtml += '			<textarea id="commentContent" class="commentContent" name="commentContent"  maxlength="200" onkeyup="javascript:setShowLength2(this, 100, '+"'cost_tpl_title_length2'"+', 1);"></textarea>';
								boxHtml += '			<label class="commentContentLabel" for="commentContent">提醒您：请勿输入恶意词语...</label>';
								boxHtml += '		</div>';
								boxHtml += '		<span id="cost_tpl_title_length2"> 已输入0/200个字</span>';
								boxHtml += '		<div id="publicComment" class="ui button teal submit labeled icon">';
								boxHtml += '			提交评论';
								boxHtml += '		</div>';
								boxHtml += '	</div>';
								boxHtml += '</form>';
	
								$(self).find("#comment"+id).find(">.content1").after(boxHtml);
								return false;
							};
	
							// 添加根下的回复框
							this.addRootCommentFrom = function(){
								var boxHtml = '';
								boxHtml += '<form id="replyBoxAri" class="ui reply form">';
								boxHtml += '	<div class="ui large form ">';
								boxHtml += '		<div class="contentField field" >';
								boxHtml += '			<textarea id="commentContent" class="commentContent" name="commentContent"  maxlength="200" onkeyup="javascript:setShowLength3(this, 100, '+"'cost_tpl_title_length3'"+', 1);"></textarea>';
								boxHtml += '			<label class="commentContentLabel" for="commentContent">提醒您：请勿输入恶意词语...</label>';
								boxHtml += '		</div>';
								boxHtml += '		<span id="cost_tpl_title_length3"> 已输入0/200个字</span>';
								boxHtml += '		<div id="submitComment" class="ui button teal submit labeled icon">';
								boxHtml += '			提交评论';
								boxHtml += '		</div>';
								boxHtml += '	</div>';
								boxHtml += '</form>';
	
								$(self).find("#commentFrom").prepend(boxHtml);
							};
	
							// 得到回复的评论的id
							this.getCommentFId = function(){
								return parseInt(fCode);
							};
	
							// 设置评论成功之后的内容
							this.setCommentAfter = function(param){
								// 1.移除之前的取消回复按钮
								$(self).find(".cancel").remove();
								// 2.添加新评论的内容
								self.addNewComment(param);
								// 3.让评论框处于对文章评论的状态
								self.removeAllCommentFrom();
								// 4.添加根下的回复框
								self.addRootCommentFrom();
	
								var id=param.id;
								var username=param.username;
								var cmt_content=param.cmt_content;
								var cmt_id=fCode;
								var wz_id=document.getElementById('hd_id').value;
	
								$.ajax({
								   type: "text",
								   url: "/news.php?a=ajaxdata&datasources=pc&id="+id+"&cmt_content="+cmt_content+"&cmt_id="+cmt_id+"&cmt_id="+cmt_id+"&wz_id="+wz_id,
								   success: function(data){
								   }
								});
							};
	
							// 添加新评论的内容
							this.addNewComment = function(param){
								var topStyle = "";
								if(parseInt(fCode)!=0){
									topStyle = "topStyle";
								}
								var date = new Date();
								var year = date.getFullYear();
								var month = date.getMonth()+1;
								var day = date.getDate();
								var hour = date.getHours();
								var minute = date.getMinutes();
								var second = date.getSeconds();
								var cmt_time=(year+'-'+month+'-'+day+' '+hour+':'+minute+':'+second);
								var item = '';
								var item2 = '';
								var item3 = '';
								var image="";
								if(image!=''){
									var cimage="http://www.cheshizh.com/"+image;
								}else{
									var cimage="/i/web/images/default1.png";}
								var cmt_num = parseInt(document.getElementById('cmt_num').value) + 1;
								var id_sum = parseInt(document.getElementById('id_sum').value) + 1;
								item += '<div id="comment'+param.id+'" class="comment">';
								item += '	<a class="avatar">';
								item += '	<img src="'+cimage+'">';
								item += '	</a>';
								item += '	<div class="content1 '+topStyle+'">';
								item += '		<a class="author"> '+param.username+' </a>';
								item += '		<div class="metadata">';
								item += '			<span class="date"> '+cmt_time+' </span>';
								item += '		</div>';
								item += '		<div class="lou" id="lou">[<span style="color:#d60000;">'+cmt_num+'楼</span>]</div>';
								item += '		<div class="text"> '+param.cmt_content+' </div>';
								item += '		<div class="actions">';
								item += '			<a class="reply" href="javascript:void(0)" selfID="'+param.id+'" >回复</a>';
								item += '		</div>';
								item += '	</div>';
								item += '</div>';
	
								item2 += '<div id="comment'+param.id+'" class="comment">';
								item2 += '	<a class="avatar">';
								item2 += '	<img src="'+cimage+'">';
								item2 += '	</a>';
								item2 += '	<div class="content1 '+topStyle+'">';
								item2 += '		<a class="author"> '+param.username+' </a>';
								item2 += '		<div class="metadata">';
								item2 += '			<span class="date"> '+cmt_time+' </span>';
								item2 += '		</div>';
								item2 += '		<div class="lou" id="lou">[<span style="color:#d60000;">'+cmt_num+'楼</span>]</div>';
								item2 += '		<div class="pinglunnew'+fCode+' pinglun">';
								item2 += '		</div>';
								item2 += '		<div class="text"> '+param.cmt_content+' </div>';
								item2 += '		<div class="actions">';
								item2 += '			<a class="reply" href="javascript:void(0)" selfID="'+param.id+'" >回复</a>';
								item2 += '		</div>';
								item2 += '	</div>';
								item2 += '</div>';
								
								document.getElementById('cmt_num').value = cmt_num;
								document.getElementById('id_sum').value = id_sum;
								if(parseInt(fCode)!=0){
									var cmt_id=parseInt(fCode);
									$(".pinglunnew"+fCode).empty();
	
									$.ajax({
										type: "POST",
										url: "/code1509/modules/web/web_ajax_func.php",
										data: "action=news_cmt&cmt_id="+cmt_id,
										success: function(rets){ 
											var jsonobj=eval('('+rets+')');
											if (!jsonobj.zname && typeof(jsonobj.zname)!="undefined" && jsonobj.zname!=0){
												if(jsonobj.nickname!=''){
													var username1=jsonobj.nickname;
												}else{
													var username1=(jsonobj.username).substr(0,6)+'...';
												}
											}else{
													var username1=jsonobj.zname;
											}
	
								  		if(rets){
							 		  			var pldata	= '<div class="grey">原评论'+
					 		  							'<a class="author1">'+username1+'</a>'+
					 		  							'</div>'+
					 		  							'<div class="cont1">发表于</div>'+
					 		  						 		'<div class="metadata1">'+
																'<span class="date1">'+jsonobj.cmt_time+'</span>'+
															'</div>'+
															'<div class="text1">'+jsonobj.cmt_content+'</div>';
													$(".pinglunnew"+jsonobj.id).append(pldata);
	
								  		}else{
								  				
								  		}
										}
									});
								}
		
								if(parseInt(fCode)==0){  // 如果对根添加
									$("#commentItems").prepend(item);
									document.getElementById('cmt_sum_text').innerHTML='共<font style="color:#d60000;">' + cmt_num + '</font>条评论'; //更改总评论数
								}else{
									// 判断父级评论下是不是已经有了子级评论
									if($("#comment"+fCode).find(".comments").length==0){  // 没有
										var comments = '';
										comments += '<div id="comments'+fCode+'" class="comments comtest2">';
										comments += 	item;
										comments += '</div>';
										
										var comments2 = '';
										comments2 += '<div id="comments'+fCode+'" class="comments comtest2">';
										comments2 += 	item2;
										comments2 += '</div>';
										$("#commentItems").prepend(comments2);
										document.getElementById('cmt_sum_text').innerHTML='共<font style="color:#d60000;">' + cmt_num + '</font>条评论'; //更改总评论数
									}else{  // 有
										$("#commentItems").append(item); 
									}
								}
							};
	
							// 初始化上传控制层插件
							this.init();
						});
					};
				})(jQuery);
				</script> 
      <script type="text/javascript">
				var agoComment=[];
				var date = new Date();
				var year = date.getFullYear();
				var month = date.getMonth()+1;
				var day = date.getDate();
				var hour = date.getHours();
				var minute = date.getMinutes();
				var second = date.getSeconds();
				var cmt_time=(year+'-'+month+'-'+day+' '+hour+':'+minute+':'+second);
				var username="..";
				$("#articleComment").zyComment({
					"width":"355",
					"height":"33",
					"agoComment":agoComment,
					"callback":function(comment){
						var id_sum = parseInt(document.getElementById('id_sum').value);
						// 添加新的评论  显示新添加的评论
						$("#articleComment").zyComment("setCommentAfter",{"id":id_sum, "username":username, "cmt_content":comment.cmt_content, "cmt_time":cmt_time});
					}
				});
				</script> 
