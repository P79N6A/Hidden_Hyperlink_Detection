   <script language="javascript" type="text/javascript">
	function setShowLength1(obj, maxlength, id, mode) {
		var val = obj.value;
		var wid = id;
		/*
		var len = 0;
		for (var i = 0; i < val.length; i++) {
			var length = val.charCodeAt(i);
				if(length>=0&&length<=200)
				{
					len += 1;
				}
				else
				{
					len += 2;
				}
		}
		var rem = parseFloat(len)/2;
		*/
		var rem = parseFloat(val.length);
		document.getElementById(wid).innerHTML = " 已输入" + rem + "/200个字符";
	}
	
	function setShowLength2(obj, maxlength, id, mode) {
		var val = obj.value;
		var wid = id;
		var rem = parseFloat(val.length);
		document.getElementById(wid).innerHTML = " 已输入" + rem + "/200个字";
	}
	
	function setShowLength3(obj, maxlength, id, mode) {
		var val = obj.value;
		var wid = id;
		var rem = parseFloat(val.length);
		document.getElementById(wid).innerHTML = " 已输入" + rem + "/200个字";
	}
		
	function onLogin()
	{
		var uname=document.getElementById('uname').value;
		var pword=document.getElementById('pword').value;

		if(uname=='' || pword=="")
		{
			alert("提示: 用户名和密码不能为空！");
			return;
		}

		$.ajax({
		   type: "POST",
		   url: "/code1509/modules/web/web_ajax_func.php",
		   data: "action=ajax_login&uname=" + uname + "&pword=" + pword,
		   success: function(idtmp){
		   		if(idtmp!=0 && idtmp.length!=6)
		   		{
		   			alert('登录成功');
		   			window.location.reload();

		   			document.getElementById('login_pad').style.display="none";
		   			document.getElementById('uinfo').style.display="block";
		   			document.getElementById('uname2').innerHTML=uname.substring(0,6)+"..";
		   			document.getElementById('hd_lg_id').value=idtmp;
		   			
		   			// refresh and reload
						var myiframe = document.getElementById("mycomment");
						myiframe.src = myiframe.src;
		   		}
		   		else
		   		{
		   			alert("用户名或密码错误！");
		   		}
		   }
		});
	}
</script> 
