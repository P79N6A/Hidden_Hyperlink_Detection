    $(document).ready(function() {
	$("ul#tab_target li.active input").prop('type', 'text');
        $(".allStep").hide();
        $("#step2").show();
        $('input[name="unit_tabs"]').val('Imperial(st/lbs)');
        $('input[name="unit_tabs_target"]').val('Imperial(st/lbs)');
        $("ul#tabs li").click(function(e) {
            if (!$(this).hasClass("active")) {
                var tabNum = $(this).index();
                var nthChild = tabNum + 1;
                $("ul#tabs li.active").removeClass("active");
                $(this).addClass("active");
                $("ul#tab li.active").removeClass("active");
                $("ul#tab li:nth-child(" + nthChild + ")").addClass("active");
            }
        });
        $("ul#tabs_target li").click(function(e) {
            if (!$(this).hasClass("active")) {
                var tabNum = $(this).index();
                var nthChild = tabNum + 1;
                $("ul#tabs_target li.active").removeClass("active");
                $(this).addClass("active");
                $("ul#tab_target li.active").removeClass("active");
                $("ul#tab_target li:nth-child(" + nthChild + ")").addClass("active");
            }
        });
        $(".tab1").css("background-color", "white");
        $(".tab1").css("color", "#262626");
        $("#Extremely_Inactive").css("background-color", "#0f75bd");
        $("#Extremely_Inactive").css("color", "white");
        $(document).ajaxStart(function() {
            $("#wait").css("display", "block");
        });
        $(document).ajaxComplete(function() {
            $("#wait").css("display", "none");
        });
        $(document).ajaxStart(function() {
            $("#wait1").css("display", "block");
        });
        $(document).ajaxComplete(function() {
            $("#wait1").css("display", "none");
        });
        $(document).ajaxStart(function() {
            $("#wait2").css("display", "block");
        });
        $(document).ajaxComplete(function() {
            $("#wait2").css("display", "none");
        });
        $(document).ajaxStart(function() {
            $("#wait3").css("display", "block");
        });
        $(document).ajaxComplete(function() {
            $("#wait3").css("display", "none");
        });

    });

    function next(id) {
        $(".allStep").hide();
        $("#" + id).show();
        $('#target_weight_lbs-error').hide();
        $('#target_weight-error').hide();
        $('#target_weight_kg-error').hide();
    }

    function back(id) {
        $(".allStep").hide();
        $("#" + id).show();
    }

    function act(id) {
        $(".tab1").css("background-color", "white");
        $(".tab1").css("color", "#262626");
        $("#" + id).css("background-color", "#0f75bd");
        $("#" + id).css("color", "white");
        $('input[name="phy_activity"]').val(id);
    }

    function settab(id) {
        if (id == 1) {
            $('input[name="unit_tabs"]').val('Imperial(st/lbs)');
        } else if (id == 2) {
            $('input[name="unit_tabs"]').val('Metric');
        } else {
            $('input[name="unit_tabs"]').val('Imperial(lbs)');
        }

    }
    function settabtarget(id) {
        if (id == 1) {
            $('input[name="unit_tabs_target"]').val('Imperial(st/lbs)');
            $('ul#tab_target li input[name="weight_st_target"]').prop('type', 'text');
            $('ul#tab_target li input[name="weight_lb_target"]').prop('type', 'text');
            $('ul#tab_target li input[name="weight_kg_target"]').prop('type', 'hidden');
            $('ul#tab_target li input[name="weight_lbs_target"]').prop('type', 'hidden');

        } else if (id == 2) {
            $('input[name="unit_tabs_target"]').val('Metric');
            $('ul#tab_target li input[name="weight_kg_target"]').prop('type', 'text');
            $('ul#tab_target li input[name="weight_st_target"]').prop('type', 'hidden');
            $('ul#tab_target li input[name="weight_lb_target"]').prop('type', 'hidden');
            $('ul#tab_target li input[name="weight_lbs_target"]').prop('type', 'hidden');

        } else {
            $('input[name="unit_tabs_target"]').val('Imperial(lbs)');
            $('ul#tab_target li input[name="weight_lbs_target"]').prop('type', 'text');
            $('ul#tab_target li input[name="weight_kg_target"]').prop('type', 'hidden');
            $('ul#tab_target li input[name="weight_st_target"]').prop('type', 'hidden');
            $('ul#tab_target li input[name="weight_lb_target"]').prop('type', 'hidden');

        }

    }


    function setweight(id, value) {
        $(".weight_week").css("background-color", "#ffffff");
        $(".weight_week").css("color", "black");
        $("#" + id).css("background-color", "#0f75bd");
        $("#" + id).css("color", "white");
        $('input[name="week_weight"]').val(value);
        $("#1lb").removeClass("active");

    }

