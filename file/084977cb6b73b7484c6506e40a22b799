                 });
             });

             /* Scroll in indicator */
             $(window).scroll(function(){
                 var i = $(".nav-list li ul li").hasClass('programmes active');

                 if(i == true)
                 {
                     $($('#op').parent()).removeClass('active');
                     $($('#op').parent()).addClass('active');
                 }

             });

             $(window).scroll(function(){
                 var i = $(".nav-list li ul li").hasClass('programmes active');

                 if(i == true)
                 {
                     $($('#op').parent()).removeClass('active');
                     $($('#op').parent()).addClass('active');
                 }

             });

	 
 		
	var inputs = $('input[type="text"]');

	inputs.on('change', function () {
    	if ($.map(inputs, function (el) {
        return el.value;
