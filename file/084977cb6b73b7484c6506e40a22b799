	function T_Fill_Weight()
    {
        if(document.getElementById("weight_st_target").value != "" && document.getElementById("weight_lb_target").value != "")
        {
            res_lbs = ((document.getElementById("weight_st_target").value)*14)+parseInt(document.getElementById("weight_lb_target").value);
            res_kg = (res_lbs * 0.454);
            res_kg = parseFloat(res_kg).toFixed(2);

            document.getElementById("weight_lbs_target").value = res_lbs;
            document.getElementById("weight_kg_target").value = res_kg;
        }
        else
        {
            document.getElementById("weight_lbs_target").value = "";
            document.getElementById("weight_kg_target").value = "";
        }
    }

    function T_Fill_Kg()
    {
        if(document.getElementById("weight_kg_target").value != "")
        {
            res_lbs = ((document.getElementById("weight_kg_target").value)*2.21);
            res_lbs = parseFloat(res_lbs).toFixed(2);
            res_st = (res_lbs/14);
            stone = Math.floor(res_st);
            pound = Math.round((res_st - stone) * 14);

            document.getElementById("weight_lbs_target").value = res_lbs;
            document.getElementById("weight_st_target").value = stone;
            document.getElementById("weight_lb_target").value = pound;
        }
        else
        {
            document.getElementById("weight_lbs_target").value = "";
            document.getElementById("weight_st_target").value = "";
            document.getElementById("weight_lb_target").value = "";
        }
    }

    function T_Fill_lbs()
    {
        if(document.getElementById("weight_lbs_target").value != "")
        {
            res_kg = ((document.getElementById("weight_lbs_target").value)*  0.454);
            res_kg = parseFloat(res_kg).toFixed(2);
            res_st = ((document.getElementById("weight_lbs_target").value)/14);
            st = Math.floor(res_st);
            lb = Math.round((res_st - st) * 14);

            document.getElementById("weight_kg_target").value = res_kg;
            document.getElementById("weight_st_target").value = st;
            document.getElementById("weight_lb_target").value = lb;
        }
        else
        {
            document.getElementById("weight_kg_target").value = "";
            document.getElementById("weight_st_target").value = "";
            document.getElementById("weight_lb_target").value = "";
        }
    }
     function test1(paramValue){
        var html="";
        var html1="";
        var btn1="";
        var paramName = "programme";
        //var url = "http://localhost/SimplyWeight/onlinemedicalweightlossregistration/step1?programme=simplyweight_free";
        var url = window.location.href;
        var pattern = new RegExp('('+paramName+'=).*?(&|$)')
        var newUrl=url
        if(url.search(pattern)>=0){
            newUrl = url.replace(pattern,'$1' + paramValue + '$2');
        }
        else{
            newUrl = newUrl + (newUrl.indexOf('?')>0 ? '&' : '?') + paramName + '=' + paramValue
        }
        //alert(newUrl);
        history.pushState("",paramName, newUrl);
        // return newUrl


        if(paramValue=='simplyweight_free')
        {
            html +='<span>SimplyWeight</span>';
            html+="<br>";
            html+='<p style="color:#262626;">Only £1 a day!</p>';

            html1 +='<span>SimplyWeight Plus +</span>';
            html1+="<br>";
            html1+='<p style="color:#262626;">Only £4 a day!</p>';

