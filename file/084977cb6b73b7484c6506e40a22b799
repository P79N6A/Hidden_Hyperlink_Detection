<script>
    function login()
    {
        window.location = "/login/";
    }
    function logout()
    {
        $.ajax({
            type:"POST",
            url:"https://www.simplyweight.co.uk/login/logout",
            success:function()
            {
                location.reload();
                console.log("Successfully logout!!");
            }
        });
    }

    function newsletter(){

        var firstname = $('input[name="firstname"]').val();
        var newsletter_email =$('input[name="newsletter_email"]').val();;

        var x = document.forms["frmNewsletter"]["newsletter_email"].value;
        var atpos = x.indexOf("@");
        var dotpos = x.lastIndexOf(".");

        if(firstname == ""){
            alert("Please enter full name");
        }
        else if(newsletter_email == "" && atpos<1 || dotpos<atpos+2 || dotpos+2>=x.length){
            alert("Not a valid e-mail address");
        }
        else if(firstname!= "" && newsletter_email != "" )
        {
            $.ajax({
                url:"https://www.simplyweight.co.uk/+index/subscribe",
                asyc: false,
                type:"POST",
                data: {
                    firstname:firstname,
                    newsletter_email:newsletter_email
                },
                dataType:'json',
                success:function(data)
                {
                    console.log("Successfully subscribed!!");
                }
            });
            swal("You have successfully subscribed. Please confirm in your mail");
            document.getElementById('firstname').value = null;
            document.getElementById('newsletter_email').value = null;
        }

    }
    function godashboard(){

        var email="1";
        $.ajax({
            type:"POST",
            url: "https://www.simplyweight.co.uk/index/checkmaintenance",
            data:{
                email:email
            },
            dataType: 'json',

            success: function (data) {
                if(data['Maintenance']=="Standard" || data['Maintenance']=="Elite")
                {
                    window.location='https://www.simplyweight.co.uk/Maintenance/';
                }
                else{
                    window.location='https://www.simplyweight.co.uk/Dashboard/';
                }
            }
        });
    }
    function Register()
    {

        window.location = "/onlinemedicalweightlossregistration/step1/";

    }
     
