    $(document).ready(function() {

        $('#datepicker').Zebra_DatePicker({
            direction: -1,
            format: 'm-d-Y',
            view: 'years'
        });
        $("#datepicker").prop("readonly", false);

        $(document).on("focusin", "#datepicker", function(event) {

            $(this).prop('readonly', true);

        });

        $(document).on("focusout", "#datepicker", function(event) {

            $(this).prop('readonly', false);

        });

        $("#datepicker").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                //display error message
                return false;
            }
        });

    });
    $(function() {
        $('#datepicker').Zebra_DatePicker({
            direction: -1,
            format: 'm-d-Y',
            view: 'years',
            onSelect: function(text){
                var day=text.split('-')[0];
                var month= text.split('-')[1];
                var year=text.split('-')[2];
                var age = 18;
                var mydate = new Date();
                //var day = mydate.getUTCDate();
                mydate.setFullYear(year, month-1, day);

                var currdate = new Date();
                var setDate = new Date();
                setDate.setFullYear(mydate.getFullYear() + age, month-1, day);

                if ((currdate - setDate) > 0){
                    // you are above 18
                    //alert("above 18");

                }else{
                    //alert("below 18");
                    html="";
                    html+='<label id="datepicker-error" class="error" for="datepicker">You should be 18 years or older to register with us</label>';
                    $('#bDdate').html(html);



                }
            }}
        );
    });
