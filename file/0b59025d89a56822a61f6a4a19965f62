<script type="text/javascript">
    if(!$17.getCookieWithDefault("qingmingjie")){
        var eBox = document.getElementById("JS-splashScreenImg");
        eBox.style.display = "block";
        $17.setCookieOneDay("qingmingjie", 1);
        eBox.onclick = function(){
            eBox.style.display="none";
        };
        var timer = setInterval(function(){
            var num;
            var eTime = document.getElementById("JS-splashTime");
            num = parseInt(eTime.innerText);
            if(num>0){
                num--;
                eTime.innerText = num;
            }else{
                eBox.style.display="none";
                clearInterval(timer);
            }
        },1000);
        $17.voxLog({
            module: "m_NRkDopic",
            op : "o_Y4BIMEL0"
        });
