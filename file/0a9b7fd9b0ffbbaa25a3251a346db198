<script language="javaScript">
function noiframe(){
    if (top.location !== self.location) {
        top.location=self.location;
     }
}
$(function(){
	noiframe();
});
</script>
<script>
$(function() {
    
    
    // 底部内容tab切换
    //com.tab('.center-main-nav-navList a', '.center-main-content');
	
    $('.center-main-nav-navList a').click(function(){
        var index=$(this).index();
        $('.center-main-nav-navList a').removeClass('current').eq(index).addClass('current');
        $('.center-main-content.current').slideUp().removeClass('current');
        $('.center-main-content').eq(index).slideDown().addClass('current');
		
    })
    // 输入框hint样式
    hint("#username", "请输入用户名");
    hint("#txt_password", "请输入密码");
    //
    $(".header-loginWrap-form-input").focus(function() {
        $(this).addClass("focus");
    }).blur(function() {
        $(this).removeClass("focus");
    });
    // 背景视差滚动
    var centerX = parseInt($(document).width()/2),
        imageCenterX = (1920 - $(document).width()) / 2;
    $(".header").mousemove(function(e) {
        var moveX = centerX - e.pageX;
        $(".header-bg1").css({"background-positionX":-imageCenterX-moveX/35});
        $(".header-bg2").css({"background-positionX":-imageCenterX-moveX/15});
    });
	
	
	$("#form_login").submit(function(){
        if($('#username').val().length == 0 || $('#username').val()=="请输入用户名"){
            $('#username').focus();
			jAlert("用户名必须填写");
            //$('#error_msg').html("用户名必须填写");
            //$('#error_msg').show();
            return false;
        }
        if($('#txt_password').val().length == 0 || $('#txt_password').val()=="请输入密码"){
            $('#txt_password').focus();
			jAlert("密码必须填写");
            //$('#error_msg').html("密码必须填写");
            //$('#error_msg').show();
            return false;
        }
        jQuery.ajax({
            type:"post",
            url:"/login/login.form",
            dataType:"html",
            data:$(this).serialize(),
            success:function(msg){
                if(msg==''){
                	var role= $("input[name='role']:checked").val();
                	var goUrl = "/my/index.vm";
                    window.location=goUrl;
                }else{
				    jAlert(msg);
                    //$('#error_msg').hide();
                    //$('#error_msg').html(msg);
                   // $('#error_msg').show();
                }
             }
        });
        return false;
    });
});
// hint样式函数
function hint(object, hintText) {
    $(object).val(hintText).focus(function() {
        if (this.value == hintText) {
            $(this).val('');
        }
    }).blur(function() {
        if (this.value == '') {
            $(this).val(hintText);
        }
    });
}
</script>
<!-- JS End -->

