   <script type="text/javascript" id="script_fastpost" reload="1">

function sendthreadpost(id){

var formobj = $('#'+id);
loading();
$.ajax({
type:'POST',
url:formobj.attr('action') + '&handlekey='+ id +'&inajax=1',
data:formobj.serialize(),
dataType:'xml'
})
.success(function(s) {
evalscript(s.lastChild.firstChild.nodeValue);
})
.error(function() {
goto('forum.php?mod=post&action=reply&fid=220&extra=&tid=$[tid]','post');
});
return false;

}
function succeedhandle_fastpostform(locationhref, message, param) {
var pid = param['pid'];
var tid = param['tid'];
if(pid) {
$.ajax({
type:'POST',
url:'forum.php?mod=viewthread&tid=' + tid + '&viewpid=' + pid + '&mobile=2',
dataType:'xml'
})
.success(function(s) {
$('.body_main #listtableid').append(s.lastChild.firstChild.nodeValue);
$('.body_main').scrollTop($('.body_main')[0].scrollHeight+180);
})
.error(function() {
goto('forum.php?mod=viewthread&tid=tid=$[tid]','post');
});
} else {
if(!message){
message = '本版回帖需要审核，您的帖子将在通过审核后显示';
}
popup.open(message, 'alert');
}
callpage('fastpost');
$("#postmessage").val('');
$('#imglist').remove();
$('.body_main .nolist ').hide();
$('.postitle').css('display','');

popup.close();
}
function errorhandle_fastpostform(message, param) {
callpage('fastpost');
popup.open(message, 'alert');
}
evalscripts.push('script_fastpost');
	
</script> 
