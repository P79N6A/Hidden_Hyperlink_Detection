                }
                $('.sub_header').addClass('posi_fixed');
            }else{
                $('.sub_header').removeClass('posi_fixed');
            }
        });

        function hideLayer(){
            $('.more_list, .manage_more').hide();
            $('#J_share_widget').removeClass('show');
        }

    })

</script> 
