var cmt_empty_username = "请输入您的用户名称";
var cmt_empty_email = "请输入您的电子邮件地址";
var cmt_error_email = "电子邮件地址格式不正确";
var cmt_empty_content = "您没有输入评论的内容";
var captcha_not_null = "验证码不能为空!";
var cmt_invalid_comments = "无效的评论内容!";

/**
 * 提交评论信息
*/
function submitComment(frm)
{
  var cmt = new Object;
  cmt.uid           = frm.elements['uid'].value;
  cmt.content         = frm.elements['content'].value;
  cmt.id              = frm.elements['goods_id'].value;
  cmt.captcha         = frm.elements['captcha'] ? frm.elements['captcha'].value : '';
  cmt.grade=5;
var grade = document.getElementById("grade");
var grade_list = grade.getElementsByTagName("li");
for(i = 0;i < grade_list.length;i++){
	if(hasClass(grade_list[i],'gade')){
		cmt.grade=Math.floor(grade_list[i].getAttribute('data-gade'));
	}
} 
  if (cmt.uid < 1)
  {
    alert("请登录之后发表留言");
    return false;
  }

   if (cmt.content.length == 0)
   {
      alert(cmt_empty_content);
      return false;
   }
   
   if (cmt.captcha.length != 4  )
   {
      alert("请输入正确的验证码");
      return false;
   }

/*   if (cmt.enabled_captcha > 0 && cmt.captcha.length == 0 )
   {
      alert(captcha_not_null);
      return false;
   }
*/
   Ajax.call('comment.php', 'cmt=' + cmt.toJSONString(), commentResponse, 'POST', 'JSON');
   return false;
}

/**
 * 处理提交评论的反馈信息
*/
  function commentResponse(result)
  {
	//alert(result);
	if (result.message)
    {
      alert(result.message);
    }

    if (result.error == 0)
    {
      var layer = document.getElementById('ECS_COMMENT');

      if (layer)
      {
        layer.innerHTML = result.content;
      }
    }
  }

