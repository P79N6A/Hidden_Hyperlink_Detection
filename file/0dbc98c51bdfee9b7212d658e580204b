        $(function () {
            var url = "/ajax/submit_ajax.ashx?action=user_check_login";
            ajaxRequest(url, {}, "loginCallback");
        });

        function loginCallback(jsonStr) {
            var obj = JSON.parse(jsonStr);
            console.info(obj.status);
            if (obj.status == 1) {
                $("#a_name").text(obj.username);
                $("#div_top div:eq(1)").hide();
                $("#div_top div:eq(2)").show();
                $("#a_name").text(obj.username);
                //如果已经登录，那么就去检查一下是否有未读消息
                var url = "/ajax/submit_ajax.ashx?action=user_message_num";
                ajaxRequest(url, {}, "user_message");
            }
        }

        function user_message(jsonStr) {
            var obj = JSON.parse(jsonStr);

            if (obj.status == 1) {
                $("#message_num").show();
                $("#message_num").text(obj.num);
            } else {
                $("#message_num").hide();
            }
        }
