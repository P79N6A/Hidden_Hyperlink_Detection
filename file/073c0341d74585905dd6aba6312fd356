    <script type="text/javascript">
	 function checklogincomment(){
		 if(temp_content.value=='所发表点评仅代表网友个人观点，不代表《经济观察网》观点'){
			temp_content.value='';
		 }
		if(getMemberName()==''||getMemberName()=='EEO网友'){
			alert('请先登陆！')
			window.location="http://www.eeo.com.cn/service/member/login.shtml?backurl="+window.location;
			return false;
		}
	 }
	 function addComment(){
		
		if(getMemberName()==''||getMemberName()=='EEO网友'){
			alert('请先登陆！')
			window.location="http://www.eeo.com.cn/service/member/login.shtml?backurl="+window.location;
			return false;
		}

	 var temp_form=document.getElementById('fromcomment');
	 
	 
	 var temp_content=document.getElementById('comment');
	   if(temp_content!=null){
			if(temp_content.value==''|| temp_content.value=='所发表点评仅代表网友个人观点，不代表《经济观察网》观点'){
				alert('请输入评论！')
				temp_content.focus();
				return false;
			}else if(temp_content.value.length>1000){
				alert('请输入评论不超过1000个字！');
				temp_content.focus();
				return false;
			}
		}
	var temp_validateimg=document.getElementById('eeo_web_validate');
		if(temp_validateimg!=null){
			if(temp_validateimg.value==''){
			    alert('请输入验证码！');
				temp_validateimg.focus();
				return false;
			}
		}
	 }		
	 </script> 
