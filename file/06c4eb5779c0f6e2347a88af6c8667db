<script type="text/javascript">
  $(document).ready(function() {
    $("#main_navigation_vintage > a").attr('href', '/?utm_source=DEnavigation&utm_medium=NAV&utm_content=New_Nav&utm_campaign=MEN_MAIN');
    $("#main_navigation_sports > a").attr('href', '/junior/view-all/fcp-category/list?utm_source=DEnavigation&utm_medium=NAV&utm_content=New_Nav&utm_campaign=BOYS_MAIN');
    $("#main_navigation_sports2 > a").attr('href', '/fcp/content/homepage-sports/content?utm_source=DEnavigation&utm_medium=NAV&utm_content=New_Nav&utm_campaign=SPORTS_MAIN');
    $("#main_navigation_newin > a").attr('href', '/men/new-in/fcp-category/list?utm_source=DEnavigation&utm_medium=NAV&utm_content=New_Nav&utm_campaign=NEW_MAIN');
  
    var isiPad = navigator.userAgent.match(/iPad/i) != null;
  
    if(isiPad) {
      $("#main_navigation_vintage > a").attr('href', '#');
      $("#main_navigation_sports > a ").attr('href', '#');
      $("#main_navigation_sports2 > a ").attr('href', '#');
    }
  
    $(".vintage_main a").mouseenter(function() {
        var panelNumber = $(this).parent().data('panelno');
        var panelID = $(this).parent().attr('id');
        var i = 1;
        while(i < 4) {
           if(i != panelNumber) {
                $('#vintage_0' + i).removeClass('active');
                $('#vintage_0' + i + '_sub').css('display', 'none');
           }
           i++;
        }
         $("#sub_navigation_vintage .image_panel img").attr('src', '/pws/client/images/nav/'+panelID+'.png');
         $(this).parent().addClass('active');
         $('#' + panelID + '_sub').css('display', 'block');
    });
  
    $("#main_navigation_vintage a").on('touchstart', function(event) {
       event.preventDefault();
        if($("#sub_navigation_boys").css('display') == 'block') {
          $("#sub_navigation_boys").css('display', 'none');
          $("#sub_navigation_back").css('display', 'none');
        }
        if($("#sub_navigation_vintage").css('display') == 'block') {
           $("#sub_navigation_vintage").css('display', 'none');
           $("#sub_navigation_back").css('display', 'none');
        }
        if($("#sub_navigation_sports").css('display') == 'block') {
           $("#sub_navigation_sports").css('display', 'none');
           $("#sub_navigation_back").css('display', 'none');
        } else {
           $("#sub_navigation_vintage").css('display', 'block');
           $("#sub_navigation_back").css('display', 'block');
        }
    });
  
   $("#sub_navigation_back").on('touchstart', function() {
     if($("#sub_navigation_boys").css('display') == 'block') {
        $("#sub_navigation_boys").css('display', 'none');
     }
     if($("#sub_navigation_vintage").css('display') == 'block') {
        $("#sub_navigation_vintage").css('display', 'none');
     }
     if($("#sub_navigation_boys").css('display') == 'block') {
        $("#sub_navigation_boys").css('display', 'none');
     }
     if($("#sub_navigation_sports").css('display') == 'block') {
        $("#sub_navigation_sports").css('display', 'none');
     }
     $("#sub_navigation_back").css('display', 'none');
   });
  
    $("#main_navigation_vintage").hover(
        function() {
           $("#sub_navigation_vintage").css('display', 'block');
           $("#sub_navigation_back").css('display', 'block');
        },
        function() {
           $("#sub_navigation_vintage").css('display', 'none');
           $("#sub_navigation_back").css('display', 'none');
        });


    $("#sub_navigation_vintage").hover(
        function() {
           $("#sub_navigation_vintage").css('display', 'block');
           $("#sub_navigation_back").css('display', 'block');
        },
        function() {
           $("#sub_navigation_vintage").css('display', 'none');
           $("#sub_navigation_back").css('display', 'none');
        });
  });
</script>
