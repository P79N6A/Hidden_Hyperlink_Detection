<script type="text/javascript">
 var nav = $(document).find('#size-nav');
 var selection = nav.find('.select-size');
 var select = selection.find('li');

 $(document).on('click', '#size-nav', function(event) {
    if($(document).find(".select-size").css('display') === 'block') {
      $(document).find("#size-nav").removeClass('active');
      $("#main").find('.select-size').stop().slideUp(100);
    } else {
      $(document).find("#size-nav").addClass('active');
      $("#main").find('.select-size').stop().slideDown(100);
    }
});
$('html').click(function(event) {
    if($(document).find("#size-nav").hasClass('active')) {
      $(document).find("#size-nav").removeClass('active');
      $("#main").find('.select-size').stop().slideUp(100);
    }
    if($(document).find("#basket_action").css("display") != 'none' && $(event.target).attr('type') != 'submit' && $(event.target).hasClass('value') == false) {
      $(document).find("#basket_action").fadeOut(400);
    }
});
 
$(document).on('click', '.select-size li', function(event) {
  $('.select-size li').removeClass('active');
  $(this).addClass('active');
  var dataval = $(this).data("value");
  console.log(dataval);
  var dataText = $(this).text();
  if($("#error_message").is(":visible")) {
   $("#error_message").fadeOut(100);
  }
  $('select#select_size option[value="'+dataval+'"]').prop('selected', true);
  $('select#select_size').focus();
  var url = document.domain;
  var theString = 'mobile.lyleandscott';

  if(url.indexOf(theString) == -1) {
      checkStock(dataval);
  }
  $(document).find('#size-nav').text(dataText);
  $(document).find('#size-nav').removeClass('active');
  $(".element").find('.select-size').stop().slideUp(200);
  $(".product_section").find('.select-size').stop().slideUp(200);
});
</script>
