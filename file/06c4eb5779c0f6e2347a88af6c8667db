       $("#add_to_bag_actions").prepend("<div id='basket_action' style='display:none; font-size: 15px; '><span class='close grey'></span><p>Good choice! It's in the bag.<p style='padding-top: 4px;'><a href='/pws/ShippingOptions.ice?viewBasket=true'>View bag</a><span class='arrow'></span></div>");
