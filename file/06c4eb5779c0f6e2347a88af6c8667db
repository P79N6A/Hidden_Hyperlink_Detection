 $(document).ready(function() {
  if($("#select_colour_list").length) {
    $("#select_colour_list").wrap('<div id="primary-container"><div id="select-container"></div></div>');
    var count = $("#select_colour_list li").length;
    if(count > 5) {
      $("#primary-container").prepend('<div class="chev-select-left" style="display: none;"></div>').append('<div class="chev-select-right"></div>');
    }
  }

  $(".chev-select-left").click(function() {
    var theParent = $(this).parent();
    var liCount = $("#select_colour_list li").length;
    var maxTrans = liCount / 5;
    maxTrans = Math.ceil(maxTrans);

    maxTransLeft = ((maxTrans * 360) * -1) + 360;

    var carouselPos = $('#select_colour_list').position();
    var newPos = carouselPos.left + 360;
    $('#select_colour_list').css({position: 'absolute', left: newPos + 'px'});


    if(newPos < 0) {
      $(".chev-select-left").show();
    } else {
      $(".chev-select-left").hide();
    }
    if(newPos == maxTransLeft) {
      $(".chev-select-right").hide();
    } else {
      $(".chev-select-right").show();
    }
  });

  $(".chev-select-right").click(function() {
    var theParent = $(this).parent();
    var liCount = $("#select_colour_list li").length;
    var maxTrans = liCount / 5;
    maxTrans = Math.ceil(maxTrans);

    maxTransLeft = ((maxTrans * 360) * -1) + 360;

    var carouselPos = $('#select_colour_list').position();
    var newPos = carouselPos.left - 360;
    $('#select_colour_list').css({position: 'absolute', left: newPos + 'px'});

    if(newPos < 0) {
      $(".chev-select-left").show();
    } else {
      $(".chev-select-left").hide();
    }
    if(newPos == maxTransLeft) {
      $(".chev-select-right").hide();
    } else {
      $(".chev-select-right").show();
    }
  });
 });
</script>
