<script type="text/javascript">
  $(document).ready(function() {
    $(".sports_main a").mouseenter(function() {
        var panelNumber = $(this).parent().data('panelno');
        var panelID = $(this).parent().attr('id');
  
        var i = 1;
        while(i < 3) {
          if(i != panelNumber) {
            $('#sports_0' + i).removeClass('active');
            $('#sports_0' + i + '_sub').css('display', 'none');
          }
          i++;
        }
        $("#sub_navigation_boys .image_panel img").attr('src', '/pws/client/images/nav/'+panelID+'.png');
        $(this).parent().addClass('active');
        $('#' + panelID + '_sub').css('display', 'block');
    });
  
    $("#main_navigation_sports a").on('touchstart', function(event) {
        event.preventDefault();
        if($("#sub_navigation_vintage").css('display') == 'block') {
          $("#sub_navigation_vintage").css('display', 'none');
          $("#sub_navigation_back").css('display', 'none');
        }
        if($("#sub_navigation_boys").css('display') == 'block') {
           $("#sub_navigation_boys").css('display', 'none');
           $("#sub_navigation_back").css('display', 'none');
        } 
        if($("#sub_navigation_sports").css('display') == 'block') {
           $("#sub_navigation_sports").css('display', 'none');
           $("#sub_navigation_back").css('display', 'none');
        } else {
           $("#sub_navigation_boys").css('display', 'block');
           $("#sub_navigation_back").css('display', 'block');
        }
    });
  
    $("#main_navigation_sports").hover(
        function() {
          $("#sub_navigation_boys").css('display', 'block');
          $("#sub_navigation_back").css('display', 'block');
        },
        function() {
          $("#sub_navigation_boys").css('display', 'none');
          $("#sub_navigation_back").css('display', 'none');
        });
    $("#sub_navigation_boys").hover(
      function() {
          $("#sub_navigation_boys").css('display', 'block');
          $("#sub_navigation_back").css('display', 'block');
      },
      function() {
          $("#sub_navigation_boys").css('display', 'none');
          $("#sub_navigation_back").css('display', 'none');
      });
  });
</script>
