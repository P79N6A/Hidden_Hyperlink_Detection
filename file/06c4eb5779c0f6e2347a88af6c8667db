    $("a.productTitle").each(function() {
        var titleText = $(this).html();
        var titleNewText = titleText.replace('Lyle & Scott ', 'Lyle & Scott<br/>');
         titleNewText = titleText.replace('Lyle &amp; Scott ', 'Lyle &amp; Scott<br/>');
       $(this).html(titleNewText);
});
}
