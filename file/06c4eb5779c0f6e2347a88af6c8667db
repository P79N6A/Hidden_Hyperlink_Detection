<script type="text/javascript">

  var FRString1 = 'fr.lyleandscott.fr';
  var FRString2 = 'www.lyleandscott.fr';

  var DEString1 = 'de.lyleandscott.fr';
  var DEString2 = 'www.lyleandscott.de';

  var SEString1 = 'se.lyleandscott.fr';
  var SEString2 = 'www.lyleandscott.se';

  var myAccountString = 'My Account';

  if(url.indexOf(FRString1) !== -1 || url.indexOf(FRString2) !== -1) {
    myAccountString = 'Mon compte';
  }
  if(url.indexOf(DEString1) !== -1 || url.indexOf(DEString2) !== -1) {
    myAccountString = 'Mein Konto';
  }
  if(url.indexOf(SEString1) !== -1 || url.indexOf(SEString2) !== -1) {
    myAccountString = 'Mitt konto';
  }

  $(document).ready(function() {
    $("#changeCountry").after('<li id="my_account_link"><a href="/pws/secure/ManageAccount.ice?secure_from=login">'+myAccountString+'</a></li><li id="wishlist_link"><a href="/pws/secure/ViewWishList.ice">Saved</a></li>');

   $(".mb_count").text(function(_, text) {
     return text.replace(/[{()}]/g, '');
   });

   if($(".mb_count").text() == '0' || $(".mb_count").text() == ' 0') {
     $(".mb_count").css('display', 'none');
   }

window.setInterval(function(){
   if($(".mb_count").length === $('.mb_count:contains("(")').length) {
     $(".mb_count").text(function(_, text) {
       return text.replace(/[{()}]/g, '');
     });
     $(".mb_count").css('display', 'block');
   }
 }, 1500);
});
</script>


<script type="text/javascript">
 $(document).ready(function() {

$("<a class='cd-top' href='#'><img src='/pws/client/images/back-to-top.png' style='width: 50px; height: 50px;'/></a>").appendTo("#main");


var offset = 300;

var offset_opacity = 1200;

var scroll_top_animation = 700;

var back_to_top = $(document).find(".cd-top");

$(document).ready(function() {
if($("#productDetailsCont").length) {
  $("#productDetailsCont").append("<span class='homepage_flag' style='display: none;'/>");
 }
});

$(window).scroll(function() {
if($(".homepage_flag").length <= 0) {
 ($(this).scrollTop() > offset) ? back_to_top.addClass('cd-is-visible') : back_to_top.removeClass('cd-is-visible cd-fade-out');
}
});

back_to_top.on('click', function(event){
 event.preventDefault();
$('body,html').animate({scrollTop: 0}, scroll_top_animation);
});


if($("#landing_promo_area").height() > 120) {
   $("#landing_promo_area").append('<div class="landing-tilde"></div>');
}
$(".product_price").each(function() {
 if($(this).find(".was_price").length > 0) {
  $(this).find(".now_price").attr('style', 'color: #DF0101 !important;');
 }
});
$(".also_available_in li:last-child").each(function() {
 $(this).addClass("last");
});
$(".to_price_title").each(function() {
 $(this).html("-");
});
$(".productOptions").each(function() {
var count = $(".alt-colours li", this).length;
if(count > 3) {
 $(this).prepend('<div class="chev-left" style="display: none;"></div>').append('<div class="chev-right"></div>');
}
setTimeout(function() {
 var catHeight = $("#landing_promo_area").height();
 if(catHeight >= 15) {
 var filterTop = catHeight - 9;
 } else {
 var filterTop = catHeight;
 }
 $(".collection_size_filters").css("padding-top", filterTop + 'px');
}, 1000);
});
$(".chev-left").click(function() {
 var theParent = $(this).parent();
 var liCount = $(".alt-colours li", theParent).length;
 var maxTrans = liCount / 3;
 maxTrans = Math.ceil(maxTrans);

 maxTransLeft = ((maxTrans * 164) * -1) + 164;

 var carouselPos = $(this).parent().find('.alt-colours').position();
 var newPos = carouselPos.left + 164;
 $(this).parent().find('.alt-colours').css({position: 'absolute', left: newPos + 'px'});

 if(newPos < 0) {
  $(this).parent().find(".chev-left").show();
 } else {
  $(this).parent().find(".chev-left").hide();
 }
 if(newPos == maxTransLeft) {
  $(this).parent().find(".chev-right").hide();
 } else {
  $(this).parent().find(".chev-right").show();
 }
});
$(".chev-right").click(function() {

 var theParent = $(this).parent();
 var liCount = $(".alt-colours li", theParent).length;
 var maxTrans = liCount / 3;
 maxTrans = Math.ceil(maxTrans);

 maxTransLeft = ((maxTrans * 164) * -1) + 164;

 var carouselPos = $(this).parent().find('.alt-colours').position();
 var newPos = carouselPos.left - 164;
 $(this).parent().find('.alt-colours').css({position: 'absolute', left: newPos + 'px'});
 
 if(newPos < 0) {
  $(this).parent().find(".chev-left").show();
 } else {
  $(this).parent().find(".chev-left").hide();
 }
 if(newPos == maxTransLeft) {
  $(this).parent().find(".chev-right").hide();
 } else {
  $(this).parent().find(".chev-right").show();
 }
});
});
</script>
