   <script type="text/javascript">
    /* share to weixin */
    $(function(){
      var qrImgUrl = "http://qr.liantu.com/api.php?bg=f3f3f3&el=l&w=200&m=10&text="+location.href;
      var qrImg = $('<img>').attr('src', qrImgUrl);
      $('#j_shareToWXBtn').popover({
        html: true,
        trigger: 'click', // focus not work for safari
        content: '<img src="'+qrImgUrl+'" width="150" height="150">'
      });
    });

    $(function(){
      var isSignedin = false;

      $.fn.extend({
        requestIneract: function(options){
          var btn = $(this);
          // options.notSignedTip
          // options.interactUrl
          // options.uninteractUrl
          // options.interactMethod
          // options.uninteractMethod

          btn.click(function(){
            if(btn.isRequesting) return;
            if(!isSignedin){
              alert(options.notSignedTip);
              return false;
            }

            btn.isRequesting = true;

            var isInteracted = btn.hasClass('active');

            if(isInteracted){
              var url = options.uninteractUrl;
              var method = options.uninteractMethod;
              var success = options.uninteractSuccess;
            } else {
              var url = options.interactUrl;
              var method = options.interactMethod;
              var success = options.interactSuccess;
            }

            $.ajax({
              url: url,
              type: 'post',
              data: {
                method: method,
                id: 15383,
                resource: 'Article'
              },
              success: function (data) {
                btn.isRequesting = false;

                if (data && data.status == -1) {
                  alert(data.message)
                } else {
                  if(isInteracted){
                    btn.removeClass('active');
                  } else {
                    btn.addClass('active');
                  }
                  success && success();
                }
              }
            });
          });
        }
      });

      var likeBtn = $('#j_original_like');
      var likes = $('#j_original_likesNum')
      likeBtn.requestIneract({
        uninteractUrl: '/like',
        interactUrl: '/like',

        uninteractMethod: 'cancel_like',
        interactMethod: 'like',

        notSignedTip: '登录即可赞一下，谢谢支持',

        uninteractSuccess: function(){
          likes.html(Number(likes.html())-1);

          // temp for ugc2016
          if(likeBtn.is('.p_voteBtn')){
            likeBtn.html('投票');
          }
        },
        interactSuccess: function(){
          likes.html(Number(likes.html())+1);

          // temp for ugc2016
          if(likeBtn.is('.p_voteBtn')){
            likeBtn.html('已投票');
          }
        }
      });

      var markBtn = $('#j_original_mark');
      markBtn.requestIneract({
        uninteractUrl: 'http://www.g-cores.com/mark',
        interactUrl: 'http://www.g-cores.com/mark',

        uninteractMethod: 'cancel_mark',
        interactMethod: 'mark',

        notSignedTip: '登录即可收藏本文，谢谢支持'
      });
    });
  </script> 
   <script>
    $(function(){
      var hasFocusComment = false;
      var focusCommentId = -1;
      var showCommentUrl = '';

      var c = new Comment({
        isSignined: false,
        commentable: 'article',
        commentableId: '15383',
        container: $('#j_commentsOutterContainer'),

        currentUserId: undefined,
        isStaff: false
      });
      
      if(hasFocusComment){
        $.ajax({
          method: 'GET',
          url: showCommentUrl,
          success: function(data){
            var comment = $(c.renderComments([data.partial]))
            $('.j_focusComments').append(comment);

            var commentIdStr = '#'+'comment_'+focusCommentId;
            location.href = location.href.replace(/#.*$/g, '') + commentIdStr;

            comment.find('li').show();
            comment.find('.j_expand').closest('li').remove();

            $(commentIdStr).addClass('highlight');
          }
        });

        c.dom.btnGetComments.click(function(){
          $('.j_focusCommentContainer').remove();
        });
      } else {
        c.dom.btnGetComments.click();
      }
    });
  </script> 
