  <script type="text/javascript">

		function errorTips(o, t ) {
				var html =
				    '<div class="ui-state-error ui-corner-all" style="margin-top: 5px; padding: 0.5em;">'+
    '<p><span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span><strong>&nbsp;&nbsp;</strong>'+
    t+
    '</p></div>'
					o.html(html);
		}
		function checkLength( o,ot, n, min, max ) {
			if ( o.val().length > max || o.val().length < min ) {
				errorTips(ot, n + "长度必须在" +
					min + "和" + max + "之间。" );
				return false;
			}
			else{
				ot.empty();
				return true;
			}
		}
		function checkVerifyCodeLength( o,ot, n, length) {
			if ( o.val().length != length ) {
				errorTips(ot, n + "长度必须4位。" );
				return false;
			}
			else{
				ot.empty();
				return true;
			}
		}
	//var ajaxUrl = "/login";
$(document).ready(function() {
		$("input:submit").button();
		$("#cancelButton").button();

		var username = $( "#username" ),
			password = $( "#password" ),
			verifyCode = $( "#verifyCode" ),
			loginTips = $( "#loginTips" ),
			usernameTips = $( "#usernameTips" ),
			passwordTips = $( "#passwordTips" ),
			verifyCodeTips = $( "#verifyCodeTips" );
			/*username.blur(function(){
				if(!checkLength(username,usernameTips,"登录名",4,50)){
					return false;
			    }
			});*/
			username.focus(function(){
				loginTips.empty();
				usernameTips.empty()
			});
			password.focus(function(){
				loginTips.empty();
				passwordTips.empty()
			});
			verifyCode.focus(function(){
				loginTips.empty();
				verifyCodeTips.empty()
			});
			/*password.blur(function(){
			if(!checkLength(password,passwordTips,"密码",6,32)){
				return false;
				}
			});*/
			

		$("#loginSubmit").click(function(){
			if(!checkLength(username,usernameTips,"登录名",4,50)){
		return false;
	}
		if(!checkLength(password,passwordTips,"密码",6,32)){
		return false;
	}
			if(!checkVerifyCodeLength(verifyCode,verifyCodeTips,"验证码",4)){
		return false;
	}
				return true;
		});

		$( "#loginDialog" ).dialog({
			autoOpen: false,
			//height: 360,
			width: 440,
			modal: true,
			resizable: false,
			show: {
       		effect: 'fade',
       		duration: 300
     		},
			close: function() {
			}
		});

		$( "#login" )
			.click(function() {
				var timenow = new Date().getTime();
				$("#username").attr("value","");
				$("#password").attr("value","");
				$("#verifyCode").attr("value","");
				loginTips.empty();
				usernameTips.empty();
				passwordTips.empty();
				verifyCodeTips.empty();
				document.getElementById("captcha").src="/login?action=getCaptcha&d="+timenow;
				$( "#loginDialog" ).dialog( "open" );
			});
			
		$("#cancelButton").click(function(){
		$( "#loginDialog" ).dialog( "close" );
		return false;
		});
		
			var options = {
			dataType: "json",
			success: function(data){
				if(data.result==1){

					errorTips(loginTips, "登录成功！");

					setTimeout(function(){
									$( "#loginDialog" ).dialog( "close" );
					},1000);
					window.location.reload();
				}
				else if(data.result==0){
				 //console.log("0");
				 $("#password").attr("value","");
				$("#verifyCode").attr("value","");
				 var timenow = new Date().getTime();
				 document.getElementById("captcha").src="/login?action=getCaptcha&d="+timenow;
					errorTips(loginTips, data.content);
				}
				else{
				   // console.log("n");
					errorTips(loginTips, data.content);
				}
				}			
			};
       $('#loginForm').ajaxForm(options);

});
</script> 
