    <script type="text/javascript">

		function errorTips(o, t ) {
				var html =
				    '<div class="ui-state-highlight ui-corner-all" style="margin-top: 5px; padding: 0.5em;">'+
    '<p><span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span><strong>&nbsp;&nbsp;</strong>'+
    t+
    '</p></div>'
					o.html(html);
		}
		function checkLength( o,ot, n, min, max ) {
			if ( o.val().length > max || o.val().length < min ) {
				errorTips(ot, n + "长度必须在" +
					min + "和" + max + "之间。" );
				return false;
			}
			else{
				ot.empty();
				return true;
			}
		}
	//var ajaxUrl = "/login";
$(document).ready(function() {
		$( "a.login" )
			.click(function() {
				var username = $( "#username" ),
    			password = $( "#password" ),
    			verifyCode = $( "#verifyCode" ),
    			loginTips = $( "#loginTips" ),
    			usernameTips = $( "#usernameTips" ),
    			passwordTips = $( "#passwordTips" ),
    			verifyCodeTips = $( "#verifyCodeTips" );
				var timenow = new Date().getTime();
				$("#username").attr("value","");
				$("#password").attr("value","");
				$("#verifyCode").attr("value","");
				loginTips.empty();
				usernameTips.empty();
				passwordTips.empty();
				verifyCodeTips.empty();
				document.getElementById("captcha").src="/login?action=getCaptcha&d="+timenow;
				$( "#loginDialog" ).dialog( "open" );
			});
			
	   			var options1 = {
			dataType: "json",
			success: function(data){
				if(data.result==1){
							    $("#comment").val("");
								$("#Page2").load(returnUrl+"?action=commentPage&index=0&id=4e361159bb444008aed824291a0b31fe");
							$( "#tipDialog" ).dialog("open");
								setTimeout(function(){
									$( "#tipDialog" ).dialog( "close" );
								},3000);							
							
								
				}
				else if(data.result==0){
					$("#noticeTips").html(data.content);
				}
				else{
					$("#noticeTips").html(data.content);
				}
				}			
			};
       $('#commentForm').ajaxForm(options1);
	   
			$( "#tipDialog" ).dialog({
			autoOpen: false,
			height: 180,
			width: 300,
			modal: false,
			resizable: false,
			show: {
       		effect: 'fade',
       		duration: 300
     		},
			buttons: {
				"关闭": function() {
					$( this ).dialog( "close" );
				}
			}
		});

});
$(document).ready(function() {
	$("button").button();
	$("button.operate").click(function(event){
	    event.preventDefault();
	   var url = this.getAttribute('url');
		if(url.indexOf('Select')>0){
			jQuery.getJSON(returnUrl+'?action=checkLogin',function(data){
				if(data.result == 1){
					window.location.href = url;
					//window.open(url);
				}
				else{
					$( "#loginDialog" ).dialog({
						autoOpen: false,
						//height: 220,
						width: 420,
						modal: true,
						resizable: false,
						show: {
			       		effect: 'fade',
			       		duration: 300
			     		},
						close: function() {
						}
					});	
						var username = $( "#username" ),
						password = $( "#password" ),
						loginTips = $( "#loginTips" ),
						usernameTips = $( "#usernameTips" ),
						passwordTips = $( "#passwordTips" );
						$("#username").attr("value","");
						$("#password").attr("value","");
						loginTips.empty();
						usernameTips.empty();
						passwordTips.empty();
						$( "#loginDialog" ).dialog( "open" );					
					
				}
			
			})
		}
	              return false;
	 });    

});
</script> 
