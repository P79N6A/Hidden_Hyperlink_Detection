  <script type="text/javascript">
        (function () {
            var h = $('.hdcontent').height();
            $('html,body').animate({ scrollTop: h }, 200);
        })();
        var classID = 0;
        $(".talk_tools a.replay").live('click', function () {
            if ($("#uname").val() != "") {
                classID = $(this).parent().parent().find('.zan').attr('hid');
                var tsid = $(this).parent().parent().find(".name")
                var replyto = tsid.text();
                replyto = "回复  " + "[" + replyto + "]\n"
                $("#content_txt").focus().val(replyto);
                $("#huifuser").val(replyto)
                return false;
            }
            else {
                window.location.href = "/login/?reurl=" + window.location.href;
            }
        })

        $("#content_txt").bind("keydown", function () {
            var hfhid = $("#huifuser").val().replace(/(\[.+\]回复)(\s.+)(\[\/url\])/, "回复$2")
            var len = hfhid.length > 0 ? hfhid.length + 1 : 0
            $(this).val($(this).val().substr(0, 200 + len));
            if ($(this).val().length >= 200 + len) {
                tipFun("点评内容最多200字~");
            }
        })
        function checkform() {
            if ($("#uname").val() != "") {
                var hfhid = $("#huifuser").val().replace(/(\[.+\]回复)(\s.+)(\[\/url\])/, "回复$2");
                var dpcon = $(".com_list");
                var contenTxt = $('#content_txt').val().replace($("#huifuser").val(), '').trim();
                if (hfhid.length > 0) {
                    if (contenTxt.indexOf(hfhid) > -1) {
                        if (contenTxt.length - hfhid.length < 4) {
                            tipFun("内容不能少于3字~");
                            $("#content_txt").focus();
                            return false
                        }
                    } else {
                        if (contenTxt.length < 3) {
                            tipFun("内容不能少于3字~");
                            $("#content_txt").focus();
                            return false
                        }
                        $("#huifuser").val("")
                    }
                } else {
                    if (contenTxt.length < 3) {
                        tipFun("内容不能少于3字~");
                        $("#content_txt").focus();
                        return false
                    }
                }
                smAjax({
                    url: "/NewInfo/AddPingLun",
                    type: "post",
                    data: { content_txt: contenTxt, newid: $("#newid").val(), memoId: classID, huifuser: $("#huifuser").val() },
                    success: function (data) {
                        if (data != "") {
                            if (data == "0") {
                                tipFun("发表评论失败,请稍后再试~");
                            }
                            else if (data == "您输入的信息包含非法信息") {
                                tipFun(data);
                            }
                            else {
                                tipFun("发表评论成功~");
                                if (dpcon.html() != "<li>暂无评论!</li>") {
                                    dpcon.html(data + dpcon.html());
                                }
                                else {
                                    dpcon.html == "";
                                    dpcon.html(data);
                                }
                                $("#content_txt").val("");
                            }
                        }
                        else {
                            window.location.href = "/login/?reurl=" + window.location.href;
                        }
                    }
                })
            }
            else {
                window.location.href = "/login/?reurl=" + window.location.href;
            }
        }

        $(".zan").live("click", function () {
            var hid = $(this).attr("hid");
            if (!$(this).children().attr("class")) {
                $(".com_list dl b").remove()
                $(this).before("<b>+1</b>")
                $(this).siblings("b").animate({ top: "-20px", opacity: "0" }, 800)
                $(this).children().addClass("h").html(parseInt($(this).children().html()) + 1);
                $(this).siblings(".tynumb").addClass("h");
                //$.get("postsave.aspx", { id: hid })
            }
        })
        $(function () {
            if (GetCookie("m_font") == "big") {
                $("#font_set").attr("m_font", "big");
                fontChange();
            }
        })

        function fontChange() {
            var font = $("#font_set").attr("m_font");
            if (font == "big") {
                $("#content").css("font-size", "18px");
                $("#font_set").attr("m_font", "small");
                $("#font_set").html("A-");
                SetCookie("m_font", "big");
            } else if (font == 'small') {
                $("#content").css("font-size", "16px");
                $("#font_set").attr("m_font", "big");
                $("#font_set").html("A+");
                SetCookie("m_font", "small");
            }
        }

        //微信自定义分享声明
        wxJSAPI.Config({
            fx_url: window.location.href,
            fx_title: '全运会闭幕 宜昌收获4金占湖北一半',
            fx_memo: '第十二届全运会昨日在辽宁沈阳落下帷幕，宜昌22名运动员参加全...',
            fx_pic: '',
            fx_success: function () {
                tipFun("分享成功~");
            },
            fx_fail: function () {
                tipFun("分享失败~");
            }
        });
    </script> 
  <script type="text/javascript">
    $(function() {
        //顶部点击
        $(".show-all-list").click(function() {
            $(".all-list-mask").toggle();
            $(".show-all-listcon").slideToggle();
            $("div.tie_menu").slideUp();
            if (!$('body').hasClass('noslide')) {
                $('body').addClass('noslide');
            } else {
                $('body').removeClass('noslide');
            }
        });
        function closeList() {
            $(".show-all-listcon").slideUp();
            $(".all-list-mask").hide();
            if ($('body').hasClass('noslide')) $('body').removeClass('noslide');
        }
        $(".all-list-mask").click(function() {
            closeList();
        });
        $(".show-all-listcon").find("li").click(function() {
            closeList();
        });
    });
    //点击按钮，消息框弹出
    $("#btn").bind("click", function () {
        $("div.slide_wrap").addClass("show");
        $("div.slide_nav").html("<div style='width:78%;height:30px;color:#fff;text-align:center;position:absolute;top:50%;left:0;margin-top:-15px;'>正在努力加载~</div>").load("/Index/UserInfo/");
        if ($(".post-wrap").is(":visible")) {
            $(".post-wrap").hide();
            $(".quick-p").removeClass("on");
        }
    });
    //点击空白处，消息框隐藏
    $("div.slide_wrap").click(function (e) {
        if (e.target.className == "slide_wrap show") {
            $(this).removeClass("show");
        }
    });
</script> 
