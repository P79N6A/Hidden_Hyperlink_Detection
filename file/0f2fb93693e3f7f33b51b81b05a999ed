    (function () {
        var banJitong = document.getElementById('myBanJitong');
        var zuoYeXiTong = document.getElementById('myZuoYeXiTong');
        var piYueXiTong = document.getElementById('myPiYueXiTong');
        var dianZiKaoChang = document.getElementById('myDianZiKaoChang');
        var userType;
        var bindhref = function (hrefurl, type) {
            if (banJitong) {
                if (type == 2 || type == 1) {
                    type == 1 ? banJitong.setAttribute('href', hrefurl + 'classes') : banJitong.setAttribute('href', hrefurl + 'classhome');
                } else {
                    banJitong.setAttribute('href', '/login');
                }
            } else if (zuoYeXiTong) {
                type == 3 ? zuoYeXiTong.setAttribute('href', '/login') : zuoYeXiTong.setAttribute('href', hrefurl + 'homework');
            } else if (piYueXiTong) {
                type == 1 ? piYueXiTong.setAttribute('href', hrefurl + 'correcthomeWork') : piYueXiTong.setAttribute('href', '/login');
            } else if (dianZiKaoChang) {
                dianZiKaoChang.setAttribute('href', "#");
            }
        };
        
        userType = 3;
        
       var toolDom=document.getElementById('toolbarBox');
        if (userType === 1) {
            bindhref('/teacher/', userType);
        } else if (userType === 2) {
            bindhref('/student/', userType);
            toolDom.style.display = "none";
        } else {
            bindhref('/login', userType);
        }

    })();

