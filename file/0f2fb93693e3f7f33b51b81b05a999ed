        function moved() {
            $(".line").animate({ width: "+=282px", opacity: "0" }, 1500, function () {
                $(this).css({ left: "282px", opacity: "1" });
            });
            $(".line").animate({ left: "-1px", opacity: "0" }, 1500, function () {
                $(this).css({ opacity: "1", width: "1px" });
            });
        }

        var showVideo = function() {
            if (!$("#gotoPlay").is(":visible")) return false;
            if ($("#playingContainer").is(":visible")) {
                $("#playingContainer").slideUp(function() {
                    if ("False"=="False") {
                        LoadQcloudVideo(videoParam);
                    }
                });
            } else {
                $("#playingContainer").slideDown(function() {
                    if ("False"=="False") {
                        LoadQcloudVideo(videoParam);
                    }
                });
            }

        };

        var adjustPoint = function () {
            //删除高亮
            if ($(".answer .mousehover table").length > 0 && $(".answer .mousehover table").attr("bgcolor") == "highlighttext") {
                $(".answer .mousehover table").removeAttr("bgcolor");
            }
            //删除背景色BACKGROUND-COLOR: #c7edc7
            if ($(".answer p font").length > 0 && $(".answer p font").attr("style") == "BACKGROUND-COLOR: #c7edc7") {
                $(".answer p font").removeAttr("style");
            }
        }
