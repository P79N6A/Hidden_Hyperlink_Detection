        var aTag = List.getElementsByTagName('a');
        var userType;
        
        userType = 3;
        
        var hasurl = false;
        for (var i = 0, len = aTag.length; i < len; i++) {
            //if (window.location.href.indexOf('zujuan') > -1) {
