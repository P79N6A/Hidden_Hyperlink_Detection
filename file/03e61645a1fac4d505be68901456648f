function $(id) {
  if(document.getElementById) { return document.getElementById(id); }
  else if(document.all) { return document.all[id]; }
  else if(document.layers) { return document.layers[id]; }
  else { return false; }
}
function CheckForm()
{
    if ($("htmlUserName").value == "")
    {
        alert("请输入用户名");
        $("htmlUserName").focus();
        return false;
    }
    if ($("htmlPassword").value == "")
    {
        alert("请输入密码");
        $("htmlPassword").focus();
        return false;
    }
    $("myform").submit();
}
