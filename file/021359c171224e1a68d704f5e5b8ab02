$(function(){	
	$("#getcode").click(function(){
		$(this).attr("src",'/code/code.php?' + Math.random());
	});
	$("#chk").click(function(){
		var code = $("#code").val();
		var mailbox = $("#mailbox").val();
		var pnum = $("#pnum").val();
		var page_id = $("#page_id").val();
		var cmsg = $("#cmsg").val();
		$.post("/code/chk_code.php?",{code:code, mailbox:mailbox, page_id:page_id, cmsg:cmsg, pnum:pnum},function(msg){
			if(msg==1){
				report.close();
			}else{
				$("#error_alert").show();
			}
		});
	});
	
});
</script> 
