	// 刷新高度video iframe
    $( 'iframe' ).each( function() {
        // http://v.qq.com/iframe/player.html?vid=l0148owiang&width=500&height=375&auto=0
        var src = $( this ).attr( 'data-src' );
        $( this ).removeAttr( 'style' );
        var ow = src.match( /width=(\d+)/i )[1];
        var oh = src.match( /height=(\d+)/i )[1];
        var w = $('.article').width() - 30;
        var h = oh * w / ow; 
        $( this ).css( 'height', h);
        $(this).addClass('video_iframe');
        $(this).attr( 'src', src.replace('preview.html', 'player.html').replace('width=' + ow, 'width=' + w).replace('height=' + oh, 'height=' + h) );
    } );
