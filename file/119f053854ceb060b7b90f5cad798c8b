/*GET数据*/
function GetAjaxData(url,callback)
{
$.ajax({
type: 'GET',
url: url,
data: {},
dataType: 'json',
success: function(data){
if(typeof callback == 'function'){callback(data);}
},
error:function(data){/*alert("error"); */}  
});
}

function Get_category_list(data)
{	
if(data.list !="")
{
var html = "";
$.each(data.list,function(i,item){
html += "<li><a href='" + item.url + "'>" + item.title + "</a></li>";
});	
var node = $(html);
node.appendTo('#titlelist ul');

$("#loading").hide();

var page = data.p;
if(page < data.pagenum)
{
$("#category_more i").html(page);
$("#category_more").show();
}
}
}

function Get_category_pic_list(data)
{	
if(data.list !="")
{
var html = "";
$.each(data.list,function(i,item){
html += "<li><a href='" + item.url + "'><img class='con-img' src='" + item.thumb + "' data-src='" + item.thumb + "'><div><p>" + item.title + "</p><p class='summary'>" +item.note +" </p></div></a></li>";
});	
var node = $(html);
node.appendTo('#pic_tit_sum ul');


$("#loading_pic").hide();

var page = data.p;
if(page < data.pagenum)
{
$("#category_pic_more i").html(page);
$("#category_pic_more").show();
}
}
}

//cookie操作
GLOBAL.namespace("Cookie");
GLOBAL.Cookie={
    // 读取
    read : function(name){
        var cookieStr = "; "+document.cookie+"; ";
        var index = cookieStr.indexOf("; "+name+"=");
        if (index!=-1){
            var s = cookieStr.substring(index+name.length+3,cookieStr.length);
            return unescape(s.substring(0, s.indexOf("; ")));
        } else{
            return null;
        }
    },
    // 设置
    set : function(name,value,expires,domain){//expires 秒
        var expDays = expires*1000;
        var expDate = new Date();
        expDate.setTime(expDate.getTime()+expDays);
        var expString = expires ? "; expires="+expDate.toGMTString() : "";
        var pathString = "; path=/";
        if (domain){
            pathString = "; domain="+domain+"; path=/";
        }
        document.cookie = name + "=" + escape(value) + expString + pathString;
    },
    // 删除
    del : function(name){
        var exp = new Date(new Date().getTime()-1);
        var s=this.read(name);
        if(s!=null) {document.cookie= name +
        "="+s+";expires="+exp.toGMTString()+";path=/"};
    }
}

var KE = {};
KE.lang = { 
xiao : '12px',
zhong : '16px',
da : '20px',
chaoda : '24px'
};

$(document).ready(function() {
/*read cookie*/
var time_data = GLOBAL.Cookie.read('time');
var font_data = GLOBAL.Cookie.read('font');
if(time_data == "night")
{
night_css();
}

if(font_data !="")
{
$(".nr_cnt p").css("font-size",KE.lang[font_data]);
$("."+font_data).addClass("select").siblings().removeClass("select");
}

if(1 > 1)
{$("#yu_button").show();}

onclick_logo_menu();
onclick_setting();
onclick_night();
onclick_day();
onclick_font();
onclick_yu_button();
});

function onclick_logo_menu()
{
/*$(".logo_menu").click(
function(){$("#menuBox").show().removeClass("a-fadeoutT").addClass("a-fadeinT");},
function(){$("#menuBox").removeClass("a-fadeinT").addClass("a-fadeoutT");setTimeout('$("#menuBox").hide()',300)}

);*/
$(".logo_menu").click(function(){
var node = $("#menuBox").css("display");
if(node == "none")
{$("#menuBox").show().removeClass("a-fadeoutT").addClass("a-fadeinT");}
else
{$("#menuBox").removeClass("a-fadeinT").addClass("a-fadeoutT");setTimeout('$("#menuBox").hide()',300)}
});	
}
function onclick_setting()
{
var nodes=$("#setting");
var noder=$("#setting_con");
/*nodes.toggle(
function(){noder.show();nodes.addClass("more");},
function(){noder.hide();nodes.removeClass("more");}
);*/
nodes.click(function(){
if(noder.css("display") == "none")
{noder.show();nodes.addClass("more");}
else
{noder.hide();nodes.removeClass("more");}
});
}

function onclick_night()
{
$("#night").click(function(){
night_css();
GLOBAL.Cookie.set('time','night',7*24*60*60,'#'); //set cookie
});
}

function night_css()
{
$("body").css("background","#222426");//背景色
$(".nr_tit").css("color","#8A8D91");//标题color
$(".nr_ftit").css("border-bottom","1px #191914 solid");//下边框
$(".nr_cnt p").css("color","#8A8D91");//文章color
$("#setting_con").addClass("setting_con_n");//增加昼间css
$("#yu_button").addClass("yu_button");//余下全文按钮color
$("#rd_list ul li").addClass("related_li");  //相关新闻夜间模式li下边框颜色
$("#more_to_app").addClass("add_night");  //to-app夜间边框和字体颜色；
$("#pc_page").addClass("pc_page_night");  //to-app夜间边框和字体颜色；
}

function onclick_day()
{
$("#day").click(function(){
$("body").css("background","#fff");//背景色
$(".nr_tit").css("color","#333");//标题color
$(".nr_ftit").css("border-bottom","1px #D2D2D2 solid");//下边框
$(".nr_cnt p").css("color","#333");//文章color
$("#setting_con").removeClass("setting_con_n");//移除昼间css
$("#yu_button").removeClass("yu_button");//余下全文按钮color恢复
$("#rd_list ul li").removeClass("related_li");  //相关新闻li下边框颜色恢复
$("#more_to_app").removeClass("add_night"); ////to-app边框和字体颜色恢复；
$("#pc_page").removeClass("pc_page_night"); ////to-app边框和字体颜色恢复；

GLOBAL.Cookie.set('time','day',7*24*60*60,'#'); //set cookie
});
}

function onclick_font()
{
$("#font_switch div").click(function(){	
var this_class = $(this).attr('class');   
$(".nr_cnt p").css("font-size",KE.lang[this_class]);
$(this).addClass("select").siblings().removeClass("select");
GLOBAL.Cookie.set('font',this_class,7*24*60*60,'#'); //set cookie					
});
}


/*GET数据*/
function GetAjaxData(url,callback)
{
$.ajax({
type: 'GET',
url: url,
data: {},
dataType: 'json',
success: function(data){
if(typeof callback == 'function'){callback(data);}
},
error:function(data){/*alert("error"); */}  
});
}

function Get_content(data)
{	if(data.content !="")
{
var node = $(data.content);
node.appendTo('.nr_cnt');
node.find(".con-img").each(function(){
thumb_src($(this));
});

var time_data = GLOBAL.Cookie.read('time');
var font_data = GLOBAL.Cookie.read('font');

if(time_data == "night")
{
$(".nr_cnt p").css("color","#8A8D91");//文章color
}
if(font_data !="")
{
node.css("font-size",KE.lang[font_data]);
}

$("#loading").hide();

var page = data.p + 1;
if(page < data.pagesize)
{
$("#yu_button i").html(page);
$("#yu_button").show();
}
}
}

function getTodayDate()
{    
    var addtime_obj = new Date();
    var add_year = addtime_obj.getYear();
    add_year = add_year<1900?(1900+add_year):add_year;
    var add_mon = addtime_obj.getMonth()+1;
    if(add_mon<10) add_mon='0'+add_mon;
    var str = add_year+'-'+add_mon;
    return str;
}
//解析url地址
function parseURL(url)
{
    var a =  document.createElement('a');
    a.href = url;
    return {
        host: a.hostname,
        port: a.port,
        path: a.pathname.replace(/^([^\/])/,'/$1')
    };
}
//生成缩略图
function mk_timg(img_src)
{
    var t = this;
    var thumb_size = {width:320,height:240};
    var thumb_a = 0;
    if(arguments[1]){
        thumb_size = arguments[1];
    }
    
    if(arguments[2]){
        thumb_a = arguments[2];
    }
            
    var str = '';
    var src_a = parseURL(img_src);
    
    str = 'data/thumb/' + src_a.host;
            //alert(src_a.port);
    str += parseInt(src_a.port,10) ?'/'+src_a.port:'/80';
    
    //str += '/'+getTodayDate();
    var reg = /\/([\d]+)\//i;
    if(reg.test(src_a.path) && RegExp.$1.length == 8)
    {
        var date_str = RegExp.$1;
        str += '/'+date_str.substr(0,4)+'-'+date_str.substr(4,2);
    }else{
        str += '/'+getTodayDate();
    }
            
    var filename = src_a.path.replace(/\//g,',,');
    var pos = filename.lastIndexOf('.');
    filename = filename.substr(2,pos-2)+'((w-'+thumb_size.width+',h-'+thumb_size.height+',q-100,a-'+thumb_a+'))'+filename.substr(pos);
    str += '/'+filename;
    
    return str;
}


