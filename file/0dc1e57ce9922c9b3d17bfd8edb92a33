         <textarea wrap="soft" class="crayon-plain print-no" data-settings="dblclick" readonly="" style="-moz-tab-size:4; -o-tab-size:4; -webkit-tab-size:4; tab-size:4; font-size: 12px !important; line-height: 15px !important;">
&lt;h3&gt;&lt;?php
$admin_email = get_bloginfo('admin_email');
$str = &quot;SELECT COUNT(*) FROM $wpdb-&gt;comments WHERE comment_post_ID = $post-&gt;ID 
AND comment_approved = '1' AND comment_type = '' AND comment_author_email&quot;;
$count_t = $post-&gt;comment_count;
$count_v = $wpdb-&gt;get_var(&quot;$str != '$admin_email'&quot;);
$count_h = $wpdb-&gt;get_var(&quot;$str = '$admin_email'&quot;);
if($count_v &gt; $count_h){
	if($count_v - $count_h &gt;= 5){
		echo &quot;访客以 &quot;.$count_v.&quot;：&quot;.$count_h.&quot; 大幅领先博主&quot;;
	}else if($count_v - $count_h &lt; 5){
		echo &quot;访客以 &quot;.$count_v.&quot;：&quot;.$count_h.&quot; 暂时领先博主&quot;;
	}
}else if($count_v &lt; $count_h){
	if($count_h - $count_v &gt;= 5){
		echo &quot;博主以 &quot;.$count_h.&quot;：&quot;.$count_v.&quot; 大幅领先访客&quot;;
	}else if($count_h - $count_v &lt; 5){
		echo &quot;博主以 &quot;.$count_h.&quot;：&quot;.$count_v.&quot; 暂时领先访客&quot;;
	}
}else if($count_v==$count_h){
	if($count_t != 0){
		echo &quot;双方以 &quot;.$count_v, &quot;：&quot;.$count_h.&quot; 暂时持平&quot;;
	}
}
?&gt;&lt;/h3&gt;</textarea>
