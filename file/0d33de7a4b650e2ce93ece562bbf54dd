  <script type="text/javascript">

			$(function() {

				var sWidth = $("#hdp").width(); //获取焦点图的宽度（显示面积）

				//		var len = $("#hdp ul li").length; //获取焦点图个数

				var len = 3; //获取焦点图个数

				var index = 0;

				var picTimer;

				//以下代码添加数字按钮和按钮后的半透明条，还有上一页、下一页两按钮

				var btn = "<div class='btnBg'></div><div class='btn'>";

				for (var i = 0; i < len; i++) {

					btn += "<span></span>";

				}

				$("#hdp").append(btn);

				$("#hdp .btnBg").css("opacity", 0.5);

				//	$("#hdp .btnBg").css("opacity",0.5);

				//为小按钮添加鼠标滑入事件，以显示相应的内容

				$("#hdp .btn span").css("opacity", 0.4).mouseenter(function() {

					index = $("#hdp .btn span").index(this);

					showPics(index);

				}).eq(0).trigger("mouseenter");

				//本例为左右滚动，即所有li元素都是在同一排向左浮动，所以这里需要计算出外围ul元素的宽度

				$("#hdp ul").css("width", sWidth * (len));

				//鼠标滑上焦点图时停止自动播放，滑出时开始自动播放

				$("#hdp").hover(function() {

					clearInterval(picTimer);

				},

				function() {

					picTimer = setInterval(function() {

						showPics(index);

						index++;

						if (index == len) {

							index = 0;

						}

					},

					8000); //此4000代表自动播放的间隔，单位：毫秒

				}).trigger("mouseleave");

				//显示图片函数，根据接收的index值显示相应的内容

				function showPics(index) { //普通切换

					var nowLeft = -index * sWidth; //根据index值计算ul元素的left值

					$("#hdp ul").stop(true, false).animate({

						"left": nowLeft

					},

					300); //通过animate()调整ul元素滚动到计算出的position

					//$("#hdp .btn span").removeClass("on").eq(index).addClass("on"); //为当前的按钮切换到选中的效果

					$("#hdp .btn span").stop(true, false).animate({

						"opacity": "0.4"

					},

					300).eq(index).stop(true, false).animate({

						"opacity": "1"

					},

					300); //为当前的按钮切换到选中的效果

				}

				/////////////////////

				//$(".bmgj_ul li").css({ backgroundPositionY: "-67"});

				//$(".bmgj_ul li").find("div").hide();

				$(".bmgj_ul li,.sygj li").mousemove(function() {

					$(this).find("div").show();

				})

				.mouseout(function() {

					$(this).find("div").hide();

				});

				$("[gh='red'] a").wrapInner("<span></span>")

				.mousemove(function() {

					$(this).find("span").addClass("blue");

				})

				.mouseout(function() {

					$(this).find("span").removeClass("blue");

				});

				$(window).scroll(function() {

					if ($(this).scrollTop() != 0) {

						$('#toTop').fadeIn();

					}

					else {

						$('#toTop').fadeOut();

					}

				});

				$('#toTop').click(function() { //back to top

					$('body,html').animate({

						scrollTop: 0

					},

					800);

				});

				$("div[img='add'] img").before('<div class="img_sm" style="display:none;" gh="img_sm"></div>');

				$("div[img='add'] img").mousemove(function() {

					var w = $(this).width() - 20;

					//alert(w);

					var h = $(this).height() - 40;

					var alt = $(this).attr("alt");

					$("div[gh='img_sm']").hide();

					$(this).parent("a").find("div[gh='img_sm']").width(w).height(h).text(alt).show()

					.mouseout(function() {

						$(this).parent("a").find("div[gh='img_sm']").hide();

					})

				});

			});

				$(".car_ul li").mousemove(function() {

					$(this).find("div").show();

				})

				.mouseout(function() {

					$(this).find("div").hide();

				});

		</script> 
