        pic: "http://bbs.iyuce.com/images/pic-share.jpg",   //分享图片，默认使用logo

        presented:true,//'False'.toLowerCase()=='true',                                 //是否开启分享奖励
        refid: 0,                                                                           //分享关联id，例如帖子编号
        type: 'bar_share',                                                                     //分享类型，默认bar_share 帖子分享
        url: window.location.href,                                                                      //分享地址，默认当前页地址
        createby: '',                                   //当前用户编号，分享人编号

        isWx:'False'.toLowerCase()=='true',                                                 //是否微信
        isMobile:'True'.toLowerCase()=='true',                                         //是否移动端
        showType:'',                                 //显示类型，wxshare表示当前是pc微信分享扫描过来的
        code:'',                                             //分享编码，pc微信分享扫码分享的唯一吗

        guid:'2b225ee459e44db2a3a1e8688777a98f',                                                                                   //扫描分享的唯一码
        isLogin:'False'.toLowerCase()=="true"                                                        //用户是否登录
    };
    $(function(){
        //思路
        //1，生成分享code,url,title,des,pic
        //2，如果是pc浏览器，生成二维码图片，附带showtype=wxshare和code
        //2.1，判断参数有showtype和code且是微信浏览器，调用jssdk调用微信api生成分享内容
        //2.2，没有showtype和code或者非微信浏览器，显示分享微信按钮
        //3，用户点击微信分享按钮，显示微信分享二维码

        if(window._share.isLogin
            &&window._share.showType!=""
            ||window._share.code!=""){
            $('.iup-share-tip .logged').show();
        }else{
            $('.iup-share-tip .login').show();
        }
        //不是微信二维码分享弹层都隐藏
        if(window._share.isWx
            &&window._share.presented
            &&window._share.showType=='wxshare'&&window._share.code!=''){
            $('.iup-share-tip').show();
        }
        //微信分享提示弹层关闭按钮
        $('.iup-share-tip')
            .appendTo('body')
            .find('.btn-close')
            .bind('click',function(){
                $('.iup-share-tip').hide();
            });
        //微信分享
        $('.iup_share_wx').bind('click',function(){
            //微信点击直接显示右上角分享提示
            if(window._share.isWx
                &&window._share.presented){
                $('.iup-share-tip').show();
                return;
            }
            //非微信浏览器提示扫描二维码弹层
            var $this=$(this);
            if($this.hasClass('disabled')) return;
            $this.addClass('disabled');
            $('.iup-share-wx-pop').show();
        });
        //点击二维码隐藏二维码
        $('.iup-share-wx-pop').bind('click',function(){
            $(this).hide();
            $('.iup_share_wx').removeClass('disabled');
        });
        //生成微信分享二维码,移除参数中不必要参数
        window._share.code = window._share.createby+"_"+window._share.guid;
        var loc=delQueStr(window.location.href,"showtype|code");
        loc=changeURLPar(loc,"showtype","wxshare");
        loc=changeURLPar(loc,"code",window._share.code);

        var url='http://api.iyuce.com/open/qr?url='+encodeURIComponent(loc);
        $('.iup-share-wx-pop img').attr('src',url);
    });

    //微信分享
    if(window._share.isWx){
        //_WXShare( appId,timestamp,nonceStr,signature,img, width, height, title, desc, url,callback)
        if(typeof _WXShare!='undefined'){
            debugger;
            //开启奖励
            if(window._share.presented){
                //1，直接是微信
                if(window._share.showType==""){
                    window._share.code = window._share.createby+"_"+window._share.guid;
                }
                //2，pc端扫描过来微信分享
                window._share.url =window._share.ret_url
                    + '?type=' + window._share.type
                    + "&code=" + window._share.code;

                _WXShare(
                    window._share.config.appid,
                    window._share.config.timestamp,
                    window._share.config.nonce_str,
                    window._share.config.signature,
                    window._share.pic,
                    "300","300",
                    window._share.title,
                    window._share.des,
                    window._share.url
                );
            }
                //未开启分享奖励
            else{
                _WXShare(
                    window._share.config.appid,
                    window._share.config.timestamp,
                    window._share.config.nonce_str,
                    window._share.config.signature,
                    window._share.pic,
                    "300","300",
                    window._share.title,
                    window._share.des,
                    window.location.href
                );
            }
        }
    }
    //开启分享奖励和当前有登录，才会生成分享记录
    if (window._share.presented && window._share.createby != '')
    {
        window._share.code = window._share.createby+"_"+window._share.guid;
        window._share.url =window._share.ret_url
            + '?type=' + window._share.type
            + "&code=" + window._share.code;
        window._share.redirect = window.location.href;
        //申请分享记录
        $.ajax({
            url:window._share.build_url+"?type=" + window._share.type + "&code=" + window._share.code,
            type: "POST",
            data: window._share,
            success: function (json) {
                //没有申请成功，隐藏分享奖励文案
                if(json.Success){
                    $('#bds_share_tip').show();
                }else{
                    $('#bds_share_tip').hide();
                }
            }
        });
    }
    //配置百度分享
    window._bd_share_config = {
        common:{
            bdUrl:window._share.url,
            bdMiniList:[
                "mshare","qzone","tsina","bdysc","renren","tqq","bdxc","kaixin001",
                "tqf","tieba","douban","bdhome","sqq","thx","ibaidu","meilishuo",
                "mogujie","diandian","huaban","duitang","hx","fx","youdao","sdo",
                "qingbiji","people","xinhua","mail","isohu","yaolan","wealink",
                "ty","iguba","fbook","twi","linkedin","h163","evernotecn","copy",
                "print"
            ],
            bdPic:"",
            bdStyle:"1"
        },
        //common: {
        //    bdText: '自定义分享内容',
        //    bdDesc: '自定义分享摘要',
        //    bdUrl: '自定义分享url地址',
        //    bdPic: '自定义分享图片'
        //},
        share: [{
            "bdSize": 16
        }],
        selectShare: [{
            "bdselectMiniList": ['qzone', 'tsina', 'tqq', 'renren', 'youdao']
        }]
    }
    //是否设置侧边栏分享
    if (window._bd_share_slide) {
        window._bd_share_config.slide = [{
            bdImg: 0,
            bdPos: "right",
            bdTop: 100
        }];
    }
    //是否自定义分享标题
    if(window._share.title.length>0){
        window._bd_share_config.common.bdText=window._share.title;
    }
    //是否自定义分享摘要
    if(window._share.des.length>0){
        window._bd_share_config.common.bdDesc=window._share.des;
    }
    var bds_url = 'http://bdimg.share.baidu.com/static/api/js/share.js?cdnversion=' + ~(-new Date() / 36e5);
    with (document) 0[(getElementsByTagName('head')[0] || body).appendChild(createElement('script')).src = bds_url];
</script> 
  <script language="javascript" type="text/javascript">
    $(document).ready(function () {
        //删除的方法
        $("a[id^='post-delete-']").click(function (e) {
            e.preventDefault();

            $linkA = $(this);
            art.dialog.confirm('您确认要删除吗？', function () {
                $.post($linkA.attr("href"), function (data) {
                    if (data.MessageType == -1) {
                        art.dialog.tips(data.MessageContent, 1.5, data.MessageType);
                    } else {
                        $linkA.parents("li").first().slideUp("fast").remove();
                        $.PointMessage("/channel/userlastestrecord");
                    }
                });
            });

            return false;
        });
    });
</script> 
  <script type="text/javascript" language="javascript">
                           //评论提交成功的回调函数
                           function postOnSuccessCallBack(data, status, webStatus, form) {
                               if (data.auditStatus) { art.dialog.tips(data.auditStatus.MessageContent, 2, data.auditStatus.MessageType); }

                               $.get("/bar/_barpost" + "?postId=" + data.PostId, function (data) {
                                   $("ul[id='" + form.attr("ulfor") + "']:last").append(data);
                                   form.find("[id^='subjectCount']").html("0/");
                                   form.find("textarea:first").focusEnd();
                                   if ($("#" + form.attr("ulfor")).next().is(".tn-no-data")) {
                                       $("#" + form.attr("ulfor")).next().remove();
                                   }
                               });
                               $.PointMessage("/channel/userlastestrecord");
                           }
    </script> 
  <script type="text/javascript" language="javascript">
                       $(document).ready(function () {

                           $("#EditPostLink").click(function(e){
                               e.preventDefault();
                               $("<form Method='GET' action='"
                                   +$(this).attr("href")
                                   +"'><input name='threadId' value='"
                                   +3370
                +"'><textarea name='MultilineBody'>"
                +$("#quit-comment").val()
                +"</textarea></form>").hide().appendTo("body").submit();
                           });

                           //快捷回复按钮
                           $("a#btn-quit-comment").click(function (e) {
                               window.location.href = $(this).attr("href");
                               $("#quit-comment").css("background-color","#FFFBDE");
                               setTimeout(function(){ $("#quit-comment").removeAttr("style") },1000);
                               $("#quit-comment").click().focusEnd();
                               return false;
                           });

                           //一级快速回复的截字
                           $("#quit-comment").GetTextCount('subjectCount-comment-textCount', 5000, true, true);

                           //一级回复的水印
                           $("#quit-comment").watermark('请输入回复');

                           //移动标签的点击
                           $("a[id^='MoveThread_Category_']").live("click", function (e) {
                               e.preventDefault();
                               $link = $(this);
                               $.get($link.attr("href"), function (data) {
                                   $("div#div_MoveThread").replaceWith(data);
                               });
                           });

                           //评分的内容
                           //        $.get("/bar/_listbarratings?threadid=3370",function(data){
                           //            $("div#_BarRating_Action").before(data);
                           //        });

                           //三级回复的脚本
                           $("a[id^='three-level-post-']").live('click', function (e) {
                               $link = $(this);
                               $textarea = $(this).parents(".tn-replies").find("textarea");
                               $textarea.val("@" + $link.attr("foruser") + " " + $textarea.val().replace(/@[^' ']*? /g, ""));
                               $textarea.click().focusEnd();
                               e.stopImmediatePropagation();
                           });

                           //模式框显示
                           $("a[id^='art_dialog_']").click(function () {
                               $("#admin-set").hide();
                               $link = $(this);
                               var dialog = art.dialog({ id: "tunynet-dialog", title: false });
                               $.get($link.attr("link"), function (data) {
                                   dialog.content(data);
                               });
                           });

                           //加精/取消加精/取消置顶的操作
                           $("a[id^='Set_Item_']").click(function () {
                               $("#admin-set").hide();
                               $link = $(this);
                               $.ajax({
                                   type: "POST",
                                   url: $link.attr("link"),
                                   success: function (data) {
                                       window.location.href = "#";
                                       window.location.reload();
                                   }
                               });
                           });

                           //删除的操作
                           $("a#deleteThread").click(function () {
                               $("#admin-set").hide();
                               $link = $(this);
                               art.dialog.confirm('您确认要删除吗？', function () {
                                   $.ajax({
                                       type: "POST",
                                       url: $link.attr("link"),
                                       success: function (data) {
                                           if (data.MessageType == -1) {
                                               alert(data.MessageContent, function () { window.location.href = "/bar/s-1323165310601-1"; });
                                           } else {
                                               window.location.href = "/bar/s-1323165310601-1";                                               
                                           }
                                       },
                                       error: function (data) {
                                           data = $.parseJSON(data.responseText);
                                           alert(data.MessageContent);
                                       }
                                   });
                               });
                           });

                           //点击倒序看帖，仅看楼主，全部的时候
                           $("a[id^='barpost-Filter-']").click(function (e) {
                               e.preventDefault();
                               $(this).parents(".tn-title").children().removeClass("tn-selected");
                               $(this).parent().addClass("tn-selected");
                               $("#posts-paging-postParentId-0").replaceWith("<div id=\"posts-paging-postParentId-0\"><div class=\"tn-loading\"></div><div>");
                               $.get($(this).attr("href"), function (data) {
                                   $("#posts-paging-postParentId-0").replaceWith(data);
                               });
                           });

                           //点击回帖的回复的时候
                           $("a[id^='barpost-id']").live("click", function (e) {
                               e.preventDefault();
                               var $linkA = $(this);
                               var $tnicon = $(this).find(".tn-icon");
                               $tnicon.toggleClass("tn-smallicon-triangle-down");
                               $tnicon.toggleClass("tn-smallicon-triangle-up");
                               $parent = $(this).parents("li");
                               $replies = $parent.find(".tn-replies")
                               if (!$replies.children().length) {
                                   $.get($linkA.attr("href"), function (data) {
                                       $replies.html(data);
                                   });
                               } else {
                                   $replies.slideToggle("fast");
                               }
                           });
                       });

                       //评论提交失败的回调函数
                       function postOnErrorCallBack(data) {
                           if (!data.MessageContent) {
                               data = $.parseJSON(data);
                           }
                           alert(data.MessageContent);
                       }
</script> 
