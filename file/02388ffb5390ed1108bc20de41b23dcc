  <script type="text/javascript">
    var value = "";

    $(document).ready(function () {
        $("#compareBox").show();


        $("#showGood").click(function () {
            $.ajax({
                //解析从后台返回的json数据
                url: "/special/newsView?type=good&id=" + $("#newsId").val(),
                type: "post",
                dataType: "text",
                success: function (data) {
                    $("#goodNums").html(data);
                }
            });
        });

        $("#showBad").click(function () {
            $.ajax({
                //解析从后台返回的json数据
                url: "/special/newsView?type=bad&id=" + $("#newsId").val(),
                type: "post",
                dataType: "text",
                success: function (data) {
                    $("#badNums").html(data);
                }
            });
        });
    });






</script> 
