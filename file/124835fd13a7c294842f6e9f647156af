    }
    function showMenuTop(cid){
        if(cid>0){
            $('.menu_top').each(function(){
                var mycid=$(this).attr('data-cid');
                if(cid==mycid){
                    if($(this).hasClass('information')){
                        $(this).addClass('information-1');
                    }
                    if($(this).hasClass('Competition')){
                        $(this).addClass('Competition-1');
                    }
                    if($(this).hasClass('data')){
                        $(this).addClass('data-1');
                    }
                    if($(this).hasClass('strategy')){
                        $(this).addClass('strategy-1');
                    }
                    $(this).addClass('menu-bg');
                }else{
                    if($(this).hasClass('information')){
                        $(this).removeClass('information-1');
                    }
                    if($(this).hasClass('Competition')){
                        $(this).removeClass('Competition-1');
                    }
                    if($(this).hasClass('data')){
                        $(this).removeClass('data-1');
                    }
                    if($(this).hasClass('strategy')){
                        $(this).removeClass('strategy-1');
                    }
                    $(this).removeClass('menu-bg');
                }
            })
        }
    }
    function showArtClass(cid){
        //alert(cid);
        if(cid>0){
            $('.art_class_group').each(function(){
                var mycid=$(this).attr('data-cid');
                if(mycid==cid){
                    if($('#menuTop'+cid).length>0){
                        showMenuTop(cid);
                    }
                    $(this).removeClass('hidden');
                    var parent=$(this).attr('data-parent');
                    if(parent>0){
                        showArtClass(parent);
                    }
                }
            })
        }
    }
    function activeArtClass(cid){
        //alert(cid);
        if(cid>0){
            if($('#menuTop'+cid).length>0){
                showArtClass(cid);
            }else{
                $('.cid-link').each(function(){
                    var mycid=$(this).attr('data-cid');
                    if(mycid==cid){
                        $(this).addClass('active');
                        var parent=$(this).attr('data-parent');
                        if(parent>0){
                            activeArtClass(parent);
                        }
                    }
                })
                $('.art_class_group').each(function(){
                    var mycid=$(this).attr('data-cid');
                    if(mycid==cid){
                        if($('#menuTop'+cid).length>0){
                            showMenuTop(cid);
                        }
                        $(this).removeClass('hidden');
                    }
                })
            }
        }
    }
    activeArtClass("34");
</script> 
