        }
    }
}
function getCode(id1,id2){
    //console.log(codeSend);
    if(codeSend==0){
        var user=$('#'+id1).val();
        if(user==''||user==null||user==undefined){
            showMsg('请填写手机','提示');
            return false;
        }
        var reg = /^(13[0-9]|14[0-9]|15[0-9]|16[0-9]|17[0-9]|18[0-9])\d{8}$/i;
        if(!reg.test(user)) {
              showMsg('手机号码有误','提示');
        }
        var url=basepath+"index.php?m=Home&c=Ajax&fid=1&a="+id2+"&tel="+user;
        $.ajax({
            type: "POST", 
            url: url, 
            dataType: 'json',
            beforeSend:function(){
                blockUI();
            },
            complete:function(){
                unblockUI();
            },
            success: function callBack(data){
            if(data){
                if(data.msg){
                    if(data.msg_list){
                        var rowCount = data.msg_list.length;
                        if(rowCount>0){
                            var title=data.msg;
                            var msg_list='';
                            for (var i = 0; i < rowCount; i++) {
                              msg_list+=data.msg_list[i].msg+"<br />";
                            }
                        }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;  
                        }
                    }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;
                    }
                }
                if(data.status=='success'){
                    codeSend=1;
                    var getcodeBtn=$('#'+id2);
                    var time=60;
                    function timeCountDown(){
                        if(time==0){
                            clearInterval(timer);
                            codeSend=0;
                            getcodeBtn.text('获取验证码');
                            getcodeBtn.removeClass('getcode-2');
                            getcodeBtn.addClass('getcode-1');
                        }else{
                            if(!getcodeBtn.hasClass('getcode-2')){
                                getcodeBtn.addClass('getcode-2');
                                getcodeBtn.removeClass('getcode-1');
                            }
                            getcodeBtn.text('正在发送('+time+')');
                            time--;
                        }
                    }
                    var timer = setInterval(timeCountDown,1000);
                }else{
                    showMsg(msg_list,title);
                }
            }else{
                    showMsg(js_lang_no_back,js_lang_error);
            }   
        },
            error: function () {  
                showMsg(js_lang_ajax_error,js_lang_error);  
            }    
        });
    }else{
        showMsg('验证码已发送，麻烦查收','提示');
    }
}
