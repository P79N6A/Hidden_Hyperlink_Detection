  <script language="javascript">
    var reply_submit=0;
    function refreshAdd1(){
        $.getJSON('/Home/Ajax/getRole/fid/1.html', function(data){
            if(data.status=='success'){
                $('#role_id_b').attr('data-role',data.value.role_id);
                $('#roleInfo').html('<img src="'+data.value.avatar_url+'" alt="" style="width:45px;height: 45px;">');
                $('#roleInfoName').html(data.value.user_name);
            }
        });
        if(reply_submit==1){
            addReply(1);
        }
    }
    function unneedRole1(){
        $('#callModal1').modal('hide');
        addReply(1);
    }
    function needRole1(){
        var content=UE.getEditor('addReplyContent').getContent();
        $.ajax({
            url:'/Home/Ajax/saveReply/fid/1.html',
            data:{content:content},
            dataType:'json',
            method:'post'
        })

        $('#callModal1').modal('hide');
        reply_submit=1;
        showBand1();
    }
    function showBand1(){
        $('#myModal').modal('toggle').load("Array?reply=1");
    }
    function delPosts(pid){
        if(loginCheckOnly()==true){
            layer.confirm('确认删除该帖子吗？', {
                btn: ['是的','再想想'] //按钮
            }, function(index){
                var url=basepath+"index.php?m=Home&c=Ajax&a=delPosts&fid=1&pid="+pid;
                ajaxUrlHtml(url,'',3);
                layer.close(index);
            }, function(index){
                layer.close(index);
            });
        }
    }
    function delReply(rid){
        if(loginCheckOnly()==true){
            layer.confirm('确认删除该回复吗？', {
                btn: ['是的','再想想'] //按钮
            }, function(index){
                var url=basepath+"index.php?m=Home&c=Ajax&a=delReply&fid=1&rid="+rid;
                ajaxUrlHtml(url,'',3);
                layer.close(index);
            }, function(index){
                layer.close(index);
            });
        }
    }
    function addReply(type){
        if(loginCheckOnly()==true){
            var role_id=$('#role_id_b').attr('data-role');
            if(role_id>0){
            }else if(type!=1){
                $('#callModal1').modal('show');
                return false;
            }
            var content=UE.getEditor('addReplyContent').getContent();
            if(content==''||content==null||content==undefined){
                showMsg('请填写内容','提示');
                return false;
            }
            if($('#anonymity').hasClass('checkbg')){
                var anonymity=1;
            }else{
                var anonymity=0;
            }
            var url=basepath+"index.php?m=Home&c=Ajax&a=addReply&fid=1";
            $.ajax({
                type: "POST",
                url: url,
                data: {content:content,pid:pid,anonymity:anonymity},
                dataType: 'json',
                beforeSend:function(){
                    blockUI();
                },
                complete:function(){
                    unblockUI();
                },
                success: function callBack(data){
                    if(data){
                        if(data.msg){
                            if(data.msg_list){
                                var rowCount = data.msg_list.length;
                                if(rowCount>0){
                                    var title=data.msg;
                                    var msg_list='';
                                    for (var i = 0; i < rowCount; i++) {
                                        msg_list+=data.msg_list[i].msg+"<br />";
                                    }
                                }else{
                                    var title=js_lang_tipmsg_tit;
                                    var msg_list=data.msg;
                                }
                            }else{
                                var title=js_lang_tipmsg_tit;
                                var msg_list=data.msg;
                            }
                        }
                        if(data.status=='success'){
                            blockUI();
                            if(data.value.im!=''){
                                iframeUrl(data.value.im);
                            }
                            setTimeout(function(){
                                location.reload();
                            },1000);
                        }else{
                            showMsg(msg_list,title);
                        }
                    }else{
                        showMsg(js_lang_no_back,js_lang_error);
                    }
                },
                error: function () {
                    showMsg(js_lang_ajax_error,js_lang_error);
                }
            });
        }
    }
    if(user_id>0){
        UE.getEditor('addReplyContent',{
            toolbars:[['link','simpleupload','drafts','emotion']],
            maximumWords:5000,
            //关闭字数统计
            wordCount:false,
            //关闭elementPath
            elementPathEnabled:false,
            //默认的编辑区域高度
            initialFrameHeight:100,
