  <script language="javascript">
var post_submit=0;
function refreshAdd(){
     $.getJSON('/Home/Ajax/getRole/fid/1.html', function(data){
        if(data.status=='success'){
            $('#role_id_b').attr('data-role',data.value.role_id);
            $('#roleInfo').html('<img src="'+data.value.avatar_url+'" alt=""/><span class="name">'+data.value.user_name+'</span>');
        }
    });
    if(post_submit==1){
        addPosts(1);
    }
}
function unneedRole(){
    $('#callModal').modal('hide');
    addPosts(1);
}
function needRole(){
    var subject=$('#addPostsSubject').val();
    var content=$('#addPostsContent1').val();
    $.ajax({
        url:'/Home/Ajax/savePost/fid/1.html',
        data:{subject:subject,content:content},
        dataType:'json',
        method:'post'
    })

    $('#callModal').modal('hide');
    post_submit=1;
    showBand();
}
function showBand(){
    if(loginCheckOnly()==true){
         $('#myModal').modal('toggle').load("/User/Index/banRole/fid/1.html");
         $('div.modal-backdrop:last').css({
            "z-index":20000
         });
    }
}
function showRz(id){
      $('#myModal').modal('toggle');
}
var codeSend=0;
    $(function(){
//轮播
        var mySwiper = new Swiper('#swiper-container1',{
            watchSlidesProgress : true,
            watchSlidesVisibility : true,
            preventClicks : false,
            slidesPerView :1,
            spaceBetween: 0,
            prevButton:'.arrowleft',
            nextButton:'.arrowright'
        });
        $(".game-change").click(function(){
            $(".swiper-slide").removeAttr("style");
            $(".swiper-slide").css({"width":"100%"});
            
            $(".shade").slideToggle();
        });
        $(".game-change").click();
        setTimeout(function(){
            $(".shade").css("visibility","visible");
        },500);

//select2初始化
        $(".KF,.gm,.qf").select2();
        $(".select2-container").removeAttr("style");

//记住密码的勾选
        $("body #loginModal .check").click(function(){
            $(this).toggleClass("checkbg")
        });

        $('#anonymity').click(function(){
            $(this).toggleClass("checkbg");
        });
        $('#onlyadmin').click(function(){
            $(this).toggleClass("checkbg");
        });

        //图片放大
        $("body .content .col-xs-8 .topic p img.block").click(function(){
            if($(this).closest("div.pull-left").find("div.showimg").length>0){
                return ;
            }
            var str="<div class='showimg'><img src="+$(this).attr("src")+"></div>"
            $(this).closest("div.pull-left").append(str);
            $(this).css("display","none").siblings("img").css("display","none");
            $("body .content .col-xs-8 .topic .showimg>img").click(function(){
                $(this).closest("div.pull-left").find(".imglimit>img.block:hidden").css("display","inline-block");
                $(this).closest("div.showimg").remove();
            });
        });
        
    });
     $(function(){
        $('.date-type-name').each(function(){
            var type=$(this).attr('date-type');
            if(type==0){
                $(this).addClass('sign0');
                $(this).html('交流<b class="signrignt0"></b>');
            }
            if(type==1){
                $(this).addClass('sign2');
                $(this).html('提问<b class="signrignt2"></b>');
            }
            if(type==2){
                $(this).addClass('sign1');
                $(this).html('官方<b class="signrignt1"></b>');
            }
        });  
        if(user_id>0){
            if($('#addPostsContent1').length>0){
                UE.getEditor('addPostsContent1',{
                    toolbars:[['drafts']],
                    maximumWords:10000,
                    //关闭字数统计
                    wordCount:false,
                    //关闭elementPath
                    elementPathEnabled:false,
                    autoHeightEnabled:false,
                    //默认的编辑区域高度
                    initialFrameHeight:250,
                    zIndex:19999,
                    serverUrl:'/Home/Ajax/ueditor.html'
                });
            }
        }
         $('#roleCccAcc').click(function(){
             var roleBalance = $('#roleBalance').val(),roleId = $('#yRoleId').val();
             if(!!roleBalance && roleId>0){
                 $.getJSON('/User/Index/roleAcc/fid/1','banlance='+roleBalance+'&roleId='+roleId,function(res){
                     if(res.success){
                         $('#myModal').modal('hide');
                         layer.msg(res.msg);
                         location.reload();
                         
                     }else{
                         layer.msg(res.msg);
                     }
                 });
             }
         })
    });
</script> 
  <script type="text/javascript">
function hideshow(id1,id2){
    $('#'+id1).modal('hide');
    $('#'+id2).modal('show');
}
function getForget(){
    var user=$('#forgetPhone').val();
    var password=$('#forgetPwd').val();
    var writecode=$('#writecode1').val();
    var confirmpwd=$('#confirm-pwd1').val();
    if(user==''||user==null||user==undefined){
        showMsg('请填写手机','提示');
        return false;
    }
    var reg = /^0?1[3|5|6|7|8][0-9]\d{8}$/;
    if(!reg.test(user)) {
          showMsg('手机号码有误','提示');
    }
    if(password==''||password==null||password==undefined){
        showMsg('请填写密码','提示');
        return false;
    }
    if(writecode==''||writecode==null||writecode==undefined){
        showMsg('请填写验证码','提示');
        return false;
    }
    if(confirmpwd==''||confirmpwd==null||confirmpwd==undefined){
        showMsg('请填写确认密码','提示');
        return false;
    }
    if(password!=confirmpwd){
        showMsg('2次输入密码不相同','提示');
        return false;
    }
    var url=basepath+"index.php?m=Home&c=Ajax&a=forget&fid=1";
    $.ajax({
        type: "POST", 
        url: url, 
        data: {user:user,password:password,writecode:writecode,confirmpwd:confirmpwd}, 
        dataType: 'json',
        beforeSend:function(){
            blockUI();
        },
        complete:function(){
            unblockUI();
        },
        success: function callBack(data){
        if(data){
            if(data.msg){
                if(data.msg_list){
                    var rowCount = data.msg_list.length;
                    if(rowCount>0){
                        var title=data.msg;
                        var msg_list='';
                        for (var i = 0; i < rowCount; i++) {
                          msg_list+=data.msg_list[i].msg+"<br />";
                        }
                    }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;  
                    }
                }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;
                }
            }
            if(data.status=='success'){
                showMsg(msg_list,title);
                //location.reload();
            }else{
                showMsg(msg_list,title);
            }
        }else{
                showMsg(js_lang_no_back,js_lang_error);
        }   
    },
        error: function () {  
            showMsg(js_lang_ajax_error,js_lang_error);  
        }    
    });
}
function getReg(){
