    <script>
(function(){
$(window).bind('scroll',function(){
if($('body').scrollTop() > PHeight){
$('.uigotop').css('display','block') ;
}else if($('.uigotop').css('display')){
$('.uigotop').css('display','') ;
}
}) ;

$('.uigotop div').bind('click',function(){
$('body').animate( { scrollTop: 0 } ) ;
return false ;
}) ;
})() ;
</script> 
