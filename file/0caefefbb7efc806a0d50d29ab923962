			            data = JSON.parse(data);
			            if(data['trade_state'] == "SUCCESS"){
			                alert('支付成功！');
			                $('#Y_pay').hide();
			                $('#Y_erma').hide();
			                //window.location=window.location;
			            }else{
			            	if(pay_receipt){
			            		setTimeout(function(){pay_check(hash)},3000);
			            	}
			            }
			        });
