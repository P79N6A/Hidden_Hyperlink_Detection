    <script>

        var pathname = window.location.pathname.split('/');
        var area_code = pathname[1] ? pathname[1] : '';

        $(function () {


            //事件监听
            $('#name').focusout(function () {
                verification_name();
            });

            $('#phone').focusout(function () {
                verification_phone();
            });

            $('#money').focusout(function () {
                verification_money();
            });

            $('#remark').focusout(function () {
                verification_remark();
            });

            $('#submit').click(function () {

                $(this).val('正在提交...');
                $(this).addClass('button_waiting');

                var phone = trim($('#phone').val());
                var name = trim($('#name').val());
                var money = trim($('#money').val());
                var code = trim($('#verification_code').val());
                var remark = trim($('#remark').val());

                var data = {
                    phone: phone,
                    name: name,
                    money: money,
                    code: code,
                    remark: remark,
                    area_code: area_code
                };

                submit_order(data, function (data) {

                    if (!data) {
                        data.status = '';
                    }

                    if (data.status == 'SUCCESS') {

                        window.location.href = '/pay/done/order_code/' + data.order_code + '/';

                        //$.standard_post('pay/done/', {order_id: data.id, direct_trade_create_req: 1});

                        return;
                    }

                    switch (data.status) {
                        case 'CODE_ERROR':
                            alert('验证码不正确');
                            break;
                        case 'PHONE_ERROR':
                            alert('手机号不正确');
                            break;

                        case 'NAME_ERROR':
                            alert('姓名不正确');
                            break;

                        case 'REMARK_ERROR':
                            alert('课程备注不正确');
                            break;

                        case 'MONEY_ERROR':
                            alert('金额不正确');
                            break;
                        default:
                            alert('订单提交失败，请重试!');
                    }

                    get_verification_code();
                    hide_popups();
                });

            });

            get_verification_code();

            $('#verification_code_img').click(function () {
                get_verification_code();
            });

            $(".pay_tc_t span,.pay_qx").click(function () {
                hide_popups();
            });

            function hide_popups() {
                $('#submit').val('确定').removeClass('button_waiting');

                $(".pay_tc").hide();
                $(".pay_bg").hide();
            }

            $("#sure").click(function () {

                $('#submit').val('确定').removeClass('button_waiting');

                var qualify_name = verification_name();
                var qualify_phone = verification_phone();
                var qualify_money = verification_money();
                var qualify_remark = verification_remark();
                var qualify_code = verification_code();

                if (!qualify_name || !qualify_phone || !qualify_money || !qualify_remark || !qualify_code) {
                    return;
                }

                var name = $('#name').val();
                var phone = $('#phone').val();
                var money = $('#money').val();

                $('#overview_name').html(name);
                $('#overview_phone').html(phone);
                $('#overview_money').html(money + '元');

                $(".pay_tc").show();
                $(".pay_bg").show();
            });


            //信息验证
            function verification_name() {

                var regex_name = /^[\u4e00-\u9fa5]{2,10}$/; //验证中文的正则

                var name = $('#name').val();

                name = trim(name);

                var qualify = regex_name.test(name);

                var notice_contents = !qualify ? '请填写正确的姓名' : '';

                $('#notice_name').html(notice_contents);

                return qualify;
            }

            function verification_phone() {

                var regex_phone = /^1\d{10}$/; //验证手机号正则

                var phone = $('#phone').val();

                phone = trim(phone);

                var qualify = regex_phone.test(phone);

                var notice_contents = !qualify ? '请填写正确的手机号' : '';

                $('#notice_phone').html(notice_contents);

                return qualify;
            }

            function verification_money() {

                var money = $('#money').val();

                money = get_numeric(money);

                var notice_contents = '';

                var qualify = true;

                if (money >= 1000000) {
                    notice_contents = '支持最大金额为999999.99元';
                    qualify = false;
                } else if (money <= 0) {
                    notice_contents = '请填写正确的金额';
                    qualify = false;
                } else {
                    var money_arr = money.toString().split('.');

                    if (money_arr.length == 2 && money_arr[1].length > 2) {
                        notice_contents = '只支持小数点两位';
                        qualify = false;
                    }
                }

                $('#notice_money').html(notice_contents);

                return qualify;

            }

            function verification_remark() {

                var content = $('#remark').val();
                content = trim(content);

                var notice_contents = '';

                var qualify = true;

                if (content.length > 100) {
                    notice_contents = '最多支持100字';
                    qualify = false;
                } else if (!content) {
                    notice_contents = '不能为空';
                    qualify = false;

                }

                $('#notice_remark').html(notice_contents);

                return qualify;
            }

            function verification_code() {

                var code = $('#verification_code').val();

                code = trim(code);

                var regex_code = /^\d{5}$/;

                var notice_contents = '';

                var qualify = true;

                if (!code) {
                    notice_contents = '请输入验证码';
                    qualify = false;
                } else if (!regex_code.test(code)) {
                    notice_contents = '验证码错误';
                    qualify = false;
                }

                $('#notice_code').html(notice_contents);

                return qualify;

            }

            /**
             * 去除字符串两边空格
             *
             * @param {string} str
             *
             * @return {*}
             */
            function trim(str) {
                return str.replace(/(^\s*)|(\s*$)/g, "");
            }

            /**
             * 获取数字
             *
             * @param val
             * @return {*}
             */
            function get_numeric(val) {

                val = Number(val);
                return !val ? 0 : val;
            }

            //验证码
            function get_verification_code() {
                $('#verification_code_img').attr('src', '/foreuser/seccode/?' + new Date().getTime());
            }

            //提交订单
            function submit_order(data, callback) {

                $.ajax({
                    url: '/pay/submit_order/',
                    data: data,
                    dataType: 'json',
                    type: 'post',
                    success: function (data) {
                        callback(data);
                    },
                    error: function () {
                        callback();
                    }
                });

            }

        });

        //post"跳转"扩展
        $.extend({
            standard_post: function (url, args) {
                var form = $("<form method='post'></form>");
                var input;
                form.attr({"action": url});
                $.each(args, function (key, value) {
                    input = $("<input type='hidden'>");
                    input.attr({"name": key});
                    input.val(value);
                    form.append(input);
                });
                form.appendTo(document.body);
                form.submit();
            }
        });

    </script>
