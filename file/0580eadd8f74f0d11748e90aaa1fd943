   <script type="text/javascript">
//统计还可以输入的字数
function fontNum() {
	var title = $("textarea[name='content']").val().length;
	$("#font").html(10000 - title);
}

function checkform(){
	var content=$("textarea[name='content']").val();
	var niming=$("input[name='niming']").is(':checked');
	if(niming==true){
		niming=1;
	}else{
		niming=0;
	}
	//验证内容的长度
	if(content.length>10000 || content.length<5){
		alert('评论内容长度为5-10000！');
		return false;
	}
	var id="414";
	$.ajax({
        type:'post',
        url:"/index.php/Home/Xuejie/addComment.html",
        data:'id='+id+'&content='+content+'&niming='+niming,
        dataType:'html',
        success:function(msg){
        	if(msg==2){
        		alert('评论15分钟内只能发布一次哦！');
        	}else if(msg==1){
                alert('恭喜您，发表成功！');
                window.location.reload();
            }
        }
    });
}

//顶
function setTop(id){
	var value=$("#top"+id).html();
	
	$.ajax({
		type:'post',
		url:"/index.php/Home/Xuejie/setTop.html",
		data:'id='+id,
		dataType:'html',
		success:function(msg){
			if(msg==1){
				$("#top"+id).html(parseInt(value)+1);
				$("#topImg"+id).attr('onclick',' ');
			}
		}
	});

}

//踩
function setBottom(id){
	var value=$("#bottom"+id).html();
	$.ajax({
		type:'post',
		url:"/index.php/Home/Xuejie/setBottom.html",
		data:'id='+id,
		dataType:'html',
		success:function(msg){
			if(msg==1){
				var i=value+1;
				$("#bottom"+id).html(parseInt(value)+1);
				$("#bottomImg"+id).attr('onclick',' ');
			}
		}
	});
}

//显示对评论的回复窗口
function showComment(id){
	var re=$("#re"+id).css('display');
	if(re=='none'){
	$("#re"+id).show();
	$("#res"+id).show();
	}else{
		$("#re"+id).hide();
		$("#res"+id).hide();
	}
}

//创建回复评论
function addreComment(aid){
	var content=$("#content"+aid).val();
	var id="414";
	var niming=0;
	if(id!='' && content!=''){
		$.ajax({
			type:'post',
			url:"/index.php/Home/Xuejie/addComment.html",
			data:'id='+id+'&content='+content+'&aid='+aid+'&niming=0',
			dataType:'html',
			success:function(msg){
				if(msg==2){
					alert('评论15分钟内只能发布一条哦！');
				}else if(msg==1){
	                alert('恭喜您，发表成功！');
	                window.location.reload();
	            }
			}
		});
	}
}
