   <script>
      $(function(){
        var embedText = '<iframe src="http://www.g-cores.com/volumes/23053/embed" width="480" height="400" allowtransparency="true" border="0" frameborder="0" style="width:480px;height:400px;"></iframe>';

        $('#j_embedBtn').popover({
          html: true,
          content: '<p class="text-muted small">把播放器贴到博客或论坛，用ctrl+c复制</p> <input class="input" type="text">'
        }).on('shown.bs.popover', function(){
          var inputEmbed = $(this).data('bs.popover').tip().find('input');
          inputEmbed.val(embedText).get(0).select();
        });
      });
    </script> 
