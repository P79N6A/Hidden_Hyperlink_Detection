  <script type="text/javascript">
//发表点评
 function dianping(){
        var uid=document.getElementById("uid").value;
        var content=document.getElementById("content").value;
        var news_id=document.getElementById("news_id").value;
        var s_id=document.getElementById("s_id").value;
        if(content==""){
            alert("点评内容不能为空!!!");
            return false;
        }
        if(uid !=0){
           $.ajax({
                 url: '/ajaxjson/add_pinglun', //后台处理程序
                 data:{'uid':uid,'content':content,'news_id':news_id},
                 type: "POST",
             success:function(msg){
                     if(msg){
                         alert("点评成功！！");
                          document.getElementById('dps_num').innerHTML=Number($("#dp_num").html())+1;
                         document.getElementById('dp_num').innerHTML=Number($("#dp_num").html())+1;
                         $.ajax({
                                url: '/ajaxjson/get_dianping', //后台处理程序
                                type: "POST",
                                data:{'id':msg,'news_id':news_id},
                                dataType:"html",
                                 success:function(data){
                                    if(data){
                                       document.getElementById("content").value="";
                                       if($.isNumeric(s_id)){
                                            $("#dplist_"+s_id).prepend(data); 
                                       }else{
                                            document.getElementById('dplist').innerHTML=data;
                                       }
//                                       
                                    }
                                 }
                            });
                     }
                     
                 }
          });
        }else{
           login();
        }
    }
  //回复点评
  function reply(){
      var c_id=document.getElementById("c_id").value;
      var huifu_id=document.getElementById("huifu_id").value;
      var reply_id=document.getElementById("reply_id").value;//用户ID
      var reply_content=document.getElementById("reply_content").value;
      if(reply_content==""){
            alert("回复内容不能为空!!!");
            return false;
        }
      var news_id=document.getElementById("news_id").value;
      var uid=document.getElementById("uid").value;
      if( uid !=0 && uid != reply_id){
            $.ajax({
                        url: '/ajaxjson/add_reply', //后台处理程序
                        data:{'reply_id':reply_id,'c_id':c_id,'reply_content':reply_content,'news_id':news_id},
                        type: "POST",
                        success:function(msg){
                            if(msg){
                                alert("回复成功！！");
                                $.ajax({
                                        url: '/ajaxjson/get_reply', //后台处理程序
                                        type: "POST",
                                        data:{'id':msg,'c_id':c_id,'news_id':news_id},
                                        dataType:"html",
                                        success:function(data){
                                            if(data){
                                                if($.isNumeric(huifu_id)){
                                                            $("#huifu_"+parseInt(huifu_id)).after(data); 
                                                    }else{
//                                                            document.getElementById('huifu').innerHTML=data;
                                                            $("#huifu_"+parseInt(c_id)).append(data); 
                                                    }
                                                    document.getElementById("huifukuang_"+c_id).style.display="";
                                            }
                                        }
                                    });
                            }else{
                                alert("回复失败！！");
                            }
                        }
                    });
      }else if(uid ==0){
          alert("您还未登录，请先登录！！！");
          login();
      }else{
           alert("自己不能评论自己！！！");
          document.getElementById("replay_content_"+c_id).value="";
      }
  }
    function addsc(type,id,num){
        var typeid2=document.getElementById("typeid2").value;
        var uid=document.getElementById("uid").value;
        $.ajax({
            url: '/ajaxjson/add_num', //后台处理程序
                  data:{'id':id,'type':type,'num':num,'typeid2':typeid2,'uid':uid},
                  type: "POST",
              success:function(msg){
                     if(type==1){
                          document.getElementById("zsc_num").innerHTML=msg;
                          document.getElementById("sc").innerHTML= " <a href='javascript:void(0)' id='sc_num'>已收藏("+msg+")</a>";
                     }else{
                          document.getElementById("love_num").innerHTML="喜欢("+msg+")";
                     }
                     
                  }
        })
    }
function page(page,id){
   $.ajax({
          url: '/ajaxjson/ajaxpage', //后台处理程序
          type: "POST",
          data:{'page':page,'gs_id':id,'position':4},
          dataType:"html",
          success:function(data){
               if(data){
                   document.getElementById("dpMain").innerHTML=data;
               }
             }
   });
}
</script> 
