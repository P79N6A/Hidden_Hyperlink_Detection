    function showDiv(id) {
        document.getElementById("divweek").style.display = "none";
        document.getElementById("divmonth").style.display = "none";
        document.getElementById("divyear").style.display = "none";
        document.getElementById("divall").style.display = "none";
        document.getElementById("divweekCss").setAttribute("class", "lm_r_1");
        document.getElementById("divmonthCss").setAttribute("class", "lm_r_1");
        document.getElementById("divyearCss").setAttribute("class", "lm_r_1");
        document.getElementById("divallCss").setAttribute("class", "lm_r_1");
        document.getElementById(id).style.display = "block";
        document.getElementById(id + "Css").setAttribute("class", "lm_r_2");
    }
    showDiv("divweek");
</script> 
