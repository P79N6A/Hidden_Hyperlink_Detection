				{
					$('[code=' + data[i].C + ']').find('.swing').addClass('green');
					$('[code=' + data[i].C + ']').find('.swing').removeClass('red');
				}else{
					$('[code=' + data[i].C + ']').find('.swing').removeClass('red');
					$('[code=' + data[i].C + ']').find('.swing').removeClass('green');
				}
				$('[code=' + data[i].C + ']').find('.last').text(data[i].P);
				$('[code=' + data[i].C + ']').find('.swing').text(fh+data[i].ZD);
