	function goToURL(sendUrl){
		 $.post('/index?model=mfront_login&action=judgeIsLogin',function(data){
			 var data = eval('(' + data + ')');
			 if(data.flag=="yes"){
				 window.location.href=sendUrl;
				 return;
			 }else if(data.flag=="no"){
				  var url = window.location.href;
				  var b = new Base64();  
			      url = b.encode(url);  
			      window.location.href="/yuebook/web_ad/loginRegister/login.jsp?goto="+url;
				 return ;
			 }else{
				 showInfoBox("很抱歉，操作失败！");
				 return ;
			 }
		 },"text");
	 }
	 
	 
