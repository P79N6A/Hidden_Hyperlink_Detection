              <br /> &nbsp; &nbsp; &nbsp; &nbsp; &lt;form method=&quot;post&quot; action=&quot;options.php&quot;&gt; &nbsp;
              <br /> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 
              <span class="kw2">&lt;?php</span> 
              <span class="coMULTI">/* 下面这行代码用来保存表单中内容到数据库 */</span> 
              <span class="sy1">?&gt;</span> &nbsp;
              <br /> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 
              <span class="kw2">&lt;?php</span> wp_nonce_field
              <span class="br0">(</span>
