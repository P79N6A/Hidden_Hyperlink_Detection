            unblockUI();
        },
        success: function callBack(data){
        if(data){
            if(data.msg){
                if(data.msg_list){
                    var rowCount = data.msg_list.length;
                    if(rowCount>0){
                        var title=data.msg;
                        var msg_list='';
                        for (var i = 0; i < rowCount; i++) {
                          msg_list+=data.msg_list[i].msg+"<br />";
                        }
                    }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;  
                    }
                }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;
                }
            }
            if(data.status=='success'){
                //showMsg(msg_list,title);
                location.reload();
            }else{
                showMsg(msg_list,title);
            }
        }else{
                showMsg(js_lang_no_back,js_lang_error);
        }   
    },
        error: function () {  
            showMsg(js_lang_ajax_error,js_lang_error);  
        }    
    });
}
function getLogin(){
    var user=$('#loginPhone').val();
    var password=$('#loginPwd').val();
    var writecode=$('#writecode2').val();
    if($('#jzmm').hasClass('checkbg')){
        var is_cookie=1;
    }else{
        var is_cookie=0;
    }
    if(user==''||user==null||user==undefined){
        showMsg('请填写手机','提示');
        return false;
    }
    if(password==''||password==null||password==undefined){
        showMsg('请填写密码','提示');
        return false;
    }
    var password=$('#loginPwd').val();

    var url=basepath+"index.php?m=Home&c=Ajax&a=login&fid=10";
    $.ajax({
        type: "POST", 
        url: url, 
        data: {user:user,password:password,is_cookie:is_cookie,writecode:writecode}, 
        dataType: 'json',
        beforeSend:function(){
            blockUI();
        },
        complete:function(){
            unblockUI();
        },
        success: function callBack(data){
        if(data){
            if(data.msg){
                if(data.msg_list){
                    var rowCount = data.msg_list.length;
                    if(rowCount>0){
                        var title=data.msg;
                        var msg_list='';
                        for (var i = 0; i < rowCount; i++) {
                          msg_list+=data.msg_list[i].msg+"<br />";
                        }
                    }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;  
                    }
                }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;
                }
            }
            if(data.status=='success'){
                //showMsg(msg_list,title);
                location.reload();
            }else if(data.status=='warn'){
                $('#loginCode').show();
                showMsg(msg_list,title);
            }else{
                showMsg(msg_list,title);
            }
        }else{
                showMsg(js_lang_no_back,js_lang_error);
        }   
    },
        error: function () {  
            showMsg(js_lang_ajax_error,js_lang_error);  
        }    
    });
}
function iframeUrl(url){
    if(url!=''){
        var iframe = document.createElement("iframe");
        iframe.src = url;
        iframe.style.width = "0px";
        iframe.style.height = "0px";
        document.body.appendChild(iframe);
    }
}
function addPosts(type){
    if(loginCheckOnly()==true){
        var role_id=$('#role_id_b').attr('data-role');
        if(role_id>0){
        }else if(type!=1){
             $('#callModal').modal('show');
             $('div.modal-backdrop:last').css({
                "z-index":20000
             });
             return false;
        }
        var subject=$('#addPostsSubject').val();
        var type=$('#addPoststype').val();
        //var vid = $('#videoid').val();
        if($('#onlyadmin').hasClass('checkbg')){
            var onlyadmin=1;
        }else{
            var onlyadmin=0;
        }
        //var content=$('#addPostsContent1').val();
        var content=UE.getEditor('addPostsContent1').getContent();
        //var videolink = $("#video").val();

        if(subject==''||subject==null||subject==undefined){
            showMsg('请填写标题','提示');
            return false;
        }
        if(type==''||type==null||type==undefined){
            showMsg('请选择类型','提示');
            return false;
        }
        if(content==''||content==null||content==undefined){
            showMsg('请填写内容','提示');
            return false;
        }
        var url=basepath+"index.php?m=Home&c=Ajax&a=addPosts&fid=10";
        $.ajax({
            type: "POST", 
            url: url, 
            data: {subject:subject,type:type,content:content,fid:fid,tid:tid,onlyadmin:onlyadmin//,videoid:vid
            },
            dataType: 'json',
            beforeSend:function(){
                blockUI();
            },
            complete:function(){
                unblockUI();
            },
            success: function callBack(data){
            if(data){
                if(data.msg){
                    if(data.msg_list){
                        var rowCount = data.msg_list.length;
                        if(rowCount>0){
                            var title=data.msg;
                            var msg_list='';
                            for (var i = 0; i < rowCount; i++) {
                              msg_list+=data.msg_list[i].msg+"<br />";
                            }
                        }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;  
                        }
                    }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;
                    }
                }
                if(data.status=='success'){
                    //showMsg(msg_list,title);
                    blockUI();
                    if(data.value.im!=''){
                        iframeUrl(data.value.im);
                    }
                    setTimeout(function(){
                        location.reload();
                    },1000);
                }else{
                    showMsg(msg_list,title);
                }
            }else{
                    showMsg(js_lang_no_back,js_lang_error);
            }   
        },
            error: function () {  
                showMsg(js_lang_ajax_error,js_lang_error);  
            }    
        });
    }
}

function goodPosts(pid){
    if(loginCheck()==true){
        if(pid>0){
            $url=basepath+"index.php?m=Home&c=Ajax&a=goodPosts&fid=10&pid="+pid;
            ajaxUrlHtml($url,'good_pid_'+pid,1);
        }
    }
}
function goodReply(rid){
    if(loginCheck()==true){
        if(rid>0){
            $url=basepath+"index.php?m=Home&c=Ajax&a=goodReply&fid=10&rid="+rid;
            ajaxUrlHtml($url,'good_rid_'+rid,1);
        }
    }
}
function followRole(role_id){
    if(loginCheck()==true){
        if(role_id>0){
            $url=basepath+"index.php?m=Home&c=Ajax&a=followRole&fid=10&role_id="+role_id;
            ajaxUrlHtml($url,'art_role_'+role_id,0);
        }
    }
}
function getCode(id1,id2){
    //console.log(codeSend);
    if(codeSend==0){
        var user=$('#'+id1).val();
        if(user==''||user==null||user==undefined){
            showMsg('请填写手机','提示');
            return false;
        }
        var reg = /^(13[0-9]|14[0-9]|15[0-9]|16[0-9]|17[0-9]|18[0-9])\d{8}$/i;
        if(!reg.test(user)) {
              showMsg('手机号码有误','提示');
        }
        var url=basepath+"index.php?m=Home&c=Ajax&fid=10&a="+id2+"&tel="+user;
        $.ajax({
            type: "POST", 
            url: url, 
            dataType: 'json',
            beforeSend:function(){
                blockUI();
            },
            complete:function(){
                unblockUI();
            },
            success: function callBack(data){
            if(data){
                if(data.msg){
                    if(data.msg_list){
                        var rowCount = data.msg_list.length;
                        if(rowCount>0){
                            var title=data.msg;
                            var msg_list='';
                            for (var i = 0; i < rowCount; i++) {
                              msg_list+=data.msg_list[i].msg+"<br />";
                            }
                        }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;  
                        }
                    }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;
                    }
                }
                if(data.status=='success'){
                    codeSend=1;
                    var getcodeBtn=$('#'+id2);
                    var time=60;
                    function timeCountDown(){
                        if(time==0){
                            clearInterval(timer);
                            codeSend=0;
                            getcodeBtn.text('获取验证码');
                            getcodeBtn.removeClass('getcode-2');
                            getcodeBtn.addClass('getcode-1');
                        }else{
                            if(!getcodeBtn.hasClass('getcode-2')){
                                getcodeBtn.addClass('getcode-2');
                                getcodeBtn.removeClass('getcode-1');
                            }
                            getcodeBtn.text('正在发送('+time+')');
                            time--;
                        }
                    }
                    var timer = setInterval(timeCountDown,1000);
                }else{
                    showMsg(msg_list,title);
                }
            }else{
                    showMsg(js_lang_no_back,js_lang_error);
            }   
        },
            error: function () {  
                showMsg(js_lang_ajax_error,js_lang_error);  
            }    
        });
    }else{
        showMsg('验证码已发送，麻烦查收','提示');
    }
}
