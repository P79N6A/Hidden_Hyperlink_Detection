         $('#roleCccAcc').click(function(){
             var roleBalance = $('#roleBalance').val(),roleId = $('#yRoleId').val();
             if(!!roleBalance && roleId>0){
                 $.getJSON('/User/Index/roleAcc/fid/10','banlance='+roleBalance+'&roleId='+roleId,function(res){
                     if(res.success){
                         $('#myModal').modal('hide');
                         layer.msg(res.msg);
                         location.reload();
                         
                     }else{
                         layer.msg(res.msg);
                     }
                 });
             }
         })
    });
