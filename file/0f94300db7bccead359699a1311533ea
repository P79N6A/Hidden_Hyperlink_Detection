  <script language="javascript">
layer.config({
  extend: 'http://s.public.yingxiong.com/assets/global/layer/2.2/extend/layer.ext.js'
});


//回到顶部
    var toup1;
    var toup2;
    function toup(){
        toup1 = window.setInterval(scrup,4);
    }
    function toup1(){
        toup2 = window.setInterval(scrup1,4);
    }
    function scrup1(){
        var h=$('#addReplyContent').offset().top;
        var xx;
        xx=window.scrollY>h?window.scrollY-h:h-window.scrollY;
        var total_h=parseInt(window.scrollY)+parseInt(document.body.offsetHeight);
        if(total_h>=document.body.scrollHeight){
            clearInterval(toup2);
            if(user_id>0){
                if($('#addReplyContent').length>0){
                    //UE.getEditor('addReplyContent').focus();
                }
            }
        }else if(xx<10){
            clearInterval(toup2);
            if(user_id>0){
                if($('#addReplyContent').length>0){
                    //UE.getEditor('addReplyContent').focus();
                }
            }
        }else{
            if(window.scrollY>h){
                scrollTo(0,window.scrollY-20);
            }else{
                scrollTo(0,window.scrollY+20);
            }
        }
    }
    function scrup(){
        if(window.scrollY<=0){
            clearInterval(toup1);
        }else{
            scrollTo(0,window.scrollY-20);
        }
    }
function searchForm(){
    var kw=$('#kw').val();
    if(kw==''||kw==null||kw==undefined){
        showMsg('请填写问题/关键字/玩家','提示');
        return false;
    }
} 
function roleBoxChange(role_id){
    $('#roleChange').val(role_id);
    $('#allRole .role-box').removeClass('role-box-1');
    $('#allRole .roleBox_'+role_id).addClass('role-box-1');
}
function go_url(url){
    if(url!=''){
        location.href=url;
    }
}
function go_user_url(url){
    if(loginCheckOnly()==true){
        location.href=url;
    }
}
function show_user_modal(id){
    if(loginCheckOnly()==true){
        $('#'+id).modal('show');
    }
}
function loginCheck(){
    if(user_id>0){
        if(role_id>0){
            return true;
        }else{
            $('#finishModal').modal('show');
            return false;
        }
    }else{
        $('#loginModal').modal('show');
        return false;
    }
}
function loginCheckOnly(){
    if(user_id>0){
        return true;
    }else{
        $('#loginModal').modal('show');
        return false;
    }
}
function blockUI(){
    $.blockUI({
        message:'',
        baseZ: 29999,
        overlayCSS:  {
            backgroundColor: '#000',
            opacity:         0.1
        },
        css: {
            top: '10%',
            border: '0',
            padding: '0',
            backgroundColor: 'none'
        }
    });
}
function layerMsg(msg){
    layer.msg(msg, {
        time:3000,
        icon:0
    });
}
function unblockUI(){
    $.unblockUI();
}
function showMsg(msg,title){
    //showtooltip(title,msg);
    //alert(title+":"+msg);
     layer.open({
       
       title: title,
       content: msg
     });     
}
function roleChange(){
    var role_id=$('#roleChange').val();
    if(role_id>0){
        $url=basepath+"index.php?m=Home&c=Ajax&a=roleChange&fid=10&role_id="+role_id;
        ajaxUrlHtml($url,'',2);
    }
}
function ajaxUrlHtml(url,htmlId,type){
    if(url!=''){
        $.ajax({
            type: "POST", 
            url: url, 
            dataType: 'json',
            beforeSend:function(){
                blockUI();
            },
            complete:function(){
                unblockUI();
            },
            success: function callBack(data){
            if(data){
                if(data.msg){
                    if(data.msg_list){
                        var rowCount = data.msg_list.length;
                        if(rowCount>0){
                            var title=data.msg;
                            var msg_list='';
                            for (var i = 0; i < rowCount; i++) {
                              msg_list+=data.msg_list[i].msg+"<br />";
                            }
                        }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;  
                        }
                    }else{
                        var title=js_lang_tipmsg_tit;
                        var msg_list=data.msg;
                    }
                }
                if(data.status=='success'){
                     if(type==3){
                         layerMsg(msg_list);
                         setTimeout(function(){
                             location.reload();
                         },100);
                     }else{
                         //showMsg(msg_list,title);
                         if(type==2){
                            location.reload();
                         }else if(htmlId!=''){
                            if(type==1){
                                if($('#'+htmlId).length>0){
                                    $('#'+htmlId).html(data.value);
                                }
                            }else{
                                if($('.'+htmlId).length>0){
                                    $('.'+htmlId).html(data.value);
                                }
                            }
                        }
                    }
                }else{
                    showMsg(msg_list,title);
                }
            }else{
                    showMsg(js_lang_no_back,js_lang_error);
            }   
        },
            error: function () {  
                showMsg(js_lang_ajax_error,js_lang_error);  
            }    
        });
    }
}

if(user_id>0){

}else{
    //登录方式切换
    $("body #loginModal .loginways>span").click(function(){
        $("body #loginModal .loginways>span").children("i").removeClass("hover");
        $(this).children("i").addClass("hover");
        $("body #loginModal .modal-body").addClass("hidden");
        $("body #loginModal .modal-body").eq($(this).index("body #loginModal .loginways>span")).removeClass("hidden");
    });
}
