  <script>
    $(function(){
        var is_show = '0';
        if(+is_show){
            $('#finishModal').modal('show');
            getQfListById();
        }
        $('#finishModal').on('show.bs.modal',function(){
            getQfListById();
        });
        $('#gid').change(function(){
            getQfListById();
        });

        $('#surebtn2').click(function(){
            var fId = $('#fId').val(),user = $.trim($('#rolename').val());
            if(user == ''){
                 showMsg('请输入游戏角色名','提示');return;
            }
            $.ajax({
                url:'/User/index/banRole/fid/10',
                data:{fId:fId,user:user},
                dataType:'json',
                method:'post'
            }).done(function(res){
                if(res.success){
                    $('#finishModal').modal('toggle');
                    showMsg(res.msg,'提示');
                    setTimeout(function(){
                        location.reload();
                    },1000);
                }else{
                    showMsg(res.msg,'提示');
                }
            });
        });
        $('#os').change(function(){
            getQfListById();
        });
        function getQfListById(){
            //var gid = $('#gid').val(),load = layer.load(1),option;
            var os = $('#os').val(),option;
            if(os>0){
                $.getJSON('/User/Index/getQfListById/fid/10','os='+os,function(res){
                    if(res.success){
                        $.each(res.qfList,function(i,v){
                            option += '<option value="'+v.id+'">'+v.name+'</option>';
                        });
                        $('#fId').html(option);
                    }else {
                        layer.msg(res.msg);
                    }
                });
            }
        }
    });
</script> 
