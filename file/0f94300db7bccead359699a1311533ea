  <script type="text/javascript">
function hideshow(id1,id2){
    $('#'+id1).modal('hide');
    $('#'+id2).modal('show');
}
function getForget(){
    var user=$('#forgetPhone').val();
    var password=$('#forgetPwd').val();
    var writecode=$('#writecode1').val();
    var confirmpwd=$('#confirm-pwd1').val();
    if(user==''||user==null||user==undefined){
        showMsg('请填写手机','提示');
        return false;
    }
    var reg = /^0?1[3|5|6|7|8][0-9]\d{8}$/;
    if(!reg.test(user)) {
          showMsg('手机号码有误','提示');
    }
    if(password==''||password==null||password==undefined){
        showMsg('请填写密码','提示');
        return false;
    }
    if(writecode==''||writecode==null||writecode==undefined){
        showMsg('请填写验证码','提示');
        return false;
    }
    if(confirmpwd==''||confirmpwd==null||confirmpwd==undefined){
        showMsg('请填写确认密码','提示');
        return false;
    }
    if(password!=confirmpwd){
        showMsg('2次输入密码不相同','提示');
        return false;
    }
    var url=basepath+"index.php?m=Home&c=Ajax&a=forget&fid=10";
    $.ajax({
        type: "POST", 
        url: url, 
        data: {user:user,password:password,writecode:writecode,confirmpwd:confirmpwd}, 
        dataType: 'json',
        beforeSend:function(){
            blockUI();
        },
        complete:function(){
            unblockUI();
        },
        success: function callBack(data){
        if(data){
            if(data.msg){
                if(data.msg_list){
                    var rowCount = data.msg_list.length;
                    if(rowCount>0){
                        var title=data.msg;
                        var msg_list='';
                        for (var i = 0; i < rowCount; i++) {
                          msg_list+=data.msg_list[i].msg+"<br />";
                        }
                    }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;  
                    }
                }else{
                    var title=js_lang_tipmsg_tit;
                    var msg_list=data.msg;
                }
            }
            if(data.status=='success'){
                showMsg(msg_list,title);
                //location.reload();
            }else{
                showMsg(msg_list,title);
            }
        }else{
                showMsg(js_lang_no_back,js_lang_error);
        }   
    },
        error: function () {  
            showMsg(js_lang_ajax_error,js_lang_error);  
        }    
    });
}
function getReg(){
    var user=$('#regPhone').val();
    var password=$('#regPwd').val();
    var writecode=$('#writecode').val();
    var confirmpwd=$('#confirm-pwd').val();
    if(user==''||user==null||user==undefined){
        showMsg('请填写手机','提示');
        return false;
    }
    var reg = /^0?1[3|5|6|7|8][0-9]\d{8}$/;
    if(!reg.test(user)) {
          showMsg('手机号码有误','提示');
    }
    if(password==''||password==null||password==undefined){
        showMsg('请填写密码','提示');
        return false;
    }
    if(writecode==''||writecode==null||writecode==undefined){
        showMsg('请填写验证码','提示');
        return false;
    }
    if(confirmpwd==''||confirmpwd==null||confirmpwd==undefined){
        showMsg('请填写确认密码','提示');
        return false;
    }
    if(password!=confirmpwd){
        showMsg('2次输入密码不相同','提示');
        return false;
    }
    var url=basepath+"index.php?m=Home&c=Ajax&a=reg&fid=10";
    $.ajax({
        type: "POST", 
        url: url, 
        data: {user:user,password:password,writecode:writecode,confirmpwd:confirmpwd}, 
        dataType: 'json',
        beforeSend:function(){
            blockUI();
        },
