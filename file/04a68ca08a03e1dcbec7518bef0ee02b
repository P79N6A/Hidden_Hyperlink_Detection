  <script type="text/javascript">
$('.comment_reply a').click(function() {
var atname = $(this).parents('.comment').find('.xqusernpop').text();
var atcont = $(this).parents('.comment').find('.commentcontent').text().replace($(this).parents('.comment').find('.xqreplyquote').text(), '');
var pid = $(this).parents('.comment').attr("cid");
var atcontLength = atcont.length; 
var num = 70; 
if(atcontLength > num){ 
	atcont = atcont.substring(0,num) + "..."; 
} 
$(".xqcomre").remove();
$(".xqcompid").remove();
$("#comments #edit-comment").before('<input name="pid" type="hidden" value="" class="xqcompid"><div class="xqcomre"></div>');
$(".xqcomre").text("回复： @" + atname + " “" + atcont +"”");
$(".xqcompid").attr("value", pid);
});
</script> 
  <script language="JavaScript">
        function saveInfo() {
          var text = document.getElementById("edit-comment").value;
        }
        function setCols() {
          var textarea = document.getElementById("edit-comment");
		  if(textarea){
          textarea.setAttribute("cols", Math.floor(textarea.clientWidth / 7));
          setRows();
		  }
        }
        function setRows() {
          var textarea = document.getElementById("edit-comment");
		  if(textarea){
          var cols = textarea.cols;
          var str = textarea.value;
          str = str.replace(/\r\n?/, "\n");
          var lines = 4;
          var chars = 0;
          for (i = 0; i < str.length; i++) {
            var c = str.charAt(i);
            chars++;
            if (c == "\n" || chars == cols) {
              lines ++;
              chars = 0;
            }
          }
          textarea.setAttribute("rows", lines);
          textarea.style.height = lines*17 + "px";
		  }
        }
        setCols();
</script> 
