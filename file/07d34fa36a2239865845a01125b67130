    <script>
    var collecting = false;
    function collectArticle(articleId) {
        if (!getCookie('uid') || !getCookie('uname') || !getCookie('upw')) {
            smp.show("请先登录！");
            return;
        }
        if (!collecting) {
            collecting = true;
            var data = {"articleId":articleId}
            data = JSON.stringify(data);
            post("/web/home/collectarticle", data, function(e) {
                console.log(e.target.responseText);
                var response = JSON.parse(e.target.responseText);
                if (response && response.status) {
                    smp.show("收藏成功！");
                    document.getElementById('shareAreaUnCollect').style.display = "none";
                    document.getElementById('shareAreaCollect').style.display = "block";
                }
                collecting = false;
            }, function() {});

        }
    }

    function unCollectArticle(articleId) {
        if (!getCookie('uid') || !getCookie('uname') || !getCookie('upw')) {
            smp.show("请先登录！");
            return;
        }
        if (!collecting) {
            collecting = true;
            var data = { "articleId": articleId }
            data = JSON.stringify(data);
            post("/web/home/uncollectarticle", data, function (e) {
                console.log(e.target.responseText);
                var response = JSON.parse(e.target.responseText);
                if (response && response.status) {
                    smp.show("取消成功！");
                    document.getElementById('shareAreaUnCollect').style.display = "block";
                    document.getElementById('shareAreaCollect').style.display = "none";
                }
                collecting = false;
            }, function () { });

        }
    }


</script> 
