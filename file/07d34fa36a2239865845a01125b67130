        xhr.addEventListener("error", funcError);
        xhr.send(dataString);
    }

    var issearching = false;
    document.getElementById("search").addEventListener("keyup",function(e) {
        if (e.keyCode == 13) {
            var searchContent = this.value.trim();
            console.log(searchContent);
            if (!issearching) {
                issearching = true;
                var url = "/apiv2/article/search?keyword=" + searchContent;
                post(url, "", function (e) {
                    var jsondata = JSON.parse(e.target.responseText);
                    if (jsondata.length > 0) {
                        console.log(jsondata);
                        addSearchResoult(jsondata);
                    }
                    issearching = false;
                }, function () { });
            }

        }



    },false);


</script> 
