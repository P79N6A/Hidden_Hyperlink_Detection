    <script>
    
    



    function post(url, dataString, funcComplete, funcError) {
        var xhr = new XMLHttpRequest();
        xhr.open("POST", url, true);
        xhr.setRequestHeader("Content-Type", "application/json; charset=utf-8");
        xhr.addEventListener("load", funcComplete);
        xhr.addEventListener("error", funcError);
        xhr.send(dataString);
    }

    function comment(content) {
        var articleid = 19016;
        var data = { "content": content, "articleId": articleid, "type": 1 };
        //        var data = "content=" + content + "&articleId=" + articleid + "&type=" + 1;
        data = JSON.stringify(data);
        post("/Web/Home/Comment", data, onComplete, onError);

        function onComplete(e) {
            console.log(e.target.responseText);
            var response = JSON.parse(e.target.responseText);
            if (response && response.status) {
                addComment(content)
                document.getElementById('writeComment').innerHTML = "";
                smp.show('评论成功！');
            }
        }

        function onError(e, d) {
            smp.show("数据错误！", "warn");
        }

    }


    document.getElementById('commentBtn').onclick = function() {
        var commentContent = document.getElementById('commentContent').value;
        if (commentContent.length < 2) {
            smp.show("内容太短了!", "warn");
            return;
        }
        if (!getCookie('uid')||!getCookie('uname')) {
            smp.show("请先登录！");
            return;
        }

        comment(commentContent);

    };

    function getCookie(name) {
        //获得cookie
        var bikky = document.cookie;
        name += "=";
        var i = 0;
        //如果cookie 不为空则 循环截取出 相应 名称 的cookie值
        while (i < bikky.length) {
            var offset = i + name.length;
            if (bikky.substring(i, offset) == name) {
                var endstr = bikky.indexOf(";", offset);
                if (endstr == -1) endstr = bikky.length;
                return unescape(bikky.substring(offset, endstr));
            }
            i = bikky.indexOf(" ", i) + 1;
            if (i == 0) break;
        }
        return null;
    }


</script> 
