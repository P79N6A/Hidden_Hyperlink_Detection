      $j("#signin").submit(function(){
          $j("#signin-goto").val(document.location.href);
          return true;
      });
      $j(".drop-box").mouseup(function(event) {
          return false;
      });
	  
	 $j("a[showElementId]").hover(function(){
		 if (Renhe.tipsHideDelayTimer) clearTimeout(Renhe.tipsHideDelayTimer);
		 var showElementId = $j(this).attr("showElementId");
		 $j("a[showElementId].current").not("#" + showElementId + "Link").removeClass("current");
		 $j(this).addClass("current");
		 $j(".drop-box").hide();
		 $j("#" + showElementId).show();
	  }, function(){
	  	if (Renhe.tipsHideDelayTimer) clearTimeout(Renhe.tipsHideDelayTimer);
		var showElementLink = $j(this);
    	Renhe.tipsHideDelayTimer = setTimeout(function () {
			var showElementId = showElementLink.attr("showElementId");
    		$j(".drop-box").hide();
			$j("#" + showElementId).hide();
			showElementLink.removeClass("current");
    	}, 500);
	  });
	  $j("#loginDiv, #memberProfileDiv, #profiileUL, #contactUL, #moreAppUL, #serviceDiv").hover(function(){
		 if (Renhe.tipsHideDelayTimer) clearTimeout(Renhe.tipsHideDelayTimer);
		 var showElementId = $j(this).attr("id");
		 $j("a[showElementId].current").not("#" + showElementId + "Link").removeClass("current");
		 $j("#" + showElementId + "Link").addClass("current");
		 $j(".drop-box").hide();
		 $j(this).show();
	  }, function(){
	  	if (Renhe.tipsHideDelayTimer) clearTimeout(Renhe.tipsHideDelayTimer);
		var showElementId = $j(this).attr("id");
    	var showElement = $j(this);
		Renhe.tipsHideDelayTimer = setTimeout(function () {
    		$j(".drop-box").hide();
			showElement.hide();
			$j("#" + showElementId + "Link").removeClass("current");
    	}, 500);
	  });
	  
	  $j("#searchForm").submit(function(){
		var searchKeyword = $j("#searchBoxId").val();
		if(searchKeyword == "搜索人脉"){
			$j("#searchBoxId").focus();
			return false;
		}
		return true;
	  });
	  $j("#searchBoxId").focusin(function(){
		$j(this).css("color", "#333");
		if($j(this).val() == "搜索人脉") {
			$j(this).val("");
		}
	  }).focusout(function(){
		$j(this).css("color", "#666");
		if($j(this).val() == "") {
			$j(this).val("搜索人脉");
		}
	  }).autocomplete("/ajax/getCompanyLib.html", {
        minChars: 1,
        mustMatch: false,
        matchContains: true,
		dataType: "json",
		scroll: false,
		max : 5,
		width : 310,
		width : 307,
		extraParams : {companyName: function(){return $j("#searchBoxId").val();}},
		parse: function(data){
			if(!data)
				data = [];
			return jQuery.map(data, function(row) {
        				return {
        					data: row,
        					value: row.company_name,
        					result: row.company_name
        				}
        		   });
		},
        formatItem: function(row) {
			return row.company_name;
		}
    }).result(function(event, data, formatted) {
		if(!data) {
			return false;
		}
		var search = $j("#searchBoxId").val();
		Renhe.location("http://www.renhe.cn/search/member.html?query="+search+"&search=y");
	});;
