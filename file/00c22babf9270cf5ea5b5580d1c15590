  <script type="text/javascript">
    //保存附件文件 TODO modify this function code
    var attachmentFiles =[];
	$j("#showMemberLoginDivId").hover(function(){
		$j("#memberLoginShowDiv").show();
	}, function() {
		$j("#memberLoginShowDiv").hide();
	});
	
	$j(".bestanswer").hover(function(){
		$j(this).find(".moveShowUl").show();
	}, function() {
		$j(this).find(".moveShowUl").hide();
	});
		
	$j("dl[showAnswerId]").live("hover", function(event) {
		if (event.type == 'mouseenter') {
           var showAnswerId = $j(this).attr("showAnswerId");
		   $j("ul[showAnswerId="+ showAnswerId +"]").show();
        } else if (event.type == 'mouseleave') {
           var showAnswerId = $j(this).attr("showAnswerId");
		   $j("ul[showAnswerId="+ showAnswerId +"]").hide();
        }
	});
	
	$j("a[moreName]").click(function(){
		var answerId = $j(this).attr("moreName");
		$j("span[flowersFromId='"+ answerId +"']").show();
		$j("span[shortFlowersFromId='"+ answerId +"']").hide();
	});
		
	$j("a[answerId]").click(function(){
		var answerId = $j(this).attr("answerId");
		Renhe.confirm({
			content: "确定送出鲜花吗？",
			okEvent: function(){
				jQuery.post("/ajax/addAnswerFlower.html", {answerId : answerId } , function(text){
    				var flowers = Number($j("#surplusFlowers").text());
    				if(text == "noFlowers") {
    					Renhe.alertError("鲜花不足，多多回答问题可以赚取鲜花");
    				} else if(text == "alreadySend") {
						Renhe.alertError("您已经送过鲜花了");
					} else {
    					var flowerCount = jQuery.trim($j("em[answerId='" + answerId + "']").text());
    					var flowerName = jQuery.trim($j("span[flowersFromId='" + answerId + "']").text());
    					if(flowerCount != ""){
    						flowerCount = Number(flowerCount);
    						$j("em[answerId='" + answerId + "']").text(flowerCount + 1).fadeIn("slow");
							$j("span[flowerNameId='"+ answerId +"']").show();
							$j("span[shortFlowersFromId='"+ answerId +"']").hide();
    						$j("span[flowersFromId='"+ answerId +"']").text(flowerName +",$member.name").fadeIn("slow");
    						Renhe.alertHide("送花成功");
    					}else{
    						$j("p[answerId='" + answerId +"']").show();
    						$j("em[answerId='" + answerId + "']").text(1).fadeIn("slow");
    						$j("span[flowersFromId='"+ answerId +"']").text("来自$member.name").fadeIn("slow");
    						Renhe.alertHide("送花成功");
    					}
    					if(flowers != 0){
    						$j("#surplusFlowers").text(flowers - 1);
    					}
					}
				});
			}
	 	});
	});
		
	$j("a[bestAnswer]").click(function(){
		var answerId = $j(this).attr("bestAnswer");
		Renhe.confirm({
			content: "您选择了最佳解答，同时关闭这个求助？",
			okEvent: function(){
				Renhe.location("/answer/set_best_answer.html?sid="+answerId);
				return false;
			}
	 	});
	});
	
	$j("a[questionClose]").click(function(){
		var questionCloseId = $j(this).attr("questionClose");
		Renhe.confirm({
			content: "还未选择最佳解答，确实关闭这个求助？",
			okEvent: function(){
				Renhe.location("/answer/close_question.html?sid="+questionCloseId);
				return false;
			}
	 	});
	});
	
	$j("a[deleteQuestion]").click(function(){
		var deleteQuestionId = $j(this).attr("deleteQuestion");
		Renhe.confirm({
			content: "确实要删除这个求助？",
			okEvent: function(){
				Renhe.location("/answer/delete_question.html?qsid="+deleteQuestionId);
				return false;
			}
	 	});
	});
	
	$j("a[deleteAnswer]").live("click", function(){
		var deleteAnswerId = $j(this).attr("deleteAnswer");
		var replyNumber = Number($j("#replyQuestionId").text());
		Renhe.confirm({
			content: "确定删除这个回复？",
			okEvent: function(){
				jQuery.ajax({
        			url : "/ajax/deleteAnswer.html",
            		data : { 
        				said : deleteAnswerId
        			},
            		success : function(){
            			$j("#answer"+deleteAnswerId).slideUp("slow");;
						$j("#replyQuestionId").hide().text(replyNumber - 1).fadeIn("slow");
            		},
            		error : function(){
            			Renhe.alertError('删除出错，请稍后再试。');
            		}
        		});		
			}
	 	});
	});
	
	$j("a[answerReply]").click(function(){
		var answerid = $j(this).attr("answerReply");		
		jQuery.fn.jmodal({
    		title: '回复',
    		content: '<form id="answerCommentForm" action="/answer/answer_comment.html" method="post">\
      					<input id="id_answerid" type="hidden" name="answerId" value="" /> \
     	 				<textarea id="id_content" name="content" cols="80" rows="8"></textarea> \
      					<div id="errorMsg"></div> \
    				  </form>',
    		buttonText: {ok: '确定', cancel: '取消'},
    		okEvent: function(jmodal){
    			jmodal.isCancelling = true;
    			$j('#id_answerid').val(answerid);
    			$j('#answerCommentForm').submit(function(){
    				if(jQuery.trim($j("#id_content").val()) == ""){
                		$j("#errorMsg").html("回复内容必须填写");
    					$j("#errorMsg").show();
                		return false;
                	}
                	return true;
    			});
    			$j('#answerCommentForm').submit();
				jmodal.disableOKButton();
				return false;
    		}
    	});
	});
	
	$j("#modifyTags").click(function(){
		$j("b.del").show();
		$j("#addTagDiv").show();
		$j("#modifyTags").hide();
	});

	$j("#addTags").click(function(){
		$j("b.del").show();
		$j("#addTags").hide();
		$j("#addTagDiv").show();
		$j("#modifyTags").hide();
	});
	
	$j("#addTagButton").click(function(){
		var dataTagName = $j("#tagNameInput").val();
		if(jQuery.trim(dataTagName) != "" && jQuery.trim(dataTagName).length < 10){
			if(jQuery.trim(dataTagName) == "添加标签"){
				if($j("a[name='tagTitle']").length == 0){
					$j("#addTagDiv").hide();
					$j(".del").hide();
					$j("#addTags").show();
				}else{
					$j("#addTagDiv").hide();
					$j("#modifyTags").show();
					$j(".del").hide();
				}
				return false;
			}
			jQuery.post("/ajax/addAnswerTag.html",{tagName : jQuery.trim(dataTagName) ,questionId : 26682}, 
				function(text){
					if(text == "error") {
						return false;
					} else { 
						$j("#addTagDiv").before("<span class='tags'><a name='tagTitle' target='_blank' >"+ dataTagName +"</a><b id='delTag' class='del' value='"+ text +"'></b></span>");					
					}
				});
		}else{
			if(jQuery.trim(dataTagName) != ""){
				Renhe.alertErrorHide("长度不超过10个字符");
				return false;
			}
		}
		$j("#tagNameInput").val("");
		var tagTitle = $j("a[name='tagTitle']");
		if(tagTitle.length() == 0){
			$j("#addTags").show();
			$j("#modifyTags").hide();	
		}else{
			$j("#addTags").hide();
			$j("#modifyTags").show();
		}
		$j("#addTagDiv").hide();
		$j("b.del").hide();
	});
	
	$j("#delTag").live('click',function(){
		var tagId = $j(this).attr("value");
		jQuery.ajax({
			url : "/ajax/deleteAnswerTag.html",
			data: {
				answerTagId : tagId
			}    		
		});	
		$j(this).parent().remove();
	});
	
	$j("#answerButton").click(function(){
		$j("#answerContent").focus();
	});
		
	$j("#tagNameInput").autocomplete("/ajax/getAnswerTag.html", {
        minChars: 1,
        width: 240,
		scrollHeight : 1000,
        mustMatch: false,
        matchContains: true,
		dataType: "json",
		extraParams : {tagName: function(){return $j("#tagNameInput").val();}},
		parse: function(data){
			if(data == null){
				data = []
			}
			return jQuery.map(data, function(row) {
				return {
					data: row,
					value: row.tagName,
					result: row.tagName
				}
		   });
		},
        formatItem: function(row) {
			return row.tagName;
		},
		hideWhenEmpty : false,
		showDefaultContent: true,
		defaultFormatContent: "点击添加\"%s\"标签"
    }).result(function(event,data) {
		if(!data || !data.tagName) {
			var tagNameInputVal = $j("#tagNameInput").val();
			if(jQuery.trim(tagNameInputVal) != "" && jQuery.trim(tagNameInputVal).length < 10) {
				if(jQuery.trim(dataTagName) == "添加标签"){
					$j("#addTagDiv").hide();
					$j("#modifyTags").show();
					$j(".del").hide();
					return false;
				}
				var dataTagName = $j("#tagNameInput").val();
				$j("#tagNameInput").val("");
				jQuery.ajax({
        			url : "/ajax/addAnswerTag.html",
    				data: {
    					tagName : dataTagName,
    					questionId : 26682
    				},
    				success : function(text){
    					if(text == "error"){
							return false;
    					} else { 
    						$j("#addTagDiv").before("<span class='tags'><a name='tagTitle' target='_blank'>"+ dataTagName +"</a><b id='delTag' class='del' value='"+ text +"'></b></span>");
    					}
    				}
            	});
			}else {
				if(jQuery.trim(dataTagName) != ""){
					Renhe.alertErrorHide("长度不超过10个字符");
					return false;
				}
			}
			return false;
		} else {
			var dataTagName = data.tagName;
			if(jQuery.trim(dataTagName) != "" && jQuery.trim(dataTagName).length < 10){
				$j("#tagNameInput").val("");
				jQuery.ajax({
        			url : "/ajax/addAnswerTag.html",
    				data: {
    					tagName : dataTagName,
    					questionId : 26682
    				},
    				success : function(text){
    					if(text == "error"){
							return false;
    					} else { 
    						$j("#addTagDiv").before("<span class='tags'><a name='tagTitle' target='_blank'>"+ dataTagName +"</a><b id='delTag' class='del' value='"+ text +"'></b></span>");
    					}
    				}
            	});
			}
		}
	});

		$j("#shareImgSpan").click(function(){
		Renhe.share({
			type: "ask",
			sid: "929e3571d7375cc2"
		});
	});
	
	$j("#sendAnswer").click(function(){
		var content = $j("#answerContent").val();
		if(jQuery.trim(content) == "") {
			Renhe.alertError("回复内容不能为空");
			return false;
		}
		var masterOnly = -1;
		var mask = -1;
		var syncToWeibo = false;
		var syncQqWeibo =false;
		$j("#sendAnswer").attr("disabled", true);
        $j("#sendAnswer").removeClass("submit");
        $j("#sendAnswer").addClass("disabled");
		if($j("#masterOnlyId").prop("checked")) {
			masterOnly = 1;
		}
		if($j("#maskId").prop("checked")) {
			mask = 1;
		}
		if($j("#weiboShareCheckbox").prop("checked")) {
			syncToWeibo = true;
		}
		if($j("#qqWeiboShareCheckbox").prop("checked")) {
			syncQqWeibo = true;
		}
		jQuery.ajax({
			url : "/ajax/replyQuestion.html",
			type : "post",
			dataType : "script",
			data : {
				questionId : '26682',
				content : content,
				masterOnly : masterOnly,
				mask : mask,
				attFiles : attachmentFiles.join(","),
				syncToWeibo : syncToWeibo,
				syncQqWeibo : syncQqWeibo
			},
			success : function(script){
				var replyNumber = Number($j("#replyQuestionId").text());
				if(error == "noLogin"){
					Renhe.alertError("您还没有登录");
					$j("#sendAnswer").removeAttr("disabled");
        			$j("#sendAnswer").removeClass("disabled");
        			$j("#sendAnswer").addClass("submit");
					
					return false;
				} else if(error == "noNomalMember") {
					Renhe.alert("暂时无法完成此操作，您加入人和网的申请未获得通过，请及时完善真实的个人资料。<br /><br /><p align='center'><a class='btn-red' href='http://domainName/member/index.html'>马上完善</a></p>");
					$j("#sendAnswer").removeAttr("disabled");
        			$j("#sendAnswer").removeClass("disabled");
        			$j("#sendAnswer").addClass("submit");
					return false;
				} else if(error == "noMemberInfo") {
					Renhe.alert("回复求助前，请将资料完善到75%以上。<br /><br /><p align='center'><a class='btn-red' href='http://www.renhe.cn/member/index.html'>马上完善</a></p>");
					$j("#sendAnswer").removeAttr("disabled");
        			$j("#sendAnswer").removeClass("disabled");
        			$j("#sendAnswer").addClass("submit");
					return false;
				}
				$j("#answerContent").val("");
				
				$j(htmlContent).prependTo($j("#insertAnswerDiv")).slideDown("slow");
				$j("#replyQuestionId").hide().text(replyNumber + 1).fadeIn("slow");
				$j("#noAnswer").hide();
				
				attachmentFiles =[];
				$j("#attachmentDiv").empty();
				
				$j("#sendAnswer").removeAttr("disabled");
        		$j("#sendAnswer").removeClass("disabled");
        		$j("#sendAnswer").addClass("submit");
			}
		});	
	});
	
	$j("a[membername]").click(function(){
		var beSpamMemberName = $j(this).attr("membername");
		var beSpamMemberId = $j(this).attr("memberid");
		var entityId = $j(this).attr("entityid");
		var spamType = $j(this).attr("spamtype");
		var maskName = $j(this).attr("maskName");
		if(maskName != null && maskName != ""){
			memberName = maskName;
		}
		
		jQuery.fn.jmodal( {
    		title : '举报',
    		url : '/ajax/spamMemberModel.html',
    		showCancelButton : true,
    		showOKButton : true,
    		buttonText: {ok: "确认", cancel: "取消"},
    		data : {
    			beSpamMemberId : beSpamMemberId
    		},
    		okEvent: function(jmodal) {
    			var level1 = $j('input[name="reason"]:checked').val();
    			var level2 = 0;
    			if (level1 == null) {
    				jmodal.isCancelling = true;
    				$j('#selectReasonWarning').css('display','block');
    				return;
    			} else if (level1 != 4) {
    				level2 = $j('input[name="reason' + level1 + '"]:checked').val();
    			}
    			var pre = level1 + "" + level2;
    			var operations = "";
    			var custom;
    			$j('.level' + pre + ' input[name="check' + pre + '"]:checked').each(function(){
    				if (operations != "") {
    					operations += ",";
    				}
    				var checkIndex = $j(this).val();
    				operations += checkIndex;
    				if (checkIndex == 0) {
    					custom = $j(this).parent().next().val();
    				}
    			});

    	    	jQuery.ajax({
    	    		url : "/ajax/spamMember.html",
    	    	 	type : "POST",
    	    		data : { 
    	    			beSpamMemberId: beSpamMemberId,
    	    			entityId: entityId,
    	    			spamType: spamType,
    	    			level1: level1,
    	    			level2: level2,
    	    			operations: operations,
    	    			addition: custom
    	    		},
    	    		success : function(){
    	    			showmsg(true, '您已成功举报'+beSpamMemberName);
    	    		},
    	    		error : function(){
    	    			Renhe.alertError('举报出错，请稍后再试。');
    	    		}
    	    	});
    		}
    	});
	});
	
	$j("#shareForward").mouseover(function(){
		if (Renhe.tipsHideDelayTimer) clearTimeout(Renhe.tipsHideDelayTimer);
		$j("#shareWeiboDiv").show();
	}).mouseout(function() {
		if (Renhe.tipsHideDelayTimer) clearTimeout(Renhe.tipsHideDelayTimer);
    	Renhe.tipsHideDelayTimer = setTimeout(function () {
			$j("#shareWeiboDiv").hide();
		}, 200);
		return false;
	});
		
