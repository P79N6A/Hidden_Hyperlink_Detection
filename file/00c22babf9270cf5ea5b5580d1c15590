        	  return false;
    	});
    	
	function authWeiboCallback(){
    	$j("#weiboShareCheckbox").unbind("click");
    	$j("#weiboShareImg").unbind("click");
    	
    	$j("#weiboShareImg").bind("click", function(){
    	 	$j("#weiboShareCheckbox").click();
        });
    	$j("#weiboShareCheckbox").prop("checked", true);
    	showmsg(true,'与新浪微博的链接建立成功');
    }
	
	function authQqWeiboCallback() {
    	$j("#qqWeiboShareCheckbox").unbind("click");
    	$j("#qqWeiboShareImg").unbind("click");
    
    	$j("#qqWeiboShareImg").bind("click", function() {
    		$j("#qqWeiboShareCheckbox").click();
    	});
    	$j("#qqWeiboShareCheckbox").prop("checked", true);
    	Renhe.alertHide('与腾讯微博的链接建立成功');
	}
	
	$j("#tagNameInput").focusin(function(){
    	if($j(this).val() == "添加标签"){
    		$j(this).val("");
    	}
	}).focusout(function(){
    	if(jQuery.trim($j(this).val()) == ""){
    		$j(this).val("添加标签");
    	}
	});
