  <script type="text/javascript">
function PostAsk(check, username) {
    $.get("ajax.asp", {
        action: "ask",
        topicid: 9386413 ,
        checkid: check,
        uname: username
    }, function(data) {
        if (data == "1") {
            alert("设置为最佳答案成功");
            window.location.reload();
        } else {
            alert("操作失败！请重试");
        }
    });
}

$(function(){
	$.get("ajax.asp?k="+new Date().getTime(),{action:"zt",topicid:9386413,lable:"zhuanti_v6"},function(data){
	   if(data){$(".zhuanti_v6").html(data);$(".zhuanti_v6").show();$(".zhuanti_v6").fadeIn("slow");}
	});
})

$(function() {
    $("#EditSubmit").removeAttr("disabled");
    $("#EditSubmit").bind("click", function() {
        var constr = $("#ccooeditor").val(); //去掉空格
        constr = constr.replace(/\r/g, "");
        constr = constr.replace(/\n/g, "");
        constr = constr.replace(/\s/g, "");
        if (constr == "" || constr.length < 2) {
            $.dialog.alert('内容不能小于2个字符');
            editor.focus();
            return false
        }
        if ($("#ccooeditor").val() == "" || $("#ccooeditor").val().length > 60000) {
            alert('内容不能大于60000个字符');
            editor.focus();
            return false
        }
        var title = "温馨提示";
        var html = "<div id=showdetails class=topic><div class=showdetails></div></div>";
        showdialog(title, html, "340px");
        $('#form').ajaxSubmit(function(data) {
            if (data) {
                var arrRs = eval("(" + unescape(data) + ")");
                $(".topic").html(arrRs.message);
                if (arrRs.status == "1") {
                    apiclose();
                    setTimeout("window.parent.location.href='" + arrRs.Url + "'", 3000);
                    //
                    var msg = '';
                    if (arrRs.reMsg != '') {
                        msg += arrRs.reMsg;
                    } else {
                        msg += '回复成功';
                    }
                    if (arrRs.integral > 0) {
                        msg += '，成长值：<font color="red">+' + arrRs.integral + '</font>';
                    }
                    if (arrRs.coin > 0) {
                        msg += '，城市币：<font color="red">+' + arrRs.coin + '</font>';
                    }
                    $.dialog.tips(msg, 3, "success.gif");
                } else {
                    $(".topic").html(arrRs.message);
                    $("#EditSubmit").removeAttr("disabled");
                }
            } else {
                alert("服务器正忙,请稍等几秒钟,再试尝试发布数据！");
            }
            return false;
        });
        return false;
    });
});

// 分享
$(function() {
    $('.share_v5 a').click(function() {
        $.ajax({
            type: 'GET',
            url: '/forum/ajax_bbs.asp',
            data: {
                action: 'share',
                //topicid: 9386413,
                topicid: 0,
                n: Math.random()
            },
            dataType: 'json',
            success: function(data) {
                var msg = '';
                if (data.coin > 0) {
                    msg = '城市币：+' + data.coin + '，成长值：+' + data.integral + '';
                }
                if (msg != '') {
                    alert('完成分享，' + msg + '');
                }
            }
        })
    });
});
</script> 
