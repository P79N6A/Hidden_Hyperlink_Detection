  <script>
	$(function(){
		getHotOrgList();
		getReadRankingList(0);
		getZdmList();
		
		//getJrscProducts();
		getTruths();
	
		//内容推荐tab切换
		$(".tab-nav").find("li").click(function(){
			var index = $(this).index();
			$(this).addClass("current").siblings().removeClass("current");
			$(".tab-panes").children().hide().eq(index).show();
		});
		//阅读排行切换
		$(".ydph_select").find("li").click(function(){
			var index = $(this).index();
			$(this).addClass("current").siblings().removeClass("current");
			$(".ydph_list").hide().eq(index).show();
			getReadRankingList(index);
		});
			//情报速递，热评机构切换
		$(".qbsd_ul,.zxph_ul").find("li").mouseenter(function(){
			$(this).addClass("current").siblings().removeClass("current");
		});
		
		$("body").on("click",".closed,#shut",function(){
			$("#bg,#alert_box").hide();
			$("#alert_box").html("");
		});
		
		$("body").on("click","#addcardPublicBtn",function(){
			$("#alert_box").find("h4").html("购买结果确认");
			var htmlCon = "<div class='clearfix'><p class='fl'><img src='/r/cms/www/af/img/warning.png' alt='' /></p><p style='line-height:30px;margin-left:22%;'>请确认你已在对方平台里完成购买流程，并成功购买了理财产品！</p></div>";
				htmlCon +="<p class='tc mt20'><a href='/member/memberlicaiProductView.jspx' target='_blank' class='publicBtn' style='color:#fff'>成功购买</a><a href='javascript:;' onclick='return false;' class='ml50' id='shut' style='color:red'>关闭>></a></p>";
			$(".warn_content").html("").append(htmlCon);
			$(".warn_content").css({'width':'62%','margin':'0 19%','padding-top':'32px'});
		});
		
	});
	
//热评机构
function getHotOrgList(){
	$.ajax({
            type:"POST",
            url:"/company/ajaxGetHotOrg.jspx",
            datatype: "json",//"xml", "html", "script", "json", "jsonp", "text".
            beforeSend:function(){
            },
            success:function(data){
            	var html = $("#hotOrgTmpl").render(data);
            	 $("#hotOrgList").append(html);
            	 
            	 $(".zxph_ul").find("li").mouseover(function(){
					$(this).addClass("current").siblings().removeClass("current");
				});
            }
         });
}

//阅读排行
function getReadRankingList(index){
	var params = {pageSize:10,ranking:"d_7"};
	if(index==1){ //按月排行
		params = {pageSize:10,ranking:"d_30"};
	}
	$.ajax({
            type:"POST",
            url:"/afcontent/readrank.jspx",
            data:params,
            datatype: "json",//"xml", "html", "script", "json", "jsonp", "text".
            beforeSend:function(){
            	$("#weekReadList").empty();
            	$("#monthReadList").empty();
            },
            success:function(data){
            	var html = $("#readTmpl").render(data);
            	if(index==0){ //按周排行
            	 	$("#weekReadList").append(html);
            	 }else{
            		$("#monthReadList").append(html);
            	 }
            }
         });
}

//值得买
function getZdmList(){
	var params = {pageNumber:1,pageSize:3};
	$.ajax({
            type:"POST",
            url:"/index_page/ajax_load_zdm.jspx",
            data:params,
            datatype: "json",//"xml", "html", "script", "json", "jsonp", "text".
            beforeSend:function(){
            },
            success:function(data){
            	var html = $("#zdmListTmpl").render(data);
            	 $("#zdmList").append(html);
            }
         });
}

//金融市场产品
function getJrscProducts(){
	var params = {pageNumber:1,pageSize:6,onSiteValue:"2"};
	$.ajax({
            type:"POST",
            url:"/products/ajax_pagelist.jspx",
            data:params,
            datatype: "json",//"xml", "html", "script", "json", "jsonp", "text".
            beforeSend:function(){
            },
            success:function(data){
            	var html;
            	if(data.pager.pageCount>0){
	            	 html = $("#jrscListTmpl").render(data);
            	 }else{
            	 	html = "<thead><tr><td colspan='6'>抱歉,没有数据!</td></tr></thead>";
            	 }
            	 $("#jrscList").append(html);
            	 ljtzAction();
            }
         });
}

//真相曝光
function getTruths(){
	var params = {pageNumber:1,pageSize:3};
	$.ajax({
            type:"POST",
            url:"/truth/ajax_pagelist.jspx",
            data:params,
            datatype: "json",//"xml", "html", "script", "json", "jsonp", "text".
            beforeSend:function(){
            },
            success:function(data){
            	var html = $("#zxbgListTmpl").render(data.pager.result);
            	 $("#zxbgList").append(html);
            }
         });
         
       //卡片翻转
		var verticalArg = [{'width':0},{'width':'235px'}];
		verticalRoll($("#zxbgList"),100,verticalArg);
		
		function verticalRoll(target,time,opts){
			target.on("mouseenter",".vertical",function(){
				$(this).find(".read-truth-con").stop().animate(opts[0],time,function(){
					$(this).hide().next().show();
					$(this).next().animate(opts[1],time);
				});
			});
			target.on("mouseleave",".vertical",function(){
				$(this).find(".read-truth-back").animate(opts[0],time,function(){
					$(this).hide().prev().show();
					$(this).prev().animate(opts[1],time);
				});
			});
		}
}

//立即投资事件
function ljtzAction(){
	$(".ljtz").click(function(){
		$("#bg").height($("body").height());
		var htmlCon = "<h4 class='tc clearfix'>亚财 - 加息提醒</h4><span class='closed'></span><div class='warn_content'>";
			htmlCon += "<p class='cp_title'>"+ $(this).parents(".cjs-tr").find(".yxcp-tit").html() + "</p>";
			htmlCon += "<ul><li>亚财投资期限<span>"+ $(this).parents(".cjs-tr").find(".yxcp-time").html() +"</span></li>";
			htmlCon += "<li>亚财起投金额<span>"+ $(this).parents(".cjs-tr").find(".yxcp-qtmoney").html() +"</span></li>";
			htmlCon += "<li>亚财封顶限额<span>"+ $(this).parents(".cjs-tr").find(".yxcp-zdmoney").html() +"</span></li></ul>";
			htmlCon += "<div class='warn_message mt20 mb20'><span class='fl'>注：</span>";
			htmlCon += "<p>1、请详细确认投资信息，并按照提示要求进行投资，低于起投资金或要求限额都将无法使用加息卡。<br/>2、为确保加息卡能够使用，请您在注册时确保在本平台中填写的手机号及其他身份信息与投资平台填写的信息真实有效并保持一致。<br>3、购买同一理财平台的理财产品，亚财只提供一次加息。</p></div>";
			htmlCon += "<p class='tc'><a href='/member/market_go_buy.jspx?id="+$(this).attr("id")+"' target='_blank' class='publicBtn' style='color:#fff' id='addcardPublicBtn'>确认</a></p>";
			htmlCon += "</div>";
		$("#alert_box").css({'width':'650px','margin-left':'-325px'}).append(htmlCon);
		$(".warn_content").css({'width':'90%','margin':'0 5%','padding':'10px 0 18px'});
		$(".cp_title").css({'font-size':'1.35em','color':'#363636','margin':'15px 0 10px'});
		$("#alert_box ul").css({'width':'100%','border-bottom':'1px solid #e4e4e4','padding-bottom':'15px','overflow':'hidden'});
		$("#alert_box ul li").css({'width':'50%','float':'left','color':'#747474','margin':'5px 0'}).find("span").css({'margin-left':'8%','color':'#000'});
		$("#alert_box .warn_message").css({'font-size':'0.8em','color':'#747474'}).find("p").css({'margin-left':'32px'});
		$("#bg,#alert_box").show();
		$("#alert_box").css('top', $(document).scrollTop() + $(window).height()/2-200 );
	});
}
</script> 
