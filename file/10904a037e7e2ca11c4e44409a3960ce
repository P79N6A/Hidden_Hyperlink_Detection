  <script>
	$(function(){
		Cms.viewCount("","92862"); //刷新浏览量
		
		ajaxLoadCommentData(); //加载评论
	
		//引入qqface插件
		$('.emotion').qqFace({
			id : 'facebox', 
			assign:'reply_textarea',
			path:'/r/cms/www/af/img/arclist/'	//表情存放的路径
		});
		
		$("#moreComment").click(function(){
			ajaxLoadCommentData();
		});
		
		$("#tgdr>li").click(function(){
			window.open($(this).attr("data-href"));
		});
		
		
	//评论返回结果
	Cms.comment(function(data) {
          if(data.status==0) {
              alert("评论成功");
              //location.href=location.href.replace("#","");
              $("textarea[name='commText1']").val("");
              location.reload();
          } else if(data.status==1) {	
              alert("验证码错误");
              $("#commentCaptcha").click();
          } else if(data.status==2) {	
              alert("内容不存在");
              $("#commentCaptcha").click();
          } else if(data.status==3) {	
              alert("评论关闭");
              $("#commentCaptcha").click();
          } else if(data.status==4) {	
              alert("需要登录评论");
              $("#commentCaptcha").click();
          }else if(data.status==5) {	
              alert("请为安全评分打分");
              $("#commentCaptcha").click();
          }else if(data.status==6) {	
              alert("请为收益率打分");
              $("#commentCaptcha").click();
          }else if(data.status==7) {	
              alert("请为变现速度打分");
              $("#commentCaptcha").click();
          }else if(data.status==8) {	
              alert("请为用户体验打分");
              $("#commentCaptcha").click();
          }else if(data.status==9) {	
              alert("已经评论过，不能重复评论");
              $("#commentCaptcha").click();
          } else if(data.status==99) {	
              alert("参数错误");
              $("#commentCaptcha").click();
          }else if(data.status==100) {	
              alert("内容不存在");
              $("#commentCaptcha").click();
          } else if(data.status==101) {	
              alert("评论不能为空");
              $("#commentCaptcha").click();
          } else {
              alert("评论失败");
              $("#commentCaptcha").click();
          }
          
          $("#commentForm").find("input[type='submit']").show();//显示发布按钮 防止重复提交
      },"commentForm","");
		
	});
	

/**********评论start***************/

     
     	 
 //加载数据
 function ajaxLoadCommentData(params){
 	var $moreComment = $("#moreComment");
 	var pageNumber = $moreComment.attr("pageNumber");
	if(typeof(pageNumber)=='undefined'){
		pageNumber = 1;
	}else{
		pageNumber = parseInt(pageNumber);
	}
 	
 	var params = {pageNumber:pageNumber,pageSize:2,id:"92862"};
  	$.ajax({
            //提交数据的类型POST GET
            type:"POST",
            //async : false,
            //提交的网址
            url:"/comment/ajaxLoadContent.jspx",
            //提交的数据
            data:params,
            //返回数据的格式
            datatype: "json",//"xml", "html", "script", "json", "jsonp", "text".
            //在请求之前调用的函数
            beforeSend:function(){
            },
            //成功返回之后调用的函数            
            success:function(data){
				 var html = $("#commentTmpl").render(data.pager.result);
				 $("#commentList").append(html);
				 var pageCount = data.pager.pageCount;
				 if(pageCount<=pageNumber)
				 {
				 	$moreComment.hide();
				 }else{
				 	pageNumber = pageNumber+1;
				 	$moreComment.attr("pageNumber",pageNumber);
				 }
            },
            //调用执行后调用的函数
            complete: function(XMLHttpRequest, textStatus){
            	    activateEvent();  //激活事件
            },
            //调用出错执行的函数
            error: function(){
                //请求出错处理
            }         
         });
         
  }
  
   //激活事件
   function activateEvent(){
	   	//回复评论
		$(".comment_replay").click(function(){
			var $obj = $(this).parents(".re_mark").find(".reply_sub");
			
			var id = $obj.attr("id");
			var commId = id.split("_")[1];
			$commentReplay = $(this);
			$.ajax({
	            //提交数据的类型POST GET
	            type:"GET",
	           // async : false,
	            //提交的网址
	            url:"/replay/ajax_load_pager.jspx",
	            //提交的数据
	            data:{commId:commId},
	            //返回数据的格式
	            datatype: "json",//"xml", "html", "script", "json", "jsonp", "text".
	            //在请求之前调用的函数
	            beforeSend:function(){
	            	var replyTypeValue = $("#replyTypeValue").val();
	            	if(replyTypeValue!="1"){
	            		$("#replyTypeValue").val("1");
	            	}
	            	$("#"+id).empty();
	            },
	            //成功返回之后调用的函数            
	            success:function(data){
   					var html = $("#replyTmpl").render(data);
   					$("#"+id).append(html);
   					
   					$commentReplay.parents(".comment_item").siblings().find(".reply_sub,.comment_sub").hide();
					if($obj.is(":hidden")){
						$commentReplay.parents(".re_mark").find(".reply_sub,.comment_sub").show();
					}else{
						$commentReplay.parents(".re_mark").find(".reply_sub,.comment_sub").hide();
					}
  						
					//评论回复插入表情 再次激活绑定		 
					$('.emotion').qqFace({
						id : 'facebox', 
						assign:'reply_textarea', 
						path:'/r/cms/www/af/img/arclist/'	//表情存放的路径
					});
					
					
					//回复原评论者
					$(".comment_sub_replay").each(function(){
						n = 0;
						$(this).click(function(){
							$that = $(this).parents(".comment_sub").prev().find("textarea").last();
							var _targetTop = $that.offset().top-300;
							$("html,body").animate({scrollTop:_targetTop},300);
							$that.animate({borderWidth:5},300 ).animate({borderWidth:0},100 ).css("paddingTop",30);
							//$that.next().show().html("回复：");
							$that.focus().html("");
							
							$("#replyTypeValue").val("2");
						});
					});
					
	            },
	            //调用执行后调用的函数
	            complete: function(XMLHttpRequest, textStatus){
	            },
	            //调用出错执行的函数
	            error: function(){
	                //请求出错处理
	            }         
	         });
			
		});
	
   }
   
   //评论输入长度校验
  function commentInputCheck(obj,sign){
  	var content = obj.value;
  	var allowInputLength = 320 - content.length;
  	if(sign=="c"){
  		$("#commentInputAlert").text(allowInputLength);
  	}else{
  		$(obj).parents(".reply_form").find(".replyInputAlert").text(allowInputLength);
  	}
  }
/**********评论end***************/


 //Helper 获取用户昵称  如果为空返回‘用户头像’
 $.views.helpers({
   "getUserAliasName": function(aliasName){
   	if(typeof(aliasName)=="undefined"){
   		return "用户头像";
   	}
       return aliasName;
   }
 });
