   <script type="text/javascript">
		// 手机端搜索框、导航栏显示
		targetShow('.app-nav-show', '.app-nav');
		targetShow('.app-header-search', '.app-search-div');
		function targetShow(obj, goal){
			$(obj).on('click', function(event){
				event.stopPropagation();
				$('.app-header').children(':not(' +"'"+ goal +"'"+ ')').hide().eq(0).show();
				if( $(goal).is(':hidden') ){
					$(goal).slideDown();
				}else{
					$(goal).slideUp();
				}
			});
			$(document).on('click', function(event){
				if( $(event.target).closest('.app-search-div').length == 0){
					$(".app-nav,.app-search-div").hide();
				}
			});
		}
	</script> 
