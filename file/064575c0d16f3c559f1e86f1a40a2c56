    <script>
	$("#comments").load("/comments/loadComments.action?newsId=15726&tf=" + new Date().getMilliseconds(), function(){
		
			login_mod();
		
	});
	
	function more_comments(o, page){
		$.get("/comments/loadComments.action?newsId=15726&currentPage=" + page + "&tf=" + new Date().getMilliseconds(), function(text){
			$("#comments").find(".np-load-more").remove();
			$("#comments").append(text);
			
				login_mod();
			
		});
	}
	function submitComment(o){
		
	}
	
	function commentUp(o, id){
		$.post($(o).closest("form").attr("action"), $(o).closest("form").serialize(),function(text){
			if(text == "-1"){
				alert("您已支持过");
			}else{
				$(o).html("(<em>" + text + "</em>)");
			}
		});
	}
	
	function submitReply(o){
		$(o).attr("disabled", true);
		$.post($(o).closest("form").attr("action"), $(o).closest("form").serialize(),function(text){
			$(o).removeAttr("disabled");
			
			if(text == "-5"){
				alert("请先登录");
				return;
			}
			
			if(text == "1"){
				$(o).siblings(".tips").show();
				return;
			}
			
			$(o).siblings(".tips").hide();
			$(o).closest("form").find("textarea").val("");
			$(o).closest(".np-post").after(text);
			$(o).closest(".np-post").remove();
		});
	}
	
	function loadCommentsLine(){
		$(".np-postlink").each(function(){
			if($(this).attr("t") != "f"){
				$(this).fancybox({				
					   closeBtn : false,
					   maxWidth	: 700,
					  maxHeight : 480,
					      title : null,
						   type : 'iframe'
				});
				
				$(this).attr("t", "f");
			}
		});
	}
	
	function delete_comment(o){
		$.post($(o).closest("form").attr("action"), $(o).closest("form").serialize(),function(text){
			
			if(text == "-5"){
				alert("请先登录");
				return;
			}
			
			if(text == "1"){
				$(o).closest(".np-post-body").find(".ctarget").html('<span style="color:gray;line-height:45px;">该评论已被删除</span>');
				$(o).closest(".np-post-footer").empty();
			}
			
		});
	}
</script> 
