     <script type="text/javascript">
var ue;
var filecount = 0;
function b(){	
	t = parseInt(x.css('top'));
	y.css('top','19px');	
	x.animate({top: t - 19 + 'px'},'slow');	
	if(Math.abs(t) == h-19){ 
		y.animate({top:'0px'},'slow');
		z=x;
		x=y;
		y=z;
	}
	setTimeout(b,3000);
}
$(document).ready(function(){
	$('.swap').html($('.news_li').html());
	x = $('.news_li');
	y = $('.swap');
	h = $('.news_li li').length * 19; 
	setTimeout(b,3000);
	
	$('.modalboxTg').qtip({
		content: {
			title: {
				text: '投稿',
				button: '关闭'
			},
			//url: '/news/loadTgAlex.action'
			text: $(".tgbox").html()
		},
		position: {
			target: $(document.body), 
			corner: 'center'
		},
		show: {
			when: 'click',
			solo: true 
		},
		hide: false,
		style: {
			width: 820,
			padding: '14px',
			border: {
				width: 9,
				radius: 9,
				color: '#666666'
			},
			name: 'light'
		},
		api: {
			beforeShow: function(){
				$('#qtip-blanket').fadeIn(this.options.show.effect.length);
			},
			beforeHide: function(){
				$('#qtip-blanket').fadeOut(this.options.hide.effect.length);
			},
			onRender: function(){
				$(".bdEditor").first().removeAttr("id");
				$(".tgForm").first().removeAttr("id");
				$(".uploadify").first().removeAttr("id");
				
				ue = UM.getEditor('bdEditor',{
		            toolbar:['undo redo | bold italic underline strikethrough | superscript subscript | forecolor backcolor |',
		                     'paragraph fontfamily fontsize' ,
		                     'link unlink | image insertvideo',
		                     'selectall cleardoc',
		                     '| print preview fullscreen'
		                     ],
		            autoFloatEnabled:false,
		            imageUrl:"/manage/attached/imageUp.action",
		            imagePath:"/",
		            dropFileEnabled:false
		        });
				
				$("#uploadify").uploadify({
			        'swf'         : '/resources/uploadify/uploadify.swf',
			        'uploader'    : '/manage/attached/upload.action?dir=file',
			        'buttonText' : '选择附件',
			        'fileSizeLimit' : '20MB', //20M
			        'removeTimeout' : 0,
			        'successTimeout' : 0,
			        'onSelect' : function(file) {
			        	filecount += 1;
			        	if(filecount > 5){
			        		alert("只允许上传 5 个附件");
			        		filecount -= 1;
			        		$("#uploadify").uploadify('cancel', file.id);
			        	}
			        },
			        'onUploadSuccess' : function(file, data, response) {
			        	var json = $.parseJSON(data);
			        	if(json.error == 1){
			        		alert(json.message);
			        	}else{
			        		$("#uploadify").parent().append('<div class="uploadify-queue-item"><input name="filepath" value="' + json.url + '" type="hidden"/><input name="filename" value="' + json.oname + '" type="hidden"/><div class="cancel"><a href="javascript:void(0)" url="' + json.url + '" onclick="deleteFile(this)">X</a></div><span class="fileName">' + json.oname + '</span><span class="data"></span></div>');
			        	}
			        }
			    });
			}
		}
	});
	
	
	$('<div id="qtip-blanket">').css({
		position: 'absolute',
		top: $(document).scrollTop(),
		left: 0,
		height: $(document).height(),
		width: '100%', 
		opacity: 0.7, 
		//backgroundColor: 'black',
		zIndex: 5000  
	})
	.appendTo(document.body)
	.hide();
	
	$("#dropdown-menu").hover(
		function(){
			showDropdownMenu(this);
		},
		function(){
			hideDropdownMenu();
		}
	);
	$(".dropdown-menu").hover(
			function(){
				dropdownMenuFocused = true;
			},
			function(){
				dropdownMenuFocused = false;
				hideDropdownMenu();
			}
		);
});
var dropdownMenuFocused = false;
var dropdownMenuAction;
function showDropdownMenu(e){
	if(dropdownMenuAction){
		clearTimeout(dropdownMenuAction);
	}
	if($(".dropdown-menu").is(":hidden")){
		var p = getPosition(e);
		$(".dropdown-menu").css("top",p[0] + e.offsetHeight + "px");
		$(".dropdown-menu").css("left",p[1] + e.offsetWidth - 80 + "px");
		$(".dropdown-menu").fadeIn(400);
	}
}
function hideDropdownMenu(){
	dropdownMenuAction = setTimeout(function(){
		if(!$(".dropdown-menu").is(":hidden") && !dropdownMenuFocused){
			$(".dropdown-menu").fadeOut(300);
		}
	},400);
}

function getPosition(e){
	var t=e.offsetTop;
	var l=e.offsetLeft;
	while(e=e.offsetParent){
		t+=e.offsetTop;
		l+=e.offsetLeft;
	}
	return [t,l];
}

function tgSubmit(obj){
	$(obj).hide();
	$(obj).next("span").show();
	$.post("/draftNews/save.action", $("#tgForm").serialize(), function(data){
		if(data == "1"){
			alert("您的投稿已提交成功，非常感谢您的支持！");
			$("#tgForm")[0].reset();
			ue.setContent("");
			$(".uploadify-queue-item").remove();
			filecount = 0;
		}else{
			alert(data);
		}
		$(obj).show();
		$(obj).next("span").hide();
	});
}

function deleteFile(obj){
	filecount -= 1;
	$(obj).parent().parent().remove();
	$.ajax({
		   type: "POST",
		   url: "/manage/attached/deleteAlex.action",
		   data: {"path":$(obj).attr("url")}
	});
}
</script> 
