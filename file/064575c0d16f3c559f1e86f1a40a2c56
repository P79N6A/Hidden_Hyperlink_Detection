    <script>
$(function(){
	$("#newsContent").find("img").each(function(i){
		
			$(this).css("display", "block").css("margin", "0 auto");
		
		if(!$(this).next().is('strong')){
			if(i != 0){
				$(this).css("margin-top", "15px");
			}
			if(i == $("#newsContent").find("img").length - 1){
				$(this).css("margin-bottom", "15px").css("margin-top","5px");
			}
		}
		if($(this).parent().is('p')){
			$(this).parent().css("text-indent", "0px");
		}
	});
	$("#newsContent").find("strong").each(function(){
		if($(this).parent().is('p') && ($(this).parent().css("text-align") == "center" || $(this).parent().attr("align") == "center")){
			$(this).parent().css("text-indent", "0px");
		}
	});
	$("#newsContent").find("p").each(function(){
		if($(this).css("text-align") == "center" || $(this).attr("align") == "center"){
			$(this).css("text-indent", "0px");
		}
	});
	
		$("#newsContent").css("font-size", "14px").css("line-height", "30px");
		$("#newsContent").find("div").each(function(){
			if($.trim($(this).text()).length > 0){
				$(this).css("font-size", "14px").css("line-height", "30px");
				if($(this).css("text-align") != "center"){
					$(this).css("text-indent", "28px");
				}
			}
		});
		
		$("#newsContent").css("text-indent", "28px");
	
	//$("#newsContent").after('<img src="http://s.jiathis.com/qrcode.php?url=' + encodeURIComponent(location.href) + '" width="100" height="100" title="分享到微信朋友圈" alt="二维码加载失败..." style="margin-bottom: 20px;margin-top: 10px;margin-right:10px;float:right;">');
});
</script> 
