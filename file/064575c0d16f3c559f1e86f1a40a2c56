	$(function(){
		
		
		$('.modalbox').qtip({
			content: {
				title: {
					text: '选择国家地区',
					button: '关闭'
				},
				text: $(".tipbox").html()
			},
			position: {
				target: $(document.body), 
				corner: 'center'
			},
			show: {
				when: 'click',
				solo: true 
			},
			hide: false,
			style: {
				width: { max: 1020 },
				padding: '4px',
				border: {
					width: 4,
					radius: 3,
					color: '#666666'
				},
				name: 'light'
			},
			api: {
				beforeShow: function(){
					$('#qtip-blanket').fadeIn(this.options.show.effect.length);
				},
				beforeHide: function(){
					$('#qtip-blanket').fadeOut(this.options.hide.effect.length);
				},
				onRender: function(){
					$(".qtip-content .map_big a").bind("click", function(){setBaseTag($(this).text());});
					$(".qtip-content .name_0").bind("click", function(){setBaseTag("");});
				}
			}
		});
		$('<div id="qtip-blanket">').css({
			position: 'absolute',
			top: $(document).scrollTop(),
			left: 0,
			height: $(document).height(),
			width: '100%', 
			opacity: 0.7, 
			backgroundColor: 'black',
			zIndex: 5000  
		})
		.appendTo(document.body)
		.hide();
	});
	function setBaseTag(baseTag){
		$.post("/news/setBaseTag.action", {"baseTag":baseTag}, function(msg){location.href = "/news/index.action"});;
	}
	function searchMap(q){
		$(".searchMapResult").empty();
		if(q.length == 0){
			return;
		};
		$(".qtip-content .map_big a").each(function(){
			if($(this).text().indexOf(q) != -1){
				$(".qtip-content .searchMapResult").append('<li><a href="#" onclick="setBaseTag(\'' + $(this).text() + '\')">' + $(this).text() + '</a></li>');
			}
		});
	}
	$(function(){
		$("#mapbox").hover(
		  function () {
			  $(this).addClass("raised").attr("src", "/resources/img/map-shadow.png");
		  },
		  function () {
			  $(this).removeClass("raised").attr("src", "/resources/img/map.png");
		  }
		);
	})
</script> 
