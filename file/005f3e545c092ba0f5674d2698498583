function sortcheck(num)
{
	switch(num)
	{
		case '1':
			fm1.action = '/search/cd.php';
			break;
		case '2':
			fm1.action = '/search/cy.php';
			break;
		case '3':
			fm1.action = '/search/mrmy.php';
			break;
		case '4':
			fm1.action = '/search/sc.php';
			break;
		case '5':
			fm1.action = '/search/xhy.php';
			break;
		case '6':
			fm1.action = '/search/xh.php';
			break;
		case '7':
			fm1.action = '/search/wwyl.php';
			break;
		default:
			fm1.action = '/search.php';
	}
}
</script> 
