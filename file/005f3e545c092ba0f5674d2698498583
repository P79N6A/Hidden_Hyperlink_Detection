$(document).ready(function(){
	
	//文章内容图片自动缩小
	$("#content").find("img").each(function(){
		resizeimg(this,675,650);
	});
	
	<!--点赞功能 2014-04-11 @hupeng-->
	$("#praise").click(function() {
		var accid = $("input[name='_acc_id']").val();
		var artid = $("input[name='_art_id']").val();
		var pranum = $("input[name='_pranum']").val();
		$.ajax({
			url:'/app/praise/index.php',
			type:'get',
			data:{accid:accid,artid:artid,pranum:pranum},
			success:function(res) {
				if(res == '您已经赞过了哦') {
					alert(res);
				} else {
					var result = res;
					alert('点赞成功');
					$("#praise").html('赞(' + result + ')');
				}
			}
		});
	});

});


function resizeimg(ImgD,iwidth,iheight) {
	var image=new Image();
	image.src=ImgD.src;
	if(image.width>0 && image.height>0){
		if(image.width>iwidth){
		   ImgD.width=iwidth;
		   ImgD.height=(image.height*iwidth)/image.width-10;
		}else{
			  ImgD.width=image.width;
			  ImgD.height=image.height;
		}
    }
}
function msgchk()
{
	if(document.getElementById('tex').value == '' || document.getElementById('tex').value.length>1000)
	{
		alert('评论不能为空或超过1000字符，现在字数为'+document.getElementById('tex').value.length);
		return false;
	}
	
	/*
	if(! /^[0-9]{4}$/.test(document.getElementById('extCode').value))
	{
		document.getElementById('extCode').focus();
		document.getElementById('extCode').style.backgroundColor = "#FFFFCC";
		return false;
	}
	*/
	document.getElementById('msgForm').submit();
}

function count()
{
	document.getElementById('contentsTips').innerHTML='当前字数:'+document.getElementById('tex').value.length;
}

function informant(topicid)
{
	o = document.getElementById('artContentBg');
	oo = document.getElementById('artContent');
	o.style.display="block";
	oo.style.display="block";
	o.style.position="absolute";
	oo.style.position="absolute";
	o.style.overflow="hidden";
	oo.style.overflow="hidden";
	o.style.padding="100 100 0 100";
	oo.style.padding="100 100 0 100";
	o.style.left = 0;
	oo.style.left = 0;
	o.style.right = 0;
	oo.style.right = 0;
	o.style.width = window.document.documentElement.clientWidth-200;
	oo.style.width = window.document.documentElement.clientWidth-200;
	o.style.height = window.document.documentElement.scrollHeight;
	oo.style.height = window.document.documentElement.scrollHeight;
	o.style.filter = "alpha(opacity=92)";
	o.style.backgroundColor = '#000';
	oo.style.color = '#fff';
	oo.innerHTML = "<input type='button' value='举报' onclick=\"document.getElementById('forminf').submit();\"><input type='button' value='取消' onclick=\"window.location.reload();\">&nbsp;&nbsp;举报理由：<textarea id='artinf' name='artinf' style='width:100%;height:300px'></textarea><input type='hidden' name='topicid' value='"+topicid+"'>";
}
