onecount=125;

function changelocation(locationid)
    {
    document.form11.subtype.length = 0; 

    var locationid=locationid;
    var i;
    for (i=0;i < onecount; i++)
        {
            if (subcat[i][1] == locationid)
            { 
			    document.form11.subtype.options[0]= new Option("所有子类", "");
                document.form11.subtype.options[document.form11.subtype.length] = new Option(subcat[i][0], subcat[i][2]);
            }        
        }
        
    }    
 </script> 
