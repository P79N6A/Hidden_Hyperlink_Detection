											dialog2.after('hide', function(){
												this.destory();
											});
                                            //确认投递
                                            $(".apply_mismatching").on("click", "#btnvYes", function (e) {
                                                $(".apply_job").find("#frmApply")[0].submit();
                                                return false;
                                            });
                                            //放弃投递
                                            $(".apply_mismatching").on("click", "#btnvClose", function (e) {
                                                dialog2.hide();
                                            });
                                            */
                                        }else{
                                            $(".apply_job").find("#frmApply")[0].submit();
                                            return false;
                                        }
                                    }
                                });
                            }
                        });
                    }
                }
            });

            
		}
	});
		
	
