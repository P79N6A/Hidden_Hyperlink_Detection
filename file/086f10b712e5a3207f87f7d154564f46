		if (islogin) {
		    //已达投递上线限弹窗提示    
	        if (OverplusApplycount == 0) {
                var dialog_limit = new Dialog({
    				idName : 'apply_limit',
    				title : '提示',
    				content : '/job/Applylimit/'+'-v-'+Math.random(),
    				isOverflow : true,
    				close : 'x',
