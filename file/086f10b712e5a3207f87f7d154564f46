<script type="text/javascript">
    /*
     * 查询js
     */
    hbjs.use('@search', function(m){
        var $ = m['jquery'],
            trigger = $('#browser'),
            popup = m['widge.popup'],
            p = new popup({
                idName: 'navBox panelBox',
                width: 550,
                height: 'auto',
                align: {
                    baseElement: trigger,
                    baseXY: ['-50%', '100%+10']
                }
            }),
            hideTimer,
            element = p.get('element');

        $($('#boxNav').remove().html()).appendTo(element);
        trigger.on('mouseenter', enterHandle).on('mouseleave', leaveHandle);
        element.on('mouseenter', enterHandle).on('mouseleave', leaveHandle);

        function enterHandle(){
            hideTimer && clearTimeout(hideTimer);
            p.show();
        }
        function leaveHandle(){
            hideTimer && clearTimeout(hideTimer);
            hideTimer = setTimeout(function(){
                p.hide();
            }, 120);
        }

        //头部搜索
        var search = new m['product.jobSearch.jobTopSearch']({
            selectedIndex:0,
        initDataSource: '/head/SearchKeyword',
                dataSource:[
            'http://www.huibo.com/index/auto/?limit=12&timestamp={{timestamp}}&type=job&q={{query}}&callback=jsonpcallback',
            'http://www.huibo.com/index/auto/?limit=12&timestamp={{timestamp}}&type=company&q={{query}}&callback=jsonpcallback'
        ],
                url: [
            'http://www.huibo.com/jobsearch/?key={{query}}',
            'http://www.huibo.com/jobsearch/?params=u2&key={{query}}',
            'http://www.huibo.com/jobsearch/?params=u3&key={{query}}'
        ],
                placeHolder: [
            '找一找，总有适合您的工作',
            '请输入公司名称',
            '请输入职位名称'
        ],
                search: {
            width: 310
        }
    });


    var searchInput = search.getSearch(),
            searchSelect = search.getSelect(),
            maxSize = 10;
    searchInput.on('itemAllDelete', function(e){
        $.getJSON('/head/ClearSearchKeywords/');
    });
    searchInput.on('itemDeleted', function(e){
        $.getJSON('/head/DelSearchKeyword/keyword-'+e.value+'');
    });
    searchInput.on('searchItemSelected', function(e){
        //e.url是链接
        //e.data.text是对应的文字
        //e.index是索引号
        var index = searchSelect.get('selectedIndex'),
                key = e.data.text;
        if(e.url&&index==0){
            $.getJSON('/head/SaveJobkey/keyword-'+key+'',function(result){
                window.location.href = e.url;
            });
        }else {
            window.location.href = e.url;
        }
    });
    searchInput.before('show', function(){
        this.setLevel(99);
        p.setLevel(98);
    });
    p.before('show', function(){
        this.setLevel(99);
        searchInput.setLevel(98);
    });

    search.on('submit', function(e){
        if(e.index==0&&e.value) {
            $.getJSON('/head/SaveJobkey/keyword-'+e.value+'',function(result){
                window.location.href = e.url;
            });
        }else {
            window.location.href = e.url;
        }
    });


    var confirmBox = m['widge.overlay.confirmBox'];
        Dialog = m['widge.overlay.hbDialog'];

    var userEnterBox = $('#userEnterBox,.login_regAge');
    userEnterBox.on('mouseenter mouseleave', '.login, .register, .personage', function(e){
        var target = $(e.currentTarget);
        target.toggleClass('hover');
    });




    var lgAftBox = $('#lgAftBox');
    lgAftBox.on('mouseenter mouseleave', '.psnCenter', function(e){
        var target = $(e.currentTarget);
        if(e.type === "mouseenter"){
            target.addClass('hover');
            $('#lgaftItem').css('display','block');
        } else {
            target.removeClass('hover');
            $('#lgaftItem').css('display','none');
        }
    });

    var isLogin = false;
    var cookie = m['tools.cookie'];
    var _showRefeshConfirm = cookie.get('_hideRefeshConfirm');
    if(isLogin && (_showRefeshConfirm != 1)){
        setRefeshConfirmCookie();
        _checkRefesh('ajaxlogin');   
    }
    //点击刷新按钮
    $("#refresh").on('click',function(){
        _checkRefesh('index');   
    })

    function setRefeshConfirmCookie(){
        var tomorrow = new Date("2017/04/03 00:00:00");
        cookie.set('_hideRefeshConfirm',1,{expires:tomorrow,path:'/',domain:".huibo.com"});
    }

    function doRefresh() {
         $.ajax({
            type : "get",
            url :"http://person.huibo.com/resume/refresh",
            dataType : "jsonp",
            jsonp: "callbackparam",
            success : function(json){
                if(json.status){
                    confirmBox.timeBomb("刷新成功", {
                        name : 'success',
                        timeout : 2000
                    });
                    $('#jian_li_shuaxin').hide();
                    $('#jianlishuaxin_line').hide();
                } else {
                    confirmBox.timeBomb("每天只能刷新一次简历", {
                        name : 'warning',
                        width : 240,
                        timeout : 2000
                    });
                }
            },
            error:function(e){
                console.log('ajax fail');
            }
        });
    }

    function _checkRefesh(src){
        var src = src || 'index';
        $.ajax({
            type : "get",
            url :"http://person.huibo.com/index/checkrefesh?src="+src,
            dataType : "jsonp",
            jsonp: "jsonpCallback",
            success : function(json){
                if(json.status) {
                    var tdialog = new Dialog({
                        close: 'x',
                        idName: 'refresh_dialog',
                        title: '温馨提示',
                        width: 500
                    });
                    tdialog.setContent(json.html).show();
                    tdialog.after('hide', function(){
                        tdialog.destory();              
                    });
                } else {
                    if(src != 'ajaxlogin'){
                        if(0 == 1) {
                            doRefresh();return;
                        }
                        confirmBox.confirm('简历当前为未公开状态，确认刷新后，将自动被公开', null, function () {
                                this.hide();doRefresh();return;
                            }, function() {
                                this.hide();
                            }, {
                                confirmBtn: '<button class="button_a button_a_red">确定</button>',
                                cancelBtn: '<button class="button_a cancelbtn">取消</button>',
                                width : 320
                            });
                    }   
                }
            },
            error:function(e){
                console.log('ajax fail');
            }
        });
    }

    /*退出按钮*/
    $("#userOut").click(function(){
        $.ajax({
            'url':'/index/signOut',
            'type':'get',
            'dataType':'json',
            'success':function(json){
                if(json.success){
                    $("#userEnterBox").show();
                    $("#lgAftBox").hide();
                    var msg = '退出成功';
                    confirmBox.timeBomb(msg, {
                        name: 'success',
                        width: 150,
                        timeout: 1000
                    });
                    setTimeout('document.location.reload();',1000);
                }else{
                    var msg = '退出失败';
                    confirmBox.timeBomb(msg, {
                        name: 'fail',
                        width: 150,
                        timeout: 1000
                    });
                }
            }
        });
        return false;
    });
    //窗口尺寸
    /*
     (function(){
     var minWidth = 1172,
     win = $(window),
     body = $(document.body),
     orianleWidth = win.width(),
     minClass = "minBody",
     maxClass = "maxBody",
     type = 2;
     win.on('resize', function(){
     resetLayout();
     });
     function resetLayout(){
     searchInput.resetSize(win.width() <= minWidth ? 310 : 333);
     if(type === 2 && win.width() <= minWidth){
     body.addClass(minClass);
     type = 1;
     } else if(type === 1 && win.width() > minWidth){
     body.removeClass(minClass);
     type = 2;
     }
     }
     resetLayout();
     })();
     */
    });



    function web_sub(){
        document.getElementById("web_subscribe_form").submit()
    }



</script>
