    <script>
        function chooseContent(create_url, stock_type) {
            $("#splashModal").modal('hide');
            var modal = $("#contentChooseModal");
            modal.modal();
            if (stock_type == "toutiao") {
                $("#choose_c1").show();
                $("#choose_c2").show();
                $("#choose_c3").hide();
                $("#choose_c4").hide();
                $("#choose_c5").hide();
                $("#choose_c6").hide();
                $("#choose_c7").show();
                $("#choose_c9").show();
            } else if (stock_type == "gd") {
                $("#choose_c1").show();
                $("#choose_c2").show();
                $("#choose_c3").show();
                $("#choose_c4").show();
                $("#choose_c5").hide();
                $("#choose_c6").hide();
                $("#choose_c7").show();
                $("#choose_c9").show();
            } else if (stock_type == "essay") {
                $("#choose_c1").hide();
                $("#choose_c2").hide();
                $("#choose_c3").hide();
                $("#choose_c4").hide();
                $("#choose_c5").show();
                $("#choose_c6").show();
                $("#choose_c7").hide();
                $("#choose_c9").hide();
            }
            $("#create_url").val(create_url);
            return false;
        }

        function create_ad_plan() {
            var create_url = $("input[name='create_url']").val();
            var content_type = $("input[name='content_type_']:checked").val() || "";
            $btn = $("input[name='content_type_']:checked")
            system_origin = ''
            if($btn.attr('id') == 'article_promotion') {
                system_origin = 3
            }

            if (content_type == "") {
                $.fixAlert("请选择广告投放类型");
                return false;
            }
            location.href = create_url + "&content_type_=" + content_type + "&system_origin=" + system_origin;
        }
    </script>

