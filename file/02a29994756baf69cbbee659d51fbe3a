        var adAdmin,adAgent,adAdvertise;
        
            
            adAdvertise = '';
            
        

        // 用户角色
        GLOBAL_VAR = typeof GLOBAL_VAR == "undefined" ? {} : GLOBAL_VAR;
        GLOBAL_VAR.ROLE = (function(){
            var userRole,role;
            if (adAdmin) {
                return '管理员';
            } else {
                role = adAgent ? adAgent : adAdvertise;
                var userMapping = {
                    '0':'广告主',
                    '2':'广告主',
                    '4':'广告主',
                    '1':'代理商',
                    '6':'代理商',
                    '3':'管理员'
                };
                return userMapping[role];
            }
        })();
        //是否关闭广告计划
        GLOBAL_VAR.adCloseOld =  '';
        GLOBAL_VAR.videoCpvType = "0";
