//图片评论代码
var __submitFlag__ = true;

var comment_img_num = {};


//如果有数据就不再请求服务器了
function updateimg_comment(data){
	list = data['list'];
	var str = setCommentList(list);

	var	key = 'pid'+$("#hide_pic_pid").val();;
	comment_img_num[key]=data['count'];
	str = '<div class="comment_title">本图全部评论（共'+data['count']+'条）</div>'+	str;

	//20140918
	$('#c_newlist').html(str);
	setFloorCommentList();
	setTimeout(function(){
		$('#c_newlist').scrollTop(0);
	},100);
	//

	var $cpbtn=$('#commentpic_btn'), cw1 = $cpbtn.width(),cw2=0, cpbtnl=parseInt($cpbtn.css('left'));
	if(parseInt(data['count']) >0 ) {
		$('#commentpic_btn a').html('评论本图('+data['count']+ ')');
		cw2 = $cpbtn.width();
		if(cw2>cw1) {
			$cpbtn.css('left', (cpbtnl-(cw2-cw1))+'px');
		}
	}
	else{$('#commentpic_btn a').html('评论本图');}
}



