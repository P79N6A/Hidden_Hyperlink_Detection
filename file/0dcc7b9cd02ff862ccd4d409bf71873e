	function search() {
		var searchType = $("#s0").text();
		var searchContent = $("#searchContent").val();

		if((typeof(searchContent) == "undefined") || (searchContent.length==0) || (searchContent == "请输入搜索内容")){
			window.location.href = enCodeUrl("/category/null/null/null/hits/null/1.html");
		}else{
			var _url = enCodeUrl("/navSearch/"
					+ searchType + "/" + searchContent+"/1.html");
			window.location.href = _url;
		}

		
	}
