            url: "/control/UserControl.ashx?action=CheckIsLogin",
            type: "post",
            async: false,
            dataType: "json",
            beforeSend: function () {
                art.dialog({ id: 'dlgWait', title: '系统提示', content: '正在处理中，请等待。。。', icon: 'info' });
                return true;
            },
            success: function (objJSON) {
                art.dialog.list['dlgWait'].close();
                if (objJSON.success) {
                }
                else {
                    window.location.href = "/login.aspx?ReturnUrl=" + window.location.pathname + window.location.search;
                }
            }
        });

        $.ajax({
            url: "/control/UserControl.ashx?action=NewsCommentAdd",
            data: "n_id=" + $("#hidId").val() + "&content=" + $("#txtContent").val(),
            type: "post",
            async: false,
            dataType: "json",
            beforeSend: function () {
                art.dialog({ id: 'dlgWait', title: '系统提示', content: '正在处理中，请等待。。。', icon: 'info' });
                return true;
            },
            success: function (objJSON) {
                art.dialog.list['dlgWait'].close();
                //var objJSON = eval("(" + data + ")");  // change the JSON string to javascript object
                if (objJSON.success) {
                    art.dialog({
                        title: "系统提示", content: objJSON.msg,
                        close: function () {                            
                            $("#ulComment").append(objJSON.id);
                            $("#txtContent").val("");
                        }
                    }).time(2);
                }
                else {
                    art.dialog({
                        title: "系统提示", content: objJSON.msg
                    }).time(3);
                }
            }
        });
    }
</script> 
