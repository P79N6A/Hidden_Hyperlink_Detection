    </div>
  </div>
</script> 
     <script id="j_commentTp" type="text/template">
  <li id="comment_[%= comment.id %]" class="media-blcok j_comment" data-id="[%= comment.id %]" data-depth="[%= comment.depth %]" style="[% if(comment.depth > 0 && index >= 3){ %] display:none; [% } %]">
    <div class="media_left">
      <a href="[%= comment.user_url %]" target="_blank">
        <img src="[%= comment.user_thumb %]" class="img-circle">
      </a>
    </div>
    
    <div class="media_body">  
      <p class="comment_name">
        <a href="[%= comment.user_url %]" target="_blank">
          <strong>[%- comment.user_name %]</strong>
        </a>
        [% if(comment.to_user_name){ %]
          <span class="fa fa-arrow-circle-right"></span>
          <a href="[%= comment.to_user_url %]" target="_blank">
            <small>[%- comment.to_user_name %]</small>
          </a>
        [% } %]
      </p>

      <p class="comment_body">
        [%= comment.body %]
      </p>
      
      <p class="comment_bottom">
        <span>
          [%= comment.created_at %]
        </span>
        <a href="javascript:;" class="j_reply">回复</a>
